@model SipOnayYetkiler
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Sipariş Onay Yetkileri Düzenle
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3 m-l-10" style="line-height:36px;color: #5bc8d2;font-weight:bold;">Hesap Kodu Aralığı</div>
                        <div class="col-md-4 m-l-20 bas-chk"></div>
                        <div class="col-md-4 m-l-20 bit-chk"></div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-md-3 m-l-10" style="line-height:36px;color: #5bc8d2;font-weight:bold;">Kod3 Ortalama Bakiye Aralığı</div>
                        <div class="col-md-4 m-l-20 bas-kod3"></div>
                        <div class="col-md-4 m-l-20 bit-kod3"></div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-md-3 m-l-10" style="line-height:36px;color: #5bc8d2;font-weight:bold;">Risk Aralığı</div>
                        <div class="col-md-4 m-l-20 bas-risk"></div>
                        <div class="col-md-4 m-l-20 bit-risk"></div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-md-3 m-l-10" style="line-height:36px;color: #5bc8d2;font-weight:bold;">Şirketler</div>
                        <div class="col-md-4 m-l-20 bas-sirket"></div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-md-3 m-l-10" style="line-height:36px;color: #5bc8d2;font-weight:bold;">Tip Kodları</div>
                        <div class="col-md-4 m-l-20 bas-tipkod"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var model = @Html.Raw(Json.Encode(Model));
    var sirketlist = model.GosterilecekSirket.split(";");
    if
    var chklist = model.GostCHKKodAlani.split(";");
    var kod3list = model.GostKod3OrtBakiye.split(";");
    var risklist = model.GostRiskDeger.split(";");
    console.log(kod3list);
    console.log(risklist);
    sirketlist.pop();
    var tiplist = model.GostSTKDeger.split(";");
    tiplist.pop();
    DevExpress.ui.dxOverlay.baseZIndex(20000);
    $(".bas-chk").dxTextBox({ value: chklist[0]});
    $(".bit-chk").dxTextBox({ value: chklist[1] });
    tipKod = new Array();
    var sirkets = [{ state: "Tüm" }, { state: "Tümpa" }];
    $(".bas-sirket").dxTagBox({
        dataSource: sirkets,
        placeholder: 'Seçiniz...',
        displayExpr: 'state',
        valueExpr: 'state',
        value: sirketlist,
        onValueChanged: function (e) {

        }
    });
    $(".bas-kod3").dxNumberBox({
        value: 0,
        min: 0
    });
    $(".bit-kod3").dxNumberBox({
        value: 0,
        min: 0
    });
    $(".bas-risk").dxNumberBox({
        value: 0,
        min: 0,
        max: 100
    });
    $(".bit-risk").dxNumberBox({
        value: 0,
        min: 0,
        max: 100
    });
    
    $.ajax({
        url: window.location.origin + "/SiparisYetki/TipKodSelect",
                data: {},
                type: "post",
                success: function (data)
                {
                    var result = JSON.parse(data);
                   
                    jQuery.each(result, function (i, val) {
                        if (val.Tip == 2) {
                            var inputAttr = {};
                            inputAttr["Kod"] = val.Kod;
                            tipKod.push(inputAttr);
                        } 
                    });

                    $(".bas-tipkod").dxTagBox({
                        dataSource: tipKod,
                        placeholder: 'Seçiniz...',
                        displayExpr: 'Kod',
                        valueExpr: 'Kod',
                        value: tiplist,
                        onValueChanged: function (e) {

                        }
                    });
                }
    });

   
   

</script>



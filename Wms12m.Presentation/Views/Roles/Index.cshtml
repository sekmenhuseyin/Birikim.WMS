@model IEnumerable<Role>
@{
    ViewBag.Title = "Roller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Roller</span></li></ul></div>
<h1 class="page-title">Roller</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Roller
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle" href="/Roles/Create"> Yeni </a>
                </div>
            </div>
            <div class="portlet-body form p-40">
                <div class="row">
                    <div class="col-md-offset-3 col-md-5">
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead><tr><th>Ad</th><th></th></tr></thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr><td>@item.RoleName</td><td><a class="btn btn-danger btn-circle" href="/Roles/Delete/@item.RoleName">Sil</a></td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

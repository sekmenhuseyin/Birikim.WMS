@model IEnumerable<Role>
@{
    ViewBag.Title = "Gruplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Gruplar</span></li></ul></div>
<h1 class="page-title">Gruplar</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Gruplar
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Roles/New')"> Yeni </a>
                </div>
            </div>
            <div class="portlet-body form p-40">
                <div class="row">
                    <div class="col-md-offset-1 col-md-10" id="list">
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead><tr><th>Kod</th><th>Ad</th><th></th></tr></thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoleName</td><td>@item.Aciklama</td>
                                        <td>
                                            <a class="btn btn-default input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Roles/Edit/@item.ID')"> Düzenle </a>
                                            <button class="btn btn-danger input-circle" onclick="Delete('@item.RoleName', '/Roles/List', 'list', '0', '/Roles/Delete')">Sil</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<RaporBekleyenSiparis>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Bekleyen Sipariş
            </div>
            <div class="col-md-1 pull-right m-t-5">
                <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal"> Yenile </a>
            </div>
            <div class="col-md-1 pull-right m-t-5">
                <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal"> Export Data </a>
            </div>
            <div class="col-md-1 pull-right m-t-5">
                <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal"> Temizle </a>
            </div>

        </div>

        <div class="portlet-body">

            <div class="row">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th nowrap>Hesap Kodu</th>
                            <th nowrap>Ünvan</th>
                            <th nowrap>Tarih</th>
                            <th nowrap>Evrak No</th>
                            <th nowrap>Bağlantı No</th>
                            <th nowrap>Grup Kodu</th>
                            <th nowrap>Mal Kodu</th>
                            <th nowrap>Mal Adı</th>
                            <th nowrap>Miktar</th>
                            <th nowrap>Birim</th>
                            <th nowrap>Ana Miktar</th>
                            <th nowrap>Ana Birim</th>
                            <th nowrap>Sevkedilen Miktar</th>
                            <th nowrap>Kalan Miktar</th>
                            <th nowrap>Kalan Ana Birim</th>
                            <th nowrap>Net Fiyat</th>
                            <th nowrap>Tutar</th>
                            <th nowrap>Toplam İskonto</th>
                            <th nowrap>KDV</th>
                            <th nowrap>Kalan Birim Miktar</th>
                            <th nowrap>KDVsiz Tutar</th>
                            <th nowrap>KDVli Tutar</th>
                            <th nowrap>Stok Miktar</th>
                            <th nowrap>Stok Birim</th>
                            <th nowrap>Stok Ana Miktar</th>
                            <th nowrap>Stok Ana Birim</th>
                            <th nowrap>Teslim Tarihi</th>
                            <th nowrap>Teslim Tarihi Durum</th>
                            <th nowrap>Satış Temsilcisi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
                        <tr>
                            <td nowrap>@item.Chk</td>
                            <td nowrap>@item.Unvan</td>
                            <td nowrap>@item.Tarih</td>
                            <td nowrap>@item.EvrakNo</td>
                            <td nowrap>@item.GrupKod</td>
                            <td nowrap>@item.MalKodu</td>
                            <td nowrap>@item.MalAdi</td>
                            <td nowrap align="right">@item.Miktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.Birim</td>
                            <td nowrap align="right">@item.AnaMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.AnaBirim</td>
                            <td nowrap align="right">@item.SevkedilenMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap align="right">@item.KalanMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.KalanAnaBirim</td>
                            <td nowrap align="right">@item.NetFiyat2.ToDecimal().ToOnFormat()</td>
                            <td nowrap align="right">@item.Tutar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.ToplamIskonto.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.KDV.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.KalanBirimMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.KalanAnaBirim</td>
                            <td nowrap align="right">@item.KDVSizTutar.ToDecimal().ToOnFormat()</td>
                            <td nowrap align="right">@item.KDVliTutar.ToDecimal().ToOnFormat()</td>
                            <td nowrap align="right">@item.StokMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.StokBirim</td>
                            <td nowrap align="right">@item.StokAnaMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.StokAnaBirim</td>
                            <td nowrap>@item.TeslimTarih</td>
                            <td nowrap>@item.TeslimTarihDurum</td>
                            <td nowrap>@item.SatisTemsilcisi</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
        $('#sample_1').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } });
    });
</script>
@model List<ToplamRiskAnaliziRaporu>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}

<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Gerçekleşen Sevkiyat Planı Raporu
            </div>
            <div class="col-md-1 pull-right m-t-5" style="padding:0;">
                <a class="btn btn-default pull-right input-circle" style="width:100%;" href="#modalEditPage" data-toggle="modal"> Yenile </a>
            </div>
            <div class="col-md-1 pull-right m-t-5" style="padding:0;">
                <a class="btn btn-default pull-right input-circle" style="width:100%;" href="#modalEditPage" data-toggle="modal"> Temizle </a>
            </div>

        </div>

        <div class="portlet-body">

            <div class="row" style="margin-bottom:5px;margin-left:5px;">
                <div class="col-md-6">

                    <div id="buttons"></div>

                </div>
            </div>

            <div class="row">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th nowrap>Hesap Kodu</th>
                            <th nowrap>Unvan</th>
                            <th nowrap>Bakiye</th>
                            <th nowrap>Bekleyen Sipariş Tutarı</th>
                            <th nowrap>Sahsi Çek Riski</th>
                            <th nowrap>Toplam Şahsi Risk</th>
                            <th nowrap>Şahsi Çek Limiti</th>
                            <th nowrap>Müşteri Çek Riski</th>
                            <th nowrap>Toplam Risk</th>
                            <th nowrap>Toplam Çek Riski</th>
                            <th nowrap>Teminat</th>
                            <th nowrap>Satış Temsilcisi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th nowrap colspan="2"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
            {
                            <tr>
                                <td nowrap>@item.HesapKodu</td>
                                <td nowrap>@item.Unvan</td>
                                <td nowrap align="right">@item.Bakiye.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.BekleyenSiparisTutari.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.SahsiCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamSahsiRisk.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.SahsiCekLimiti.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.MusteriCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamRisk.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.Teminat.ToDecimal().ToOnFormat()</td>
                                <td nowrap>@item.SatisTemsilcisi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        "footerCallback": function (row, data, start, end, display) {

                var api = this.api(), data;
                var intVal = function (i) {
                    return Number(i.toString().replace(/\./g, "").replace(",", "."))
                };
                alacaktotal = api
                    .column(2)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                borctotal = api
                    .column(3)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                a = api
                    .column(4)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                aa = api
                    .column(5)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                aaa = api
                    .column(6)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                aaaa = api
                    .column(7)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                aaaaa = api
                    .column(8)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                aaaaaa = api
                    .column(9)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                aaaaaaa = api
                    .column(10)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                $(api.column(2).footer()).html(
                    ondalikBinlik(Math.round(alacaktotal * 100) / 100 ,2)
                );
                $(api.column(3).footer()).html(
                    ondalikBinlik(Math.round(borctotal * 100) / 100 , 2)
                );
                $(api.column(4).footer()).html(
                    ondalikBinlik(Math.round(a * 100) / 100, 2)
                );
                $(api.column(5).footer()).html(
                    ondalikBinlik(Math.round(aa * 100) / 100, 2)
                );
                $(api.column(6).footer()).html(
                    ondalikBinlik(Math.round(aaa * 100) / 100, 2)
                );
                $(api.column(7).footer()).html(
                    ondalikBinlik(Math.round(aaaa * 100) / 100, 2)
                );
                $(api.column(8).footer()).html(
                    ondalikBinlik(Math.round(aaaaa * 100) / 100, 2)
                );
                $(api.column(9).footer()).html(
                    ondalikBinlik(Math.round(aaaaaa * 100) / 100, 2)
                );
                $(api.column(10).footer()).html(
                    ondalikBinlik(Math.round(aaaaaaa * 100) / 100, 2)
                );
            }
        });
        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="glyphicon glyphicon-file">PDF</span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="glyphicon glyphicon-pencil">XLS</span>', "className": 'btn btn-default btn-xs' }
            ]
        }).container().appendTo($('#buttons'));
    });
    //var table123 = $('#sample_1').DataTable();

</script>



@model List<ChartGunlukMDFUretimi>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green-haze"></i>
                    <span class="caption-subject bold uppercase font-green-haze"> Günlük MDF Üretim (En Boy Kalınlık) <span style="color:#8888a7;">3D CHART</span></span>
                </div>
                <div class="col-md-1 m-l-10">
                    <input type="text" class="form-control dateboxbg" id="mdf_tarih" value="@ViewBag.tarih2" />
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control SirketIDn", @onchange = "Reloadn(this.value)" })
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                    <a href="javascript:;" class="reload" onclick="Reloadn('@ViewBag.SirketKodu');"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div id="chart_5_mdf" class="chart" style="height: 400px;"> </div>
            </div>
        </div>
    </div>
</div>
<script>
    if ($('.SirketIDn option').size() == 1) $(".SirketIDn").hide();
    else $(".SirketIDn").val('@ViewBag.SirketKodu');
    function Reloadn(v)
    {
        PartialView("/Home/PartialGunlukMDFUretimi", 'gunluk_mdf_uretim', JSON.stringify({ SirketKodu: v, tarih: @ViewBag.tarih }));
    }
    $(document).ready(function (e) {
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $("#mdf_tarih").datepicker().on("change", function (e) {
            var oaDate = toOADateFromString(e.target.value);
            PartialView("/Home/PartialGunlukMDFUretimi", 'gunluk_mdf_uretim', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', tarih: oaDate }));
        });
        var model = @Html.Raw(Json.Encode(Model));
        var color = ["#FF0F00","#FF6600","#FF9E01","#FCD202","#F8FF01","#B0DE09","#04D215","#0D8ECF","#0D52D1","#2A0CD0","#8A0CCF","#CD0D74","#754DEB","#DDDDDD","#999999","#333333","#000000"];
        for (var i = 0; i < model.length; i++) {
            $.extend(model[i],{
                color: color[i%color.length]
            });
        }
        var ChartsAmchartsb = function () {

            var initChartSample5 = function () {
                var chart = AmCharts.makeChart("chart_5_mdf", {
                    "theme": "light",
                    "type": "serial",
                    "startDuration": 2,
                    "titleRotation":10,
                    "fontFamily": 'Open Sans',
                    "color": '#888',
                    "valueAxes": [{
                        "position": "left",
                        "axisAlpha": 0,
                        "gridAlpha": 0

                    }],
                    "graphs": [{
                        "balloonText": "[[category]]: <b>[[value]]</b>",
                        "colorField": "color",
                        "fillAlphas": 0.85,
                        "lineAlpha": 0.1,
                        "type": "column",
                        "topRadius": 1,
                        "valueField": "Birim1Miktar",
                        "fixedColumnWidth": 40,
                        "labelText": "[[value]]",
                        "labelRotation":315,
                        "color":"grey",
                        "labelOffset":30
                    }],
                    "depth3D": 40,
                    "angle": 30,
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "Mamul",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "axisAlpha": 0,
                        "gridAlpha": 0,
                        "labelRotation": 45

                    },
                    "exportConfig": {
                        "menuTop": "20px",
                        "menuRight": "20px",
                        "menuItems": [{
                            "icon": '/lib/3/images/export.png',
                            "format": 'png'

                        }]
                    }
                }, 0);
                chart.dataProvider = model;
                chart.validateData();
                chart.animateAgain();
                jQuery('.chart_5_chart_input').off().on('input change', function () {
                    var property = jQuery(this).data('property');
                    var target = chart;
                    chart.startDuration = 0;

                    if (property == 'topRadius') {
                        target = chart.graphs[0];
                    }

                    target[property] = this.value;
                    chart.validateNow();
                });

                $('#chart_5_mdf').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }

            return {
                init: function () {
                    initChartSample5();
                }
            };
        }();

        jQuery(document).ready(function () {
            ChartsAmchartsb.init();
        });
    });
</script>
        $(".make-switch-pie").bootstrapSwitch();
        $('.make-switch-pie').bootstrapSwitch('state', tip2);
        $('.make-switch-pie').on('switchChange.bootstrapSwitch', function (event, state) {
            var BekleyenSiparisUrunGrubuMikPie = "/Home/PartialBekleyenSiparisUrunGrubuMiktarPie";
            PartialView(BekleyenSiparisUrunGrubuMikPie, 'bekleyen_siparis_urun_grubu_miktar_pie', JSON.stringify({ miktarTutar:state}));
        });

        var model = @Html.Raw(Json.Encode(Model));
        //$(".cbox_MiktarTutar").dxSwitch({
        //    onText: 'Miktar',
        //    offText: 'Tutar',
        //    value:tip2,
        //    onValueChanged: function(data) {
        //        //$(".cbox_MiktarTutar").dxSwitch("instance").option("value",tip2);

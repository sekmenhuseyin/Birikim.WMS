@model List<ForJson>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green-haze"></i>
                    <span class="caption-subject bold uppercase font-green-haze"> Günlük Çalışma Analizi <span style="color:#8888a7;">3D CHART</span></span>
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("ProjeID", null, htmlAttributes: new { @class = "form-control satirekle8", @onchange = "ReloadGorev8(this.value)" })
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                    <a href="javascript:;" class="reload" onclick="ReloadGorev8('@ViewBag.ID');"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="tblGorevGit">
                    <thead><tr><th>Kaydeden</th><th>Tarih</th><th>Açıklama</th></tr></thead>
                    <tfoot><tr><th></th><th></th><th></th></tr></tfoot>
                    <tfoot><tr><th></th><th></th><th></th></tr></tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function ReloadGorev8(v)
    {
        PartialView('/Home/GorevGit', 'gorev_git', JSON.stringify({ ID: v }));
    }
    $(document).ready(function (e) {
        $(".satirekle8").prepend("<option value=''>Hepsi</option>");
        @if (ViewBag.user == "") { <text>$(".satirekle8")[0].selectedIndex = 0;</text> }
    });
</script>
<script>
    $(document).ready(function (e) {
        var x = '@ViewBag.Tarih'.split("00");
        x=x[0];
        var arr = x.split(".");
        arr[1] = (parseInt(arr[1]) - 1).toString();
        arr[2] = arr[2].substr(0, 4);
        var f_tarih= new Date(arr[2],arr[1],arr[0]);

        var model = @Html.Raw(Json.Encode(Model));
        var color = ["#FF0F00","#FF6600","#FF9E01","#FCD202","#F8FF01","#B0DE09","#04D215","#0D8ECF","#0D52D1","#2A0CD0","#8A0CCF","#CD0D74","#754DEB","#DDDDDD","#999999","#333333","#000000"];
        for (var i = 0; i < model.length; i++) {
            $.extend(model[i],{
                color: color[i%color.length]
            });
        }
        if(model.length==1 && model[0].GenelTutar==null)
        {
            model = @Html.Raw(Json.Encode(null));
        }
        $(".gs_tarih_double_pie").dxDateBox({
            dataType: 'date',
            formatString: 'dd/MM/yyyy',
            value:f_tarih,
            onValueChanged: function (e) {
                var oaDate = Math.ceil((e.value - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                var GunlukSatisDoubleKriterPieUrl = "/Home/PartialGunlukSatisDoubleKriterPie";
                PartialView(GunlukSatisDoubleKriterPieUrl, 'gunluk_satis_double_kriter_pie', JSON.stringify({ kod: kriter_value, islemtip: islemtip_value, tarih: oaDate }));
            }
        });

        var islemtip_value= @ViewBag.IslemTip;
        var kriter_value=@Html.Raw(Json.Encode(ViewBag.Kriter));
        var islemtip = [
{ id: 0, state: "Tümü"},
{ id: 1, state: "İç Piyasa"},
{ id: 2, state: "Dış Piyasa" },
        ];

        $.ajax({
            url: window.location.origin + "/Home/GunlukSatisAnaliziDoubleKriter",
            data: {},
            type: "post",
            success: function (data)
            {
                $(".slct_double-kriter_pie").dxSelectBox({
                    dataSource: $.parseJSON(data),
                    valueExpr: 'Kriter',
                    displayExpr: 'Kriter',
                    value: kriter_value,
                    onValueChanged: function (e) {
                        if(e.value!=kriter_value){
                            kriter_value=e.value;
                            var GunlukSatisDoubleKriterPieUrl = "/Home/PartialGunlukSatisDoubleKriterPie";
                            PartialView(GunlukSatisDoubleKriterPieUrl, 'gunluk_satis_double_kriter_pie', JSON.stringify({ kod: kriter_value, islemtip: islemtip_value, tarih: f_tarih }));
                        }
                    }
                });


            }
        });

        $(".slct_islemtip_pie").dxSelectBox({
            dataSource: islemtip,
            valueExpr: 'id',
            displayExpr: 'state',
            value: islemtip_value,
            onValueChanged: function (e) {
                islemtip_value=e.value;
                var GunlukSatisDoubleKriterPieUrl = "/Home/PartialGunlukSatisDoubleKriterPie";
                PartialView(GunlukSatisDoubleKriterPieUrl, 'gunluk_satis_double_kriter_pie', JSON.stringify({ kod: kriter_value, islemtip: islemtip_value, tarih: f_tarih }));
            }
        });

        var ChartsAmcharts = function () {
            var initChartSample7 = function () {
                var chart = AmCharts.makeChart("chart_5_gunluk_double_pie", {
                    "type": "pie",
                    "theme": "light",

                    "fontFamily": 'Open Sans',

                    "color": '#888',

                    //"dataProvider": [{
                    //    "Unvan": "Lithuania",
                    //    "GenelTutar": 260
                    //}, {
                    //    "Unvan": "Ireland",
                    //    "GenelTutar": 201
                    //}, {
                    //    "Unvan": "Germany",
                    //    "GenelTutar": 65
                    //}, {
                    //    "Unvan": "Australia",
                    //    "GenelTutar": 39
                    //}, {
                    //    "Unvan": "UK",
                    //    "GenelTutar": 19
                    //}, {
                    //    "Unvan": "Latvia",
                    //    "GenelTutar": 10
                    //}],
                    "valueField": "GenelTutar",
                    "titleField": "Unvan",
                    "outlineAlpha": 0.4,
                    "depth3D": 30,
                    "balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>",
                    "colorField": "color",
                    "angle": 30,
                    "exportConfig": {
                        menuItems: [{
                            icon: '/lib/3/images/export.png',
                            format: 'png'
                        }]
                    }
                });
                chart.dataProvider = model;
                chart.validateData();
                chart.animateAgain();
                jQuery('.chart_7_chart_input').off().on('input change', function () {
                    var property = jQuery(this).data('property');
                    var target = chart;
                    var value = Number(this.value);
                    chart.startDuration = 0;

                    if (property == 'innerRadius') {
                        value += "%";
                    }

                    target[property] = value;
                    chart.validateNow();
                });

                $('#chart_5_gunluk_double_pie').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }


            return {
                //main function to initiate the module

                init: function () {
                    initChartSample7();

                }

            };
        }();
        jQuery(document).ready(function () {
            ChartsAmcharts.init();
        });
    });

</script>





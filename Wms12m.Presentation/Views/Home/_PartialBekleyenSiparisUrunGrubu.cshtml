
@model List<ChartBekleyenSiparisUrunGrubu>

<style>
    .bas_tarih .dx-dropdowneditor-icon {
        color: #44b6ae;
    }

        .bas_tarih .dx-dropdowneditor-icon:before {
            color: #44b6ae;
        }

    .bit_tarih .dx-dropdowneditor-icon {
        color: #44b6ae;
    }

        .bit_tarih .dx-dropdowneditor-icon:before {
            color: #44b6ae;
        }
</style>
<div class="col-md-12">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bar-chart font-green-haze"></i>
                <span class="caption-subject bold uppercase font-green-haze"> Bekleyen Sipariş Ürün Grubu <span style="color:#8888a7;">3D PİE CHART</span></span>
            </div>
            <div class="tools" style="float:right;margin-left:20px;">
                <a href="javascript:;" class="collapse"> </a>
                <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                <a href="javascript:;" class="reload"> </a>
                <a href="javascript:;" class="fullscreen"> </a>
                <a href="javascript:;" class="remove"> </a>
            </div>
            <div style="float:right;margin-left:20px;"><div style="float:left;line-height:36px;"> <span style="color:#0c09de;">Bitiş Tarihi</span></div> <div class="bit_tarih" style="float:left;width:200px; margin-left:10px;"></div></div>
            <div style="float:right;"><div style="float:left;line-height:36px;"> <span style="color:#0c09de;">Başlangıç Tarihi </span></div> <div class="bas_tarih" style="float:left;width:200px; margin-left:10px;"></div></div>
        </div>
        <div class="portlet-body">
            <div id="chart_7_eski" class="chart" style="height: 400px;"> </div>
            <div class="well margin-top-20">
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function (e) {

        var x = '@ViewBag.BasTarih'.split("00");
        x=x[0];
        var arr = x.split(".");
        arr[1] = (parseInt(arr[1]) - 1).toString();
        arr[2] = arr[2].substr(0, 4);
        var f_tarih= new Date(arr[2],arr[1],arr[0]);


        var xx = '@ViewBag.BitTarih'.split("00");
        xx=xx[0];
        var arr2 = xx.split(".");
        arr2[1] = (parseInt(arr2[1]) - 1).toString();
        arr2[2] = arr2[2].substr(0, 4);
        var f_tarih2= new Date(arr2[2],arr2[1],arr2[0]);

        var xx = '@ViewBag.BitTarih'.substr(0, 10);
        var arr2 = xx.split(".");
        arr2[1] = (parseInt(arr2[1]) - 1).toString();
        var f_tarih2= new Date(arr2[2],arr2[1],arr2[0]);
        var model = @Html.Raw(Json.Encode(Model));

        var color = ["#FF0F00","#FF6600","#FF9E01","#FCD202","#F8FF01","#B0DE09","#04D215","#0D8ECF","#0D52D1","#2A0CD0","#8A0CCF","#CD0D74","#754DEB","#DDDDDD","#999999","#333333","#000000"];
        for (var i = 0; i < model.length; i++) {
            $.extend(model[i],{
                color: color[i%color.length]
            });
        }

        $(".bas_tarih").dxDateBox({
            dataType: 'date',
            formatString: 'dd/MM/yyyy',
            value:f_tarih,
            onValueChanged: function (e) {
                var oaDate = Math.ceil((e.value - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                var BekSipUrunGrubuUrl = "/Home/PartialBekleyenSiparisUrunGrubu";
                var bitTarih = Math.ceil(($(".bit_tarih").dxDateBox("instance").option("value") - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                PartialView(BekSipUrunGrubuUrl, 'bekleyen_siparis_urun_grubu', JSON.stringify({ bastarih: oaDate, bittarih:bitTarih, chk:'33' }));
            }
        });

        $(".bit_tarih").dxDateBox({
            dataType: 'date',
            formatString: 'dd/MM/yyyy',
            value:f_tarih2,
            onValueChanged: function (e) {
                var oaDate = Math.ceil((e.value - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                var BekSipUrunGrubuUrl = "/Home/PartialBekleyenSiparisUrunGrubu";
                var basTarih = Math.ceil(($(".bas_tarih").dxDateBox("instance").option("value") - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                PartialView(BekSipUrunGrubuUrl, 'bekleyen_siparis_urun_grubu', JSON.stringify({ bastarih: basTarih, bittarih:oaDate, chk:'33' }));
            }
        });
        var ChartsAmchartsEski = function () {

            var initChartSample7Eski = function () {
                var chart = AmCharts.makeChart("chart_7_eski", {
                    "theme": "light",
                    "type": "serial",
                    "startDuration": 2,

                    "fontFamily": 'Open Sans',

                    "color": '#888',

                    //"dataProvider": list,
                    "valueAxes": [{
                        "position": "left",
                        "axisAlpha": 0,
                        "gridAlpha": 0

                    }],
                    "graphs": [{
                        "balloonText": "[[category]]: <b>[[value]]</b>",
                        "colorField": "color",
                        "fillAlphas": 0.85,
                        "lineAlpha": 0.1,
                        "type": "column",
                        "topRadius": 1,
                        "valueField": "KalanMiktar",
                        "fixedColumnWidth": 40,
                        "labelText": "[[value]]",
                        "labelRotation":315,
                        "color":"grey",
                        "labelOffset":30
                    }],
                    "depth3D": 40,
                    "angle": 30,
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "GrupKod",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "axisAlpha": 0,
                        "gridAlpha": 0,
                        "labelRotation": 45

                    },
                    "exportConfig": {
                        "menuTop": "20px",
                        "menuRight": "20px",
                        "menuItems": [{
                            "icon": '/lib/3/images/export.png',
                            "format": 'png'

                        }]
                    }
                }, 0);
                chart.dataProvider = model;
                chart.validateData();
                chart.animateAgain();
                jQuery('.chart_7_chart_input').off().on('input change', function () {
                    var property = jQuery(this).data('property');
                    var target = chart;
                    chart.startDuration = 0;

                    if (property == 'topRadius') {
                        target = chart.graphs[0];
                    }

                    target[property] = this.value;
                    chart.validateNow();
                });

                $('#chart_7_eski').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }

            return {
                init: function () {
                    initChartSample7Eski();
                }
            };
        }();

        jQuery(document).ready(function () {
            ChartsAmchartsEski.init();
        });
    });

</script>


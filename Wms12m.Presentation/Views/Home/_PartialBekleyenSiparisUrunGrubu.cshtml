@model List<ChartBekleyenSiparisUrunGrubu>
<style>
    .bas_tarih .dx-dropdowneditor-icon {color: #44b6ae;}
    .bas_tarih .dx-dropdowneditor-icon:before {color: #44b6ae;}
    .bit_tarih .dx-dropdowneditor-icon {color: #44b6ae;}
    .bit_tarih .dx-dropdowneditor-icon:before {color: #44b6ae;}
</style>
<div class="row">
    <div class="col-md-12 m-t-40">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green-haze"></i>
                    <span class="caption-subject bold uppercase font-green-haze"> Bekleyen Sipariş Ürün Grubu <span style="color:#8888a7;">3D PİE CHART</span></span>
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control SirketIDg", @onchange = "Reloadg(this.value)" })
                </div>
                <div class="col-md-2 bit_tarih"></div>
                <div class="col-md-2 bas_tarih"></div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                    <a href="javascript:;" class="reload" onclick="Reloadg('@ViewBag.SirketKodu');"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div id="chart_7_eski" class="chart" style="height: 400px;"> </div>
                <div class="well margin-top-20">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var trh1 = '@ViewBag.BasTarih2'.split(".");
    trh1[1] = (parseInt(trh1[1]) - 1).toString();
    trh1[2] = trh1[2].substr(0, 4);
    var bas_tarih = new Date(trh1[2], trh1[1], trh1[0]);
    var trh2 = '@ViewBag.BitTarih2'.split(".");
    trh2[1] = (parseInt(trh2[1]) - 1).toString();
    trh2[2] = trh2[2].substr(0, 4);
    var bit_tarih = new Date(trh2[2], trh2[1], trh2[0]);
    if ($('.SirketIDg option').size() == 1) $(".SirketIDg").hide();
    else $(".SirketIDg").val('@ViewBag.SirketKodu');
    function Reloadg(v)
    {
        PartialView("/Home/PartialBekleyenSiparisUrunGrubu", 'bekleyen_siparis_urun_grubu', JSON.stringify({ SirketKodu: v, bastarih: @ViewBag.BasTarih, bittarih: @ViewBag.BitTarih }));
    }
    $(document).ready(function (e) {
        var model = @Html.Raw(Json.Encode(Model));

        var color = ["#FF0F00","#FF6600","#FF9E01","#FCD202","#F8FF01","#B0DE09","#04D215","#0D8ECF","#0D52D1","#2A0CD0","#8A0CCF","#CD0D74","#754DEB","#DDDDDD","#999999","#333333","#000000"];
        for (var i = 0; i < model.length; i++) {
            $.extend(model[i],{
                color: color[i%color.length]
            });
        }

        $(".bas_tarih").dxDateBox({
            dataType: 'date',
            formatString: 'dd.MM.yyyy',
            value: bas_tarih,
            onValueChanged: function (e) {
                var oaDate = Math.ceil((e.value - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                PartialView("/Home/PartialBekleyenSiparisUrunGrubu", 'bekleyen_siparis_urun_grubu', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', bastarih: oaDate, bittarih: @ViewBag.BitTarih }));
            }
        });

        $(".bit_tarih").dxDateBox({
            dataType: 'date',
            formatString: 'dd.MM.yyyy',
            value: bit_tarih,
            onValueChanged: function (e) {
                var oaDate = Math.ceil((e.value - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000));
                PartialView("/Home/PartialBekleyenSiparisUrunGrubu", 'bekleyen_siparis_urun_grubu', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', basTarih: @ViewBag.BasTarih, bittarih: oaDate }));
            }
        });
        var ChartsAmchartsEski = function () {

            var initChartSample7Eski = function () {
                var chart = AmCharts.makeChart("chart_7_eski", {
                    "theme": "light",
                    "type": "serial",
                    "startDuration": 2,

                    "fontFamily": 'Open Sans',

                    "color": '#888',

                    "valueAxes": [{
                        "position": "left",
                        "axisAlpha": 0,
                        "gridAlpha": 0

                    }],
                    "graphs": [{
                        "balloonText": "[[category]]: <b>[[value]]</b>",
                        "colorField": "color",
                        "fillAlphas": 0.85,
                        "lineAlpha": 0.1,
                        "type": "column",
                        "topRadius": 1,
                        "valueField": "KalanMiktar",
                        "fixedColumnWidth": 40,
                        "labelText": "[[value]]",
                        "labelRotation":315,
                        "color":"grey",
                        "labelOffset":30
                    }],
                    "depth3D": 40,
                    "angle": 30,
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "GrupKod",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "axisAlpha": 0,
                        "gridAlpha": 0,
                        "labelRotation": 45

                    },
                    "exportConfig": {
                        "menuTop": "20px",
                        "menuRight": "20px",
                        "menuItems": [{
                            "icon": '/lib/3/images/export.png',
                            "format": 'png'

                        }]
                    }
                }, 0);
                chart.dataProvider = model;
                chart.validateData();
                chart.animateAgain();
                jQuery('.chart_7_chart_input').off().on('input change', function () {
                    var property = jQuery(this).data('property');
                    var target = chart;
                    chart.startDuration = 0;

                    if (property == 'topRadius') {
                        target = chart.graphs[0];
                    }

                    target[property] = this.value;
                    chart.validateNow();
                });

                $('#chart_7_eski').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }

            return {
                init: function () {
                    initChartSample7Eski();
                }
            };
        }();

        jQuery(document).ready(function () {
            ChartsAmchartsEski.init();
        });
    });
</script>
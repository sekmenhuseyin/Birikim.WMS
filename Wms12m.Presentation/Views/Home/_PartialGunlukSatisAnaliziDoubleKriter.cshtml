@model List<ChartGunlukSatisAnalizi>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green-haze"></i>
                    <span class="caption-subject bold uppercase font-green-haze gs-islemtip"> Günlük Satış Analizi GrupKod ve İşlemTip </span><span class="gs-islemtip-d" style="color:#8888a7;font-weight: bold;font-size:16px;">3D CHART</span>
                </div>
                <div class="col-md-1 m-l-10 slct_islemtip"></div>
                <div class="col-md-2 m-l-25 slct_double-kriter"></div>
                <div class="col-md-1 m-l-10">
                    <input type="text" class="form-control dateboxbg" id="gs_tarih_double" value="@ViewBag.tarih2" />
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control SirketID5", @onchange = "Reload5(this.value)" })
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                    <a href="javascript:;" class="reload" onclick="Reload5('@ViewBag.SirketKodu');"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div id="chart_5_gunluk_double" class="chart" style="height: 400px;"> </div>
            </div>
        </div>
    </div>
</div>
<script>
    var islemtip_value = @ViewBag.IslemTip;
    var kriter_value = @Html.Raw(Json.Encode(ViewBag.Kriter));
    var islemtip = [{ id: 0, state: "Tümü"},{ id: 1, state: "İç Piyasa"},{ id: 2, state: "Dış Piyasa" }];
    if ($('.SirketID5 option').size() == 1) $(".SirketID5").hide();
    else $(".SirketID5").val('@ViewBag.SirketKodu');
    function Reload5(v)
    {
        PartialView("/Home/PartialGunlukSatisDoubleKriter", 'gunluk_satis_double_kriter', JSON.stringify({ SirketKodu: v, kod: kriter_value, islemtip: islemtip_value, tarih: @ViewBag.tarih }));
    }
    $(document).ready(function (e) {
         $.datepicker.setDefaults($.datepicker.regional["tr"]);
         $("#gs_tarih_double").datepicker().on("change", function (e) {
            var oaDate = toOADateFromString(e.target.value);
            PartialView("/Home/PartialGunlukSatisDoubleKriter", 'gunluk_satis_double_kriter', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', kod: kriter_value, islemtip: islemtip_value, tarih: oaDate }));
        });
       var model = @Html.Raw(Json.Encode(Model));
        var color = ["#FF0F00","#FF6600","#FF9E01","#FCD202","#F8FF01","#B0DE09","#04D215","#0D8ECF","#0D52D1","#2A0CD0","#8A0CCF","#CD0D74","#754DEB","#DDDDDD","#999999","#333333","#000000"];
        for (var i = 0; i < model.length; i++) {
            $.extend(model[i],{
                color: color[i%color.length]
            });
        }
        if(model.length==1 && model[0].GenelTutar==null)
        {
            model = @Html.Raw(Json.Encode(null));
        }
        $.ajax({
            url: "/Home/GunlukSatisAnaliziKriterSelect",
            data: { SirketKodu: '@ViewBag.SirketKodu'},
            type: "post",
            success: function (data)
            {
                if (data.length < 40) {
                    $(".slct_double-kriter").css("display", "none");
                    $(".gs-islemtip").text("Günlük Satış Analizi İşlemTip ");
                    $(".gs-islemtip-d").text("3D CHART"); 
                }
                $(".slct_double-kriter").dxSelectBox({
                    dataSource: $.parseJSON(data),
                    //width: 85,
                    valueExpr: 'Kriter',
                    displayExpr: 'Kriter',
                    value: kriter_value,
                    onValueChanged: function (e) {
                        if(e.value!=kriter_value){
                            kriter_value=e.value;
                            PartialView("/Home/PartialGunlukSatisDoubleKriter", 'gunluk_satis_double_kriter', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', kod: kriter_value, islemtip: islemtip_value, tarih: @ViewBag.tarih }));
                        }
                    }
                });
            }
        });
        $(".slct_islemtip").dxSelectBox({
            dataSource: islemtip,
            width: 85,
            valueExpr: 'id',
            displayExpr: 'state',
            value: islemtip_value,
            onValueChanged: function (e) {
                islemtip_value=e.value;
                PartialView("/Home/PartialGunlukSatisDoubleKriter", 'gunluk_satis_double_kriter', JSON.stringify({ SirketKodu: '@ViewBag.SirketKodu', kod: kriter_value, islemtip: islemtip_value, tarih: @ViewBag.tarih }));
            }
        });
        var ChartsAmchartse = function () {
            var initChartSample5 = function () {
                var chart = AmCharts.makeChart("chart_5_gunluk_double", {
                    "theme": "light",
                    "type": "serial",
                    "startDuration": 2,
                    "titleRotation":10,
                    "fontFamily": 'Open Sans',
                    "color": '#888',

                    "valueAxes": [{
                        "position": "left",
                        "axisAlpha": 0,
                        "gridAlpha": 0

                    }],
                    "graphs": [{
                        "balloonText": "[[category]]: <b>[[value]]</b>",
                        "colorField": "color",
                        "fillAlphas": 0.85,
                        "lineAlpha": 0.1,
                        "type": "column",
                        "topRadius": 1,
                        "valueField": "GenelTutar",
                        "fixedColumnWidth": 40,
                        "labelText": "[[value]]",
                        "labelRotation":315,
                        "color":"grey",
                        "labelOffset":30
                    }],
                    "depth3D": 40,
                    "angle": 30,
                    "chartCursor": {
                        "categoryBalloonEnabled": false,
                        "cursorAlpha": 0,
                        "zoomable": false
                    },
                    "categoryField": "Unvan",
                    "categoryAxis": {
                        "gridPosition": "start",
                        "axisAlpha": 0,
                        "gridAlpha": 0,
                        "labelRotation": 45

                    },
                    "exportConfig": {
                        "menuTop": "20px",
                        "menuRight": "20px",
                        "menuItems": [{
                            "icon": '/lib/3/images/export.png',
                            "format": 'png'

                        }]
                    }
                }, 0);
                chart.dataProvider = model;
                chart.validateData();
                chart.animateAgain();
                jQuery('#gunluk_satis_double_kriter').off().on('input change', function () {
                    var property = jQuery(this).data('property');
                    var target = chart;
                    chart.startDuration = 0;

                    if (property == 'topRadius') {
                        target = chart.graphs[0];
                    }

                    target[property] = this.value;
                    chart.validateNow();
                });

                $('#gunluk_satis_double_kriter').closest('.portlet').find('.fullscreen').click(function () {
                    chart.invalidateSize();
                });
            }

            return {
                init: function () {
                    initChartSample5();
                }
            };
        }();

        jQuery(document).ready(function () {
            if (model != null) ChartsAmchartse.init();
        });
    });
</script>
@model IEnumerable<GetRolePermsFor_Result>
@{
	ViewBag.Title = "Yetki " + (Model == null ? "Ekle" : "Düzenle");
	Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/Perms">Yetki</a><i class="fa fa-circle"></i></li><li><span>@ViewBag.title</span></li></ul></div>
<h1 class="page-title">Yetki @ViewBag.title</h1>
<div class="row">
	<div class="col-md-12">
		<div class="portlet box green m-t-30">
			<div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Yetki @ViewBag.title</div></div>
			<div class="portlet-body form p-30">
				<div class="row">
					<div class=" col-md-offset-2 col-md-4">
						@Html.DropDownList("RoleName", null, htmlAttributes: new { @class = "form-control" })
						<table class="table table-striped">
							<thead><tr><th>Yetki Adı</th><th>Okuma</th><th>Yazma</th><th>Değiştirme</th><th>Silme</th></tr></thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><input class="form-control input-circle" id="PermName" name="PermName" type="text" readonly value="@item.PermName"></td>
										<td><input class="check-box form-control" id="Reading" name="Reading" type="checkbox" value="@item.Reading"></td>
										<td><input class="check-box form-control" id="Writing" name="Writing" type="checkbox" value="@item.Writing"></td>
										<td><input class="check-box form-control" id="Updating" name="Updating" type="checkbox" value="@item.Updating"></td>
										<td><input class="check-box form-control" id="Deleting" name="Deleting" type="checkbox" value="@item.Deleting"></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="form-group m-t-40">
							<div class="col-md-4">
								<button class="btn btn-default btn-block" onclick="window.history.back();"><<< Geri</button>
							</div>
							<div class="col-md-offset-2 col-md-6">
								<input type="submit" value="Kaydet" class="btn btn-default btn-block btn-primary" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
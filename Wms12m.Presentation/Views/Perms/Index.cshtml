@model IEnumerable<RolePerm>
@{
    ViewBag.Title = "Yetkiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Yetkiler</span></li></ul></div>
<h1 class="page-title">Yetkiler</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Yetkiler
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-2" for="RoleName">Grup İsmi</label>
                            <div class="col-md-10">
                                @Html.DropDownList("RoleName", null, htmlAttributes: new { @class = "form-control", @onchange = "FuncSearchBtn();" })
                            </div>
                        </div>
                        <div id="theGrid" class="p-40"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    function FuncSearchBtn() {
        $('#theGrid').html("");
        PartialView("/Perms/List", 'theGrid', JSON.stringify({ Id: $("#RoleName").val() }));
    }
</script>}
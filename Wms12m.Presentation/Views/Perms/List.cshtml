@model IEnumerable<GetRolePermsFor_Result>
@{
	int i = 0;
}<div class="row">
	<div class="col-md-6 col-md-offset-2 bold">Yetki Adı</div><div class="col-md-1 text-center bold">Okuma</div><div class="col-md-1 text-center bold">Yazma</div><div class="col-md-1 text-center bold">Silme</div>
</div>
<div class="row m-t-10">
	@foreach (var item in Model)
	{
		using (Ajax.BeginForm("Save", "Perms", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, OnSuccess = "finished();", OnFailure = "finished();" }, new { @class = "form-horizontal", id = "frm" + i }))
		{
			@Html.AntiForgeryToken()
            <input name="ID" type="hidden" value="@item.ID" />
			<input name="Updating" type="hidden" />
			<input name="RoleName" class="RoleName" type="hidden" value="@ViewBag.RoleName" required />
			<div class="col-md-6 col-md-offset-2"><input class="form-control" name="PermName" type="text" readonly value="@item.PermName" required></div>
			<div class="col-md-1"><input class="check-box form-control" name="Reading" type="checkbox"@{if(item.Reading==true){<text> checked="checked"</text>}}></div>
			<div class="col-md-1"><input class="check-box form-control" name="Writing" type="checkbox"@{if(item.Writing == true){<text> checked="checked"</text>}}></div>
			<div class="col-md-1"><input class="check-box form-control" name="Deleting" type="checkbox"@{if(item.Deleting == true){<text> checked="checked"</text>}}></div>}
		i++;
	}
</div>
<div class="row m-t-30">
	<div class="col-md-offset-7 col-md-4">
		<button class="btn btn-primary btn-block" onclick="submit()">Kaydet</button>
	</div>
</div>
<script>
	var biten = 0;
	function submit()
	{
		@for (int j = 0; j < i; j++)
		{
			<text>$("#frm@{@j}").submit();</text>
		}
	}
	function finished()
	{
		biten++;
		if (biten == @i)
			FuncSearchBtn();
	}
</script>
@model IEnumerable<Transfer>
@{
    ViewBag.Title = "Transfer Onaylama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="@Url.Content("~/Content/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Transfer Onaylama</span></li></ul></div>
<h1 class="page-title">Depolar Arası Transfer Onaylama</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Depolar Arası Transfer Onaylama
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <table class="table">
                            <tr>
                                <th>SirketKod</th>
                                <th>Giriş Depo</th>
                                <th>Ara Depo</th>
                                <th>Çıkı Depo</th>
                                <th>Malzemeler</th>
                                <th>Onay</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SirketKod</td>
                                    <td>@item.GirisDepoID</td>
                                    <td>@item.AraDepoID</td>
                                    <td>@item.CikisDepoID</td>
                                    <td>@item.Malzemeler</td>
                                    <td>@item.Onay</td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
    function FuncSearchBtn() {
        var Type = $("input[type='radio'][name='Locked']:checked").val();
        var StoreId = $("#DepoID option:selected").val(); if (StoreId == null) StoreId = 0;
        var CorridorId = $("#KoridorID option:selected").val(); if (CorridorId == null) CorridorId = 0;
        var ShelfId = $("#RafID option:selected").val(); if (ShelfId == null) ShelfId = 0;
        $('#Grid').html("");
        PartialView('/Stock/List', 'Grid', JSON.stringify({ Id: (StoreId + "#" + CorridorId + "#" + ShelfId) }));
    }
</script>
}
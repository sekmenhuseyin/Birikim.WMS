@{
    ViewBag.Title = "Transfer Planlama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Transfer Planlama</span></li></ul></div>
<h1 class="page-title">Depolar Arası Transfer Planlama</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Depolar Arası Transfer Planlama
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Summary", "Transfer", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Şirket</label>
                            <div class="col-md-4">
                                @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="SirketID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Çıkış Depo</label>
                            <div class="col-md-4">
                                @Html.DropDownList("CikisDepo", null, htmlAttributes: new { @class = "form-control input-circle DepoID", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ara Depo</label>
                            <div class="col-md-4">
                                @Html.DropDownList("AraDepo", null, htmlAttributes: new { @class = "form-control input-circle DepoID", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Giriş Depo</label>
                            <div class="col-md-4">
                                @Html.DropDownList("GirisDepo", null, htmlAttributes: new { @class = "form-control input-circle DepoID", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3"><input type="button" class="btn btn-primary btn-block input-circle" onclick="FuncSearchBtn()" value="Listele" /></div>
                        </div>
                        <div class="form-group p-l-30 p-r-30" id="liste"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#SirketID").prepend("<option value=''>Seçiniz !!!</option>"); $("#SirketID")[0].selectedIndex = 0;
    $(".DepoID").prepend("<option value=''>Seçiniz !!!</option>"); $(".DepoID")[0].selectedIndex = 0; $(".DepoID")[1].selectedIndex = 0; $(".DepoID")[2].selectedIndex = 0;
    function FuncSearchBtn() {
        $('#liste').html("");
        if ($("#GirisDepo").val() == "" || $("#CikisDepo").val() == "") return;
        PartialView('/Transfer/Stock', 'liste', JSON.stringify({ Id: ($("#SirketID").val() + "#" + $("#GirisDepo").val() + "#" + $("#CikisDepo").val()) }));
    }
</script>
}
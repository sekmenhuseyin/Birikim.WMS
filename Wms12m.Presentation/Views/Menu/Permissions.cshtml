@model IEnumerable<GetMenuRoles_Result>
@{
    ViewBag.Title = "Menü Yetkileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0, j = 0;
    List<Role> Roles = ViewBag.Roles;
    string[] roles = new string[Roles.Count()];
    foreach (var item in Roles)
    {
        roles[i] = item.ID.ToString() + ","; i++;
    }
    i = 0;
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Menü Yetkileri</span></li></ul></div>
<h1 class="page-title">Menü Yetkileri</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Menü Yetkileri
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="row clearfix">
                            <div class="col-md-2">&nbsp;</div>
                             @foreach (Role item2 in ViewBag.Roles)
                             {
                                 <div class="col-md-1 text-center w-50 bold">@item2.RoleName</div>
                             }
                        </div>
                        <div class="row m-t-10 m-b-10">
                            <div class="col-md-2">&nbsp;</div>
                            @for (int k = 0; k < Roles.Count(); k++)
                            {
                                <div class="col-md-1 text-center w-50"><button id="allRoles@{@j}" type="button" onclick="checkboxChanger('@j');"><i class="cr-icon fa fa-check"></i></button></div>
                                 j++;
                            }
                        </div>
                        @foreach (var item in Model)
                        {
                            <div class="row">
                                @using (Ajax.BeginForm("Save", "Menu", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace }, new { @class = "form-horizontal", id = "frm"+ i }))
                                {
                                    j = 0;//bu sütunlar için idno
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ID" id="ID@{@i}" value="@item.ID" />
                                    <input type="hidden" name="RoleName" id="RoleName@{@i}" value="@item.RoleName.Replace("'","")" />
                                    <div class="col-md-2"><input style="cursor:pointer;" class="form-control clickable" name="Ad" type="text" readonly value="@item.Ad" onclick="checkboxChanger2('@i')"></div>
                                    foreach (var item2 in Roles)
                                    {
                                        <div class="checkbox col-md-1 text-center w-50">
                                            <label style="font-size: 1.5em">
                                                <input class="roles@{@j} menus@{@i}" name="secs" id="id@{@j}@{@i}" type="checkbox"@{if(item.RoleName.Contains("'"+item2.RoleName+"'")==true){<text> checked</text>}}>
                                                <span class="cr"><i class="cr-icon fa fa-check"></i></span>
                                            </label>
                                        </div>
                                        j++;
                                    }
                                }
                            </div>
                            i++;//bu satırlar için idno
                        }
                        <div class="row m-t-30">
                            <div class="col-md-offset-7 col-md-4">
                                <button class="btn btn-primary btn-block" onclick="submit()">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    var biten = 0; var cars = [@{for (int k = 0; k < roles.Count(); k++){<text>false,</text>}}];
    function submit() {
        @for (int k = 0; k < i; k++){
            <text>var rolenames = "";</text>
            for (int l = 0; l < roles.Count(); l++)
            {
                <text>if ($("#id@{@l}@{@k}").is(":checked")) rolenames += "@Html.Raw(roles[l])";</text>
            }
            <text>$("#RoleName@{@k}").val(rolenames);$("#frm@{@k}").submit(); </text>
        }
        $("#div_loading").show();
    }
	function finished()
	{
		biten++;
        if (biten == @i)
        {
            $("#div_loading").hide();
            Modaldialog('Kaydedildi', 'Başarı', 'Tamam', 'btn-default');
            biten = 0;
        }
	}
    function checkboxChanger(k) {
        cars[k] = cars[k] == true ? false : true;
        $(".roles" + k).prop("checked", cars[k]);
    }
    function checkboxChanger2(k) {
        $(".menus" + k).prop("checked", true);
    }
</script>}
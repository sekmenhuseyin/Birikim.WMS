@model WebMenu
<div class="modal-content">
	<div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="modal-body">@*Project Details Go Here*@
					<h4>@{if (Model == null) { <text>Yeni</text> } else { <text>Düzenle</text> } }</h4>
					@using (Html.BeginForm(Model == null ? "Create" : "Edit", "Menu", FormMethod.Post, new { @class = "form", id = "frmMenu", role = "form" }))
					{
						@Html.AntiForgeryToken()
						@Html.HiddenFor(model => model.ID)
						@Html.HiddenFor(model => model.Sira)
						<div class="form-horizontal">
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							<div class="form-group">
								@Html.LabelFor(model => model.SiteTipiID, "SiteTipiID", htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									@Html.DropDownList("SiteTipiID", null, htmlAttributes: new { @class = "form-control", required = "required" })
									@Html.ValidationMessageFor(model => model.SiteTipiID, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.MenuYeriID, "MenuYeriID", htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									@Html.DropDownList("MenuYeriID", null, htmlAttributes: new { @class = "form-control", required = "required" })
									@Html.ValidationMessageFor(model => model.MenuYeriID, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.Ad, "Ad", htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									@Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									@Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.SimgeID, "SimgeID", htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-1"><i class="" id="divIcon"> </i></div>
								<div class="col-md-9">									
									@Html.DropDownList("SimgeID", null, htmlAttributes: new { @class = "form-control", onchange = "Iconize(this);" })
									@Html.ValidationMessageFor(model => model.SimgeID, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.UstMenuID, "UstMenuID", htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									@Html.DropDownList("UstMenuID", null, htmlAttributes: new { @class = "form-control" })
									@Html.ValidationMessageFor(model => model.UstMenuID, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.Aktif, htmlAttributes: new { @class = "control-label col-md-2" })
								<div class="col-md-10">
									<div class="checkbox">
										@Html.EditorFor(model => model.Aktif)
										@Html.ValidationMessageFor(model => model.Aktif, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-2"><button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button></div>
								<div class="col-md-offset-7 col-md-3"><input type="submit" value="@{if (Model == null) { <text>Oluştur</text> } else { <text>Kaydet</text> } }" class="btn btn-primary btn-block" /></div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
<script>function Iconize(sel) { $("#divIcon").removeClass(); $("#divIcon").addClass(sel.options[sel.selectedIndex].text); }</script>
@{ if (Model == null) { <text><script>$("#SiteTipiID").prepend("<option value=''></option>"); $("#SiteTipiID")[0].selectedIndex = 0; $("#MenuYeriID").prepend("<option value=''></option>"); $("#MenuYeriID")[0].selectedIndex = 0; $("#UstMenuID").prepend("<option value=''></option>"); $("#UstMenuID")[0].selectedIndex = 0; $("#SimgeID").prepend("<option value=''></option>"); $("#SimgeID")[0].selectedIndex = 0;</script></text> } }
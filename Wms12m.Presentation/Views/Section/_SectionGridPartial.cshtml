@model List<Bolum>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th>Bölüm</th>
                <th>Sıra No</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BolumAd</td>
                    <td>@item.SiraNo </td>
                    <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                    <td>
                        <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                        <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Section/SectionGridPartial','SectionGrid','@item.RafID')"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{<div>Kayıt Bulunamadı</div>}
<script>$(document).ready(function () { $('#sample_1').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>
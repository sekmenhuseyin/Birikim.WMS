@model IEnumerable<YetkiDepo_Result>
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">
                    <h4>Depo Yetkileri</h4>
                    @using (Ajax.BeginForm("DepoSet", "Users", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalEditPage" }, new { @class = "form-horizontal" }))
                    {
                         @Html.ValidationSummary(true)
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Depo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })</td>
                                    <td><input type="hidden" name="UserID" value="@ViewBag.ID" /><input type="submit" name="submit" value="Ekle" class="btn btn-primary input-circle" /></td>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DepoAd)</td>
                                        <td><a href="javascript:" class="btn btn-danger input-circle" onclick="Delete('@ViewBag.ID-@item.ID', '/Users/Depo/@ViewBag.ID', 'modalEditPage', '0', '/Users/DepoDelete')">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
               </div>
            </div>
        </div>
    </div>
</div>
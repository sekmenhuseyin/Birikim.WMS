@model IEnumerable<User>
@{
    ViewBag.Title = "Kullanıcı İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Kullanıcı İşlemleri</span></li></ul></div>
<h1 class="page-title">Kullanıcı İşlemleri</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Kullanıcı Listesi
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/New')"> Yeni </a>
                </div>
            </div>
            <div class="portlet-body form p-40">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        @using (Html.BeginForm("Save", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead><tr><th>Kullanıcı Adı</th><th>Ad Soyad</th><th>Aktif</th><th class="col-lg-2"></th></tr></thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Kod)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Aktif)</td>
                                            <td>
                                                <div class="btn-group btn-xs">
                                                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true" aria-expanded="false">İşlemler<i class="icon-arrow-down"></i></button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Perm/@item.ID')">Yetki Ata </a></li>
                                                        <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Pass/@item.ID')"> Şifre Değiştir </a></li>
                                                        <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Edit/@item.ID')"><i class="icon-pencil"></i> Düzenle </a></li>
                                                        <li class="divider"> </li>
                                                        <li><a class="danger" href="javascript:;" onclick="Delete('@item.ID','','theGrid','', '')"><i class="icon-trash"></i> Sil </a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/js/jquery.datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/js/datatables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
    var DeleteFunctionUrl = '@Url.Action("Delete", "Users")';
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "ordering": false,
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
    });
</script>}
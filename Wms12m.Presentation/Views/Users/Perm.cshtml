@model IEnumerable<UserPerm>
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">
                    <h4>Yetkiler</h4>
                    @using (Ajax.BeginForm("SavePerm", "Users", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalEditPage" }, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary(true)
                        <input type="hidden" name="UserName" value="@ViewBag.username" />
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead><tr><th>Yetki</th><th>Okuma</th><th>Yazma</th><th>Değiştirme</th><th>Silme</th><th></th></tr></thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DropDownList("PermName", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })</td>
                                    <td>@Html.EditorFor(model => model.FirstOrDefault().Reading)</td>
                                    <td>@Html.EditorFor(model => model.FirstOrDefault().Writing)</td>
                                    <td>@Html.EditorFor(model => model.FirstOrDefault().Updating)</td>
                                    <td>@Html.EditorFor(model => model.FirstOrDefault().Deleting)</td>
                                    <td><input type="submit" value="Ekle" class="btn btn-primary btn-circle" /></td>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr><td>@item.PermName</td><td>@item.Reading</td><td>@item.Writing</td><td>@item.Updating</td><td>@item.Deleting</td>
                                    <td><a href="javascript:" class="btn btn-danger input-circle" onclick="Delete('@item.PermName#@ViewBag.username', '/Users/Perm/@ViewBag.ID', 'modalEditPage', '0', '/Users/DeletePerm')">Sil</a></td></tr>
                                }
                            </tbody>
                        </table>
                    }
               </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#PermName").prepend("<option value=''>Seçiniz !!!</option>"); $("#PermName")[0].selectedIndex = 0;
</script>
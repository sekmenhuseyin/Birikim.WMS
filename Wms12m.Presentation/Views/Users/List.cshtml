@model IEnumerable<User>
<table class="table table-striped table-bordered table-hover" id="sample_1">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Yetki</th>
            <th>Aktif</th>
            <th class="col-lg-2"></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
    <tfoot class="tf-search">
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Kod</td>
                <td>@item.AdSoyad</td>
                <td>@item.Email</td>
                <td>@item.RoleName</td>
                <td>@if (item.Aktif) { <text>Aktif</text> } else { <text>Pasif</text>; }</td>
                <td>
                    @if (ViewBag.Yetki == true)
                    {<div class="btn-group btn-xs">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true" aria-expanded="false">İşlemler<i class="icon-arrow-down"></i></button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Perm/@item.ID')">Yetki Ata </a></li>
                            @{if(ViewBag.UserID == 1){<li><a href="javascript:" onclick="GetPass(@item.ID)">Şifreyi Göster</a></li>}}
                            <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Pass/@item.ID')"> Şifre Değiştir </a></li>
                            @{if(ViewBag.settings.SiparisOnayParametre == true){<li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/YetkiDuzenle/@item.ID')">Sipariş Onay Parametreleri </a></li>}}
                            <li><a href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Users/Edit/@item.ID')"><i class="icon-pencil"></i> Düzenle </a></li>
                        </ul>
                    </div>}
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    @{if(ViewBag.UserID == 1){<text>
    function GetPass(id)
    {
        $.ajax({
            url: "/Users/GetPass",
            data: { ID: id },
            type: 'POST',
            dataType: "json",
            success: function (data) {
                Modaldialog(data, "Şifre", "Tamam", "btn-default");
            }
        });
    }
    </text>}}
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "dom": 'lBfrtip',
            "buttons": [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
            ]
        });
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "" && title != "Detay" && title != "Hareket")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        $("#sample_1 tfoot input").on('keyup change', function () { table.column($(this).parent().index() + ':visible').search(this.value).draw(); });
    });
</script>
@model IEnumerable<frmSiparistenGelen>
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">@*Project Details Go Here*@
                    <h4>İrsaliye Liste</h4>
                    <table class="table table-striped table-bordered table-hover" id="sample_3">
                        <thead>
                            <tr>
                                <th>Seç</th>
                                <th>@Html.DisplayNameFor(model => model.EvrakNo)</th>
                                <th>@Html.DisplayNameFor(model => model.Tarih)</th>
                                <th>@Html.DisplayNameFor(model => model.MalKodu)</th>
                                <th>@Html.DisplayNameFor(model => model.MalAdi)</th>
                                <th>@Html.DisplayNameFor(model => model.AçıkMiktar)</th>
                                <th>@Html.DisplayNameFor(model => model.Birim)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="cursor:pointer;" onclick="toggle('c-@item.ID')">
                                    <td><input type="checkbox" name="checkboxes" id="c-@item.ID" class="form-control" disabled /></td>
                                    <td>@Html.DisplayFor(modelItem => item.EvrakNo)</td>
                                    <td>@item.Tarih.FromOADateInt()</td>
                                    <td>@Html.DisplayFor(modelItem => item.MalKodu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MalAdi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AçıkMiktar)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12">
                    <button type="button" class="btn btn-danger pull-left" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                    <button type="button" class="btn btn-primary pull-right" data-dismiss="modal" id="submitter">Ekle</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () { $('#sample_3').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });
    function toggle(id) { $("#" + id).attr('checked', !$("#" + id).attr('checked')); }
    $("#submitter").click(function () {
        var sList = "";
        $("#sample_3 input[type=checkbox]").each(function () {
            if (this.checked)
                sList += $(this).attr('id').replace("c-", "") + ",";
        });
        if (sList == "") return;
        $.ajax({
            url: "/Buy/FromSiparis",
            data: { 's': $("#SirketID").val(), 'id':$("#IrsNo").val(), 'ids':sList },
            type: 'POST',
            dataType: "html",
            success: function (data) { if (data != "") $("#StoreGrid").html(data); },
            error: function (data) { Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default"); }
        });
    });
</script>
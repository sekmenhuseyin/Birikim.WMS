@model IEnumerable<IR>
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">@*Project Details Go Here*@
                    <h4>İrsaliye Liste</h4>
                    <table class="table table-striped table-bordered table-hover" id="sample_2">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.SirketKod)</th>
                                <th>@Html.DisplayNameFor(model => model.EvrakNo)</th>
                                <th>@Html.DisplayNameFor(model => model.HesapKodu)</th>
                                <th>@Html.DisplayNameFor(model => model.Unvan)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="cursor:pointer;" ondblclick="CopyValues('@item.ID','@item.SirketKod','@item.DepoID','@item.HesapKodu','@item.Unvan','@item.EvrakNo','@item.Tarih.FromOADateInt()')">
                                    <td>@Html.DisplayFor(modelItem => item.SirketKod)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EvrakNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HesapKodu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Unvan)</td>
                                    <td><button class="btn btn-danger input-circle" onclick="Delete('@item.ID', '/Buy/List', 'modalEditPage', '0', '/Buy/Delete1')">Sil</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12">
                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () { $('#sample_2').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });
    function CopyValues(i, s, d, h, u, e, t)
    {
        $("#ID").val(s);
        $("#SirketID").val(s);
        $("#DepoID").val(d);
        $("#HesapKodu").val(h);
        if (u != "") $("#Unvan").val(u);
        $("#EvrakNo").val(e);
        $("#Tarih").val(t);
        $('#modalEditPage').modal('toggle');
        $("#submitForm").click();
    }
</script>
@model  frmIrsaliye
@{
    ViewBag.Title = "İrsaliye";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<h3 class="page-title">İrsaliye</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Evrak Bilgileri
                        </div>
                    </div>
                    <div class="portlet-body form">
                        @using (Ajax.BeginForm("New", "Buy", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "StoreGrid" }, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Şirket</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                        <span class="field-validation-valid" data-valmsg-for="SirketID" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Depo</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                        <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Hesap Kodu</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.HesapKodu, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;" })
                                        <span class="field-validation-valid" data-valmsg-for="HesapKodu" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Unvan</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.Unvan, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;" })
                                        <span class="field-validation-valid" data-valmsg-for="Unvan" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div id="hesapSelect">@{Html.RenderAction("GetHesapCodes");}</div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Evrak No</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.EvrakNo, new { @class = "form-control input-circle", @required = "", @placeholder = "Evrak No", @onfocus = "$('#hesapSelect').hide()" })
                                        <span class="field-validation-valid" data-valmsg-for="EvrakNo" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Tarih</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.Tarih, new { @class = "form-control input-circle", @required = "", @onfocus = "$('#hesapSelect').hide()" })
                                        <span class="field-validation-valid" data-valmsg-for="Tarih" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4 col-md-offset-3">
                                        <button type="submit" class="btn btn-circle green">Ekle</button>
                                        <button type="button" class="btn btn-circle grey-salsa btn-outline" onclick="CreateNew()">Temizle</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Malzeme Bilgileri
                    </div>
                </div>
            </div>
            <div id="StoreGrid" style="padding:8px;"></div>
        </div>
    </div>
</div>
<script src="~/Content/Scripts/_Operation.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
<script>
    $("#Company").prepend("<option value='0'>Seçiniz !!!</option>");
    $("#DepoID").prepend("<option value='0'>Seçiniz !!!</option>");
    CreateNew()
    $("#Tarih").datepicker({ todayBtn: 'true', todayHighlight: 'true', language: 'tr' })
    function ShowHide()
    {
        if ($('#hesapSelect').css("display") == "none")
            $('#hesapSelect').show();
        else
            $('#hesapSelect').hide();
    }
    function CreateNew()
    {
        $('#hesapSelect').hide();
        $("#Company")[0].selectedIndex = 0;
        $("#DepoID")[0].selectedIndex = 0;
        $("#HesapKodu").val('');
        $("#Unvan").val('');
        $("#Tarih").val('@DateTime.Now.ToShortDateString()');
        $("#StoreGrid").html('');
    }
</script>


@model  frmIrsaliye
@{
    ViewBag.Title = "İrsaliye";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css" rel="stylesheet" />
<style>
    #frmUpload input{display:none;}/*upload form hide inputs*/
    .bar {height: 18px;background: green;}
</style>
<link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<h3 class="page-title">İrsaliye</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Evrak Bilgileri
                        </div>
                    </div>
                    <div class="portlet-body form">
                        @using (Ajax.BeginForm("New", "Buy", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, OnBegin = "$('#StoreGrid').html();", UpdateTargetId = "StoreGrid" }, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Şirket</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                        <span class="field-validation-valid" data-valmsg-for="SirketID" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Depo</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required"})
                                        <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Hesap Kodu</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.HesapKodu, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;" })
                                        <span class="field-validation-valid" data-valmsg-for="HesapKodu" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Unvan</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.Unvan, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;" })
                                        <span class="field-validation-valid" data-valmsg-for="Unvan" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div id="hesapSelect"></div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Evrak No</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.EvrakNo, new { @class = "form-control input-circle", @required = "", @placeholder = "Evrak No", @onfocus = "$('#hesapSelect').hide()" })
                                        <span class="field-validation-valid" data-valmsg-for="EvrakNo" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                    <div class="col-md-1">
                                        <a class="btn btn-default input-circle green" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Buy/List')"> Liste </a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Tarih</label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(a => a.Tarih, new { @class = "form-control input-circle", @required = "", @onfocus = "$('#hesapSelect').hide()" })
                                        <span class="field-validation-valid" data-valmsg-for="Tarih" data-valmsg-replace="true" style="color:red;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4 col-md-offset-3">
                                        <button type="submit" class="btn btn-circle green">Ekle</button>
                                        <button type="button" class="btn btn-circle grey-salsa btn-outline" onclick="CreateNew()">Temizle</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Malzeme Bilgileri
                    </div>
                    <div class="col-md-1 pull-right">
                        @using (Html.BeginForm("STI", "Upload", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmUpload" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="m-t-10"><a id="linkUpload" class="btn btn-warning btn-block btn-sm">Yükle</a></div>
                            <input id="btnUpload" type="file" name="file" />
                            <div id="progress"><div class="bar" style="width: 0%;"></div></div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <form id="fileupload" action="/Uploads/Irsaliye" method="POST" enctype="multipart/form-data">
                    <!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
                    <div class="row fileupload-buttonbar">
                        <div class="col-lg-7" style="float:right; text-align:right; margin-right:15px;">
                            <!-- The fileinput-button span is used to style the file input field as button -->
                            <span class="btn green fileinput-button">
                                <span> Dosya Seç </span>
                                <input type="file" name="file">
                            </span>
                            <!-- The global file processing state -->
                            <span class="fileupload-process"> </span>
                        </div>
                        <!-- The global progress information -->
                        <div class="col-lg-5 fileupload-progress fade">
                            <!-- The global progress bar -->
                            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar progress-bar-success" style="width:0%;"> </div>
                            </div>
                            <!-- The extended global progress information -->
                            <div class="progress-extended"> &nbsp; </div>
                        </div>
                    </div>
                    <!-- The table listing the files available for upload/download -->
                    <table role="presentation" class="table table-striped clearfix">
                        <tbody class="files"> </tbody>
                    </table>
                </form>
            </div>
            @*<div class="import-content" style="position:relative;height:40px;">
                <div class="btnDosyaImport" style="float:right;text-align:center;line-height:40px; margin-left:10px; background-color:#10b9b9; color:white;height:100%;width:100px;">
                    IMPORT
                </div>
                <div class="import-dosya"  type="file" name="files[]" data-url="\\SQLSERVER\Kullanıcılar$\yazilim4\Desktop" multiple style="float:right;text-align:center;line-height:40px; background-color:#acbfbf; color:#1c53c6;height:100%;width:100px;">
                    
                </div>
            </div>*@
            <div id="StoreGrid" style="padding:8px;"></div>
        </div>
    </div>
</div>
<script src="~/Content/Scripts/_Operation.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/main.js"></script>

<script>


    //$(".import-content").hide();
    var DeleteFunctionUrl = '@Url.Action("Delete", "Buy")';
    $("#SirketID").prepend("<option value='0'>Seçiniz !!!</option>");
    $("#DepoID").prepend("<option value='0'>Seçiniz !!!</option>");
    CreateNew();
    $("#Tarih").datepicker({ todayBtn: 'true', todayHighlight: 'true', language: 'tr' });
    $('#SirketID').on('change', function () {
        $("#hesapSelect").html("");
        $("#HesapKodu").val('');
        $("#Unvan").val('');
        $.ajax({
            url: "/Buy/GetHesapCodes/"+$('#SirketID').val(),
            type: 'POST',
            dataType: "html",
            success: function (data) {
                if (data != "") $("#hesapSelect").html(data);
            }
        });
    });
    function ShowHide()
    {
        if ($('#hesapSelect').css("display") == "none")
            $('#hesapSelect').show();
        else
            $('#hesapSelect').hide();
    }
    function CreateNew()
    {
        $('#hesapSelect').hide();
        $("#SirketID")[0].selectedIndex = 0;
        $("#DepoID")[0].selectedIndex = 0;
        $("#hesapSelect").html("");
        $("#HesapKodu").val('');
        $("#Unvan").val('');
        $("#Tarih").val('@DateTime.Now.ToShortDateString()');
        $("#StoreGrid").html('');
    }
</script>


@model IEnumerable<frmCableSiparis>
@{
    ViewBag.Title = "Kablo Sipariş Planlama - 3. Adım";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] list; list = new string[Model.Count()]; int x = 0; int SiraNo = 0; string evrakSira = "";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/Sell">Kablo Sipariş Planlama</a><i class="fa fa-circle"></i></li><li><span>3. Adım</span></li></ul></div>
<h1 class="page-title">Kablo Sipariş Planlama- 3. Adım</h1>
<div class="row">
    <div class="col-md-12">
        <div class="mt-element-step">
            <div class="row step-line">
                <div class="col-md-2 col-md-offset-1 mt-step-col first done">
                    <div class="mt-step-number bg-white">1</div>
                    <div class="mt-step-title uppercase font-grey-cascade">SİPARİŞ SEÇİMİ</div>
                    <div class="mt-step-content font-grey-cascade">Bir sipariş Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col done">
                    <div class="mt-step-number bg-white">2</div>
                    <div class="mt-step-title uppercase font-grey-cascade">MALZEME SEÇİMİ</div>
                    <div class="mt-step-content font-grey-cascade">Malzemeleri Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col active">
                    <div class="mt-step-number bg-white">3</div>
                    <div class="mt-step-title uppercase font-grey-cascade">SİPARİŞ Detayları</div>
                    <div class="mt-step-content font-grey-cascade">Detaylardan Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col">
                    <div class="mt-step-number bg-white">4</div>
                    <div class="mt-step-title uppercase font-grey-cascade">Toplama Planı</div>
                    <div class="mt-step-content font-grey-cascade">Kontrol</div>
                </div>
                <div class="col-md-2 mt-step-col last">
                    <div class="mt-step-number bg-white">5</div>
                    <div class="mt-step-title uppercase font-grey-cascade">ONAY</div>
                    <div class="mt-step-content font-grey-cascade">Onaylayın</div>
                </div>
            </div>
        </div>
        <div class="portlet box green m-t-30">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Kablo Sipariş Seçimi</div></div>
            <div class="portlet-body form p-30">
                @using (Html.BeginForm("Step4", "Cable", FormMethod.Post, new { id = "frmSiparis", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <table class="table table-striped table-bordered table-condensed" id="sample_2">
                        <thead><tr><td>Sipariş No</td><td>Evrak No</td><td>Mal Kodu</td><td>Mal Adı</td><td>Marka</td><td>Cins</td><td>Kesit</td><td>Renk</td><td>Makara</td><td>Miktar</td><td>Stok</td><td></td><td></td></tr></thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (evrakSira != item.EvrakNo + item.SiraNo.ToString()) { SiraNo++; evrakSira = item.EvrakNo + item.SiraNo.ToString(); }
                                list[x] = item.Miktar.ToString();
                                <tr style="cursor:pointer;" onclick="$(this).toggleClass('selected');">
                                    <td>@SiraNo</td>
                                    <td>@item.EvrakNo</td>
                                    <td>@item.MalKodu</td>
                                    <td>@item.MalAdi</td>
                                    <td>@item.marka</td>
                                    <td>@item.cins</td>
                                    <td>@item.kesit</td>
                                    <td>@item.renk</td>
                                    <td>@item.makara</td>
                                    <td ondblclick="ChangeMiktar(this, '@item.MalKodu', '@item.Miktar', '@x')" align="right">@String.Format("{0:n}", item.Miktar)</td>
                                    <td align="right">@String.Format("{0:n}", item.stok)</td>
                                    <td>@item.SirketID-@item.ROW_ID-@item.id</td>
                                    <td>@x</td>
                                </tr>
                                x++;
                            }
                        </tbody>
                    </table>
                    <div class="row m-t-20">
                        <div class="col-md-2">
                            <button class="btn btn-default btn-block" onclick="window.history.back();"><<< Geri</button>
                        </div>
                        <div class="col-md-1 col-md-offset-7">
                            <button type="button" class="btn btn-default m-r-20" id="selector">Hepsini Seç</button>
                        </div>
                        <div class="col-md-2">
                            <input type="hidden" name="DepoID" value="@ViewBag.DepoID" />
                            <input type="hidden" name="EvrakNos" value="@ViewBag.EvrakNos" />
                            <input type="hidden" name="checkboxes" id="checkboxes" value="" />
                            <input type="submit" class="hide hidden" value="submit" name="submit" id="submit" />
                            <input type="button" class="btn btn-primary btn-block green submit" value="İleri >>>" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script>
    var selectall = true; var list = [@{for (int i = 0; i < Model.Count(); i++){ if(i>0){<text>,</text>} <text>"</text>@list[i]<text>"</text> }}];
    $(document).ready(function () {
        var table = $('#sample_2').DataTable({
            "ordering": false,
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "columnDefs": [{ "targets": [11,12], "visible": false, "searchable": false }]
        });
        $(".submit").click(function () {
            var selected = ""; var result = false;
            table.rows(".selected").every(function (rowIdx, tableLoop, rowLoop) {
                var miktar = parseFloat(list[this.data()[12]]);
                selected = selected + this.data()[11] + "-" + miktar + "#";
                result = true;
            });
            $("#checkboxes").val(selected);
            if (result == true) $("#submit").click();
        });
        $("#selector").click(function () {
            if (selectall == true) {
                $("#selector").text("Seçimi İptal Et"); selectall = false;
                table.rows({ filter: 'applied' }).every(function (rowIdx, tableLoop, rowLoop) { this.select(); });
            }
            else {
                $("#selector").text("Hepsini Seç"); selectall = true;
                table.rows().every(function (rowIdx, tableLoop, rowLoop) { this.deselect(); });
            }
        });
    });
    function ChangeMiktar(td, mal, miktar, id) {
        var yeni = prompt(mal + " için yeni miktarı giriniz", miktar);
        if (yeni == null || yeni == undefined) return;
        yeni = yeni.replace(",", ".");
        yeni = parseFloat(yeni);
        list[id] = yeni;
        $(td).html(yeni.formatMoney(2));
    }
</script>
}
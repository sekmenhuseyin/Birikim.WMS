@model List<Gorev>
<table class="table table-striped table-bordered" id="sample_1">
    <thead><tr><th>Depo</th><th>Oluşturma Tarihi</th><th>Bitirme Tarihi</th><th></th></tr></thead>
    <tbody id="GorevFrom">
        @foreach (var item in Model)
        {
            <tr data-ID="@item.ID">
                <td>@item.Depo.DepoAd</td>
                <td>@item.OlusturmaTarihi.FromOADateInt()</td>
                <td>@{if (item.BitisTarihi != null) { @item.BitisTarihi.Value.FromOADateInt() } }</td>
                <td>Fark</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers", 
            "ordering": true,
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $('#sample_1 tbody').on('click', 'td.details-control', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            if (row.child.isShown()) { row.child.hide(); tr.removeClass('shown'); }
            else { row.child(newrow(tr.data('id'))).show(); format(tr.data('id')); tr.addClass('shown'); }
        });
    });
</script>
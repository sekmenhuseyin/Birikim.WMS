@{
    ViewBag.Title = "Gorev Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="@Url.Content("~/Content/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<style>
    td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
    tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
</style>
}<h3 class="page-title">Görev İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div id="CreateEdit"></div>
        <div>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Görev Listesi
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="col-sm-3 control-label">Görev Durumu</div>
                                <div class="col-sm-4">
                                    @Html.DropDownList("DurumID", null, htmlAttributes: new { @class = "form-control input-circle", @onchange = "FuncSearchBtn();" })
                                </div>
                                <div class="col-sm-1"><button onclick="FuncSearchBtn();"><i class="fa fa-refresh" aria-hidden="true"></i></button></div>
                            </div>
                        </div>
                    </div>
                    <div id="GorevGrid" class="p-30"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
    FuncSearchBtn();
    function FuncSearchBtn() {
        $('#GorevGrid').html("");
        PartialView('/Tasks/List', 'GorevGrid', JSON.stringify({ Id: $('#DurumID').val() }));
    }
    function newrow(id) { return "<table style='background:transparent;' id='new"+id+"'></table>"; }
    function format(d) {
        var html = "<tr style='background: transparent;'><th>Mal Kodu</th><th>Mal Adı</th><th>Miktar</th><th>Birim</th></tr>";
        $.ajax({
            type: 'POST',
            url: '/Tasks/Details',
            data: { "ID": d },
            dataType: "html",
            success: function (data) {
               $('#new' + d).html(data);
            }
        });
    }
    var GorevGridUrl = '@Url.Action("GorevGridPartial", "Tasks")';
    var GorevDetailUrl = '@Url.Action("GorevDetailPartial", "Tasks")';
    var DeleteFunctionUrl = '@Url.Action("Delete", "Tasks")';
    function CreateEdit(Id) {
        PartialView(GorevDetailUrl, 'CreateEdit', JSON.stringify({ Id: Id == null ? '' : Id }));
        $("#CreateEdit").show();
    }
    function DuzenleIptal() {
        $('#CreateEdit').html('');
        $("#CreateEdit").hide();
    }
</script>
}
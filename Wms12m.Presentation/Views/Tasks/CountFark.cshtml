@model IEnumerable<frmSiparisMalzemeDetay>
@{
    ViewBag.Title = "Kontrollü Sayım Farkı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<style>
    td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
    tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
</style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/Tasks">Görev Listesi</a><i class="fa fa-circle"></i></li><li><a href="/Tasks/Sayim">Kontrollü Sayım</a><i class="fa fa-circle"></i></li><li><span>Fark</span></li></ul></div>
<h1 class="page-title">Kontrollü Sayım Farkı</h1>
<div class="row">
    <div class="col-md-12">
        <div id="CreateEdit"></div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Kontrollü Sayım Farkı
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <table class="table table-striped table-bordered" id="sample_1">
                            <thead><tr><th>MalKodu</th><th>MalAdi</th><th align="right">Miktar</th><th align="right">Stok</th><th align="right">Fark</th><th>Birim</th><th></th></tr></thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MalKodu</td>
                                        <td>@item.MalAdi</td>
                                        <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                                        <td align="right">@String.Format("{0:n}", item.Stok)</td>
                                        <td align="right">@String.Format("{0:n}", item.Miktar - item.Stok)</td>
                                        <td>@item.Birim</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                            @Html.ActionLink("Ignore", "Ignore", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
    });
</script>
}
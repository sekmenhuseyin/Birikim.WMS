@model IEnumerable<frmSiparisMalzemeDetay>
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">
                <h4>Fark</h4>
                <table class="table table-striped table-bordered" id="sample_1">
                    <thead><tr><th>MalKodu</th><th>MalAdi</th><th align="right">Miktar</th><th align="right">Stok</th><th align="right">Fark</th><th>Birim</th><th></th></tr></thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MalKodu</td>
                                <td>@item.MalAdi</td>
                                <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                                <td align="right">@String.Format("{0:n}", item.Stok)</td>
                                <td align="right">@String.Format("{0:n}", item.Miktar - item.Stok)</td>
                                <td>@item.Birim</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                    @Html.ActionLink("Ignore", "Ignore", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
    });
</script>

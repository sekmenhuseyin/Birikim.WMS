@model Gorev
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">@*Project Details Go Here*@
                    <h4>Görevli Ata</h4>
                    @using (Ajax.BeginForm("GorevliKaydet", "Tasks", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, OnSuccess = "FuncSearchBtn()", OnFailure = "Modaldialog('Lütfen Tekrar Deneyin', 'Hata', 'Tamam', 'btn-danger');" }, new { @class = "form-horizontal", id = "frmNew" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Gorevli, "Görevli", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Gorevli", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Gorevli, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                                <button type="button" class="btn btn-primary pull-right" id="submitter">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#Gorevli").prepend("<option value=''>Seçiniz !!!</option>"); @if (Model.Gorevli == null) { <text>$("#Gorevli")[0].selectedIndex = 0;</text>}
    $("#submitter").click(function () {
        $("#frmNew").submit();
        $('#modalEditPage').modal('toggle');
    });
</script>
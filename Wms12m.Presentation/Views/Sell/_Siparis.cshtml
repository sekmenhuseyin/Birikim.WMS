@model IEnumerable<frmSiparisler>
<table class="table table-striped table-bordered table-condensed table-hover" id="sample_2" width="250">
    <thead>
        <tr>
            <th>seç</th>
            <th>Evrak No</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" onclick="toggle('c-@item.EvrakNo')">
                <td width="20"><input type="checkbox" name="cb" id="c-@item.EvrakNo" class="form-control" disabled /></td>
                <td>@Html.DisplayFor(modelItem => item.EvrakNo)</td>
                <td>@item.Tarih.FromOADateInt()</td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <input type="hidden" name="checkboxes" id="checkboxes" value="" />
        <input type="submit" class="btn btn-primary btn-block green" value="Seç >>>" />
    </div>
</div>
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script>
    var selected = "";
    $(document).ready(function () { $('#sample_2').DataTable(); });
    function toggle(id) {
        $("#" + id).attr('checked', !$("#" + id).attr('checked'));
        if ($("#" + id).attr('checked')) selected = selected + id + ",";
        else selected = selected.replace(id + ",", "");
        $("#checkboxes").val(selected.replace("c-", ""));
    }
</script>
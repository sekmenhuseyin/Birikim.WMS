@{
    ViewBag.Title = "Sipariş Planlama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="@Url.Content("~/Content/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<style>
    td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
    tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
</style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Sipariş Planlama</span></li></ul></div>
<h1 class="page-title">Sipariş Planlama</h1>
<div class="row">
    <div class="col-md-12">
        <div class="mt-element-step">
            <div class="row step-line">
                <div class="col-md-2 col-md-offset-1 mt-step-col first active">
                    <div class="mt-step-number bg-white">1</div>
                    <div class="mt-step-title uppercase font-grey-cascade">SİPARİŞ SEÇİMİ</div>
                    <div class="mt-step-content font-grey-cascade">Bir sipariş Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col">
                    <div class="mt-step-number bg-white">2</div>
                    <div class="mt-step-title uppercase font-grey-cascade">MALZEME SEÇİMİ</div>
                    <div class="mt-step-content font-grey-cascade">Malzemeleri Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col">
                    <div class="mt-step-number bg-white">3</div>
                    <div class="mt-step-title uppercase font-grey-cascade">SİPARİŞ Detayları</div>
                    <div class="mt-step-content font-grey-cascade">Detaylardan Seçin</div>
                </div>
                <div class="col-md-2 mt-step-col">
                    <div class="mt-step-number bg-white">4</div>
                    <div class="mt-step-title uppercase font-grey-cascade">Toplama Planı</div>
                    <div class="mt-step-content font-grey-cascade">Kontrol</div>
                </div>
                <div class="col-md-2 mt-step-col last">
                    <div class="mt-step-number bg-white">5</div>
                    <div class="mt-step-title uppercase font-grey-cascade">ONAY</div>
                    <div class="mt-step-content font-grey-cascade">Onaylayın</div>
                </div>
            </div>
        </div>
        <div class="portlet box green m-t-30">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Sipariş Seçimi</div></div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Step2", "Sell", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Depo</label>
                            <div class="col-md-4">
                                @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "FuncSearchBtn()" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                            <div class="col-sm-1"><button type="button" class="btn" onclick="FuncSearchBtn();"><i class="fa fa-refresh" aria-hidden="true"></i></button></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Başlangıç Tarihi</label>
                            <div class="col-md-4">
                                <input type="text" name="Starts" id="Starts" class="form-control input-circle daters" value="@DateTime.Today.AddDays(-7).ToString("dd.MM.yyyy")" onchange = "FuncSearchBtn()" />
                                <span class="field-validation-valid" data-valmsg-for="Starts" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Bitiş Tarihi</label>
                            <div class="col-md-4">
                                <input type="text" name="Ends" id="Ends" class="form-control input-circle daters" value="@DateTime.Today.ToString("dd.MM.yyyy")" onchange="FuncSearchBtn()" />
                                <span class="field-validation-valid" data-valmsg-for="Ends" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group p-l-30 p-r-30" id="liste"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-ui/datepicker-tr.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script>
    var selected = "";
    $("#DepoID").prepend("<option value='0'>Seçiniz !!!</option>"); $("#DepoID")[0].selectedIndex = 0;
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $(".daters").datepicker();
    });
    function FuncSearchBtn() {
        $("#liste").html("");
        if ($('#DepoID').val() == 0 || $('#Starts').val() == "" || $('#Ends').val() == "") return;
        $.ajax({
            type: 'POST',
            url: "/Sell/GetSiparis/",
            data: { DepoID: $('#DepoID').val(), Starts: $("#Starts").val(), Ends: $("#Ends").val() },
            dataType: "html",
            success: function (data) {
                if (data == "") { Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default"); $('#DepoID').val(0); }
                $("#liste").html(data);
            },
            error: function (data) {
                Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default");
                $('#DepoID').val(0);
            }
        });
    }
</script>
}
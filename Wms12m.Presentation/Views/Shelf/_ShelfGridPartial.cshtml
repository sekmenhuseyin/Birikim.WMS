@model List<Store03>
@if (((List<Store03>)Model).Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th> Raf</th>
                <th> Sıra No</th>
                <th> Tarih </th>
                <th> Durum </th>
                <th> Düzenle </th>
                <th> Sil </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Store03 item in Model)
            {
                <tr>
                    <td>@item.Raf</td>
                    <td>@item.SiraNo </td>
                    <td>@DateTime.FromOADate(item.KayitTarih).ToShortDateString()</td>
                    <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                    <td><a class="edit" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a></td>
                    <td>
                        <a class="edit" href="javascript:;" onclick="Delete('@item.ID','/Shelf/ShelfGridPartial','ShelfGrid','@item.KoridorID')"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Kayıt Bulunamadı
    </div>
}

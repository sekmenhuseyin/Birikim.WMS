@{
    ViewBag.Title = "Stok";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/assets/global/plugins/datatables/extensions/Buttons/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/extensions/Buttons/css/buttons.bootstrap.min.css" rel="stylesheet" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Stok</span></li></ul></div>
<h1 class="page-title">Stok</h1>
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Stok
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="col-sm-3 control-label">Depo</div>
                                <div class="col-sm-4">
                                    @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control StoreListi input-circle", @onchange = "getShelf(this.value);" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3 control-label">Raf</div>
                                <div class="col-sm-4">
                                    <select id="RafID" class="form-control input-circle" onchange="getSection(this.value);"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3 control-label">Bölüm</div>
                                <div class="col-sm-4">
                                    <select id="BolumID" class="form-control input-circle" onchange="getFloor(this.value);"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3 control-label">Kat</div>
                                <div class="col-sm-4">
                                    <select id="KatID" class="form-control input-circle" onchange="FuncSearchBtn();"></select>
                                </div>
                            </div>
                            <div id="Grid" class="p-30"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/pdfmake.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/vfs_fonts.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.html5.min.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.print.min.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.colVis.min.js"></script>
<script type="text/javascript">
    $("#DepoID").prepend("<option value=''>Seçiniz !!!</option>"); $("#DepoID")[0].selectedIndex = 0;
    function getShelf(id) {
        $('#Grid').html("");
        $("#RafID option").remove();
        $("#BolumID option").remove();
        $("#KatID option").remove();
        $.ajax({
            url: "/Shelf/ShelfList2/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#RafID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#RafID").prepend("<option value=''>Seçiniz !!!</option>"); $("#RafID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function getSection(id) {
        $('#Grid').html("");
        $("#BolumID option").remove();
        $("#KatID option").remove();
        $.ajax({
            url: "/Section/SectionList/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#BolumID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#BolumID").prepend("<option value=''>Seçiniz !!!</option>"); $("#BolumID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function getFloor(id) {
        $('#Grid').html("");
        $("#KatID option").remove();
        $.ajax({
            url: "/Floor/FloorList/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#KatID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#KatID").prepend("<option value=''>Seçiniz !!!</option>"); $("#KatID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function FuncSearchBtn() {
        $('#Grid').html("");
        PartialView("/Stock/List", 'Grid', JSON.stringify({ Id: ($("#DepoID").val() + "#" + $("#RafID").val() + "#" + $("#KatID").val() + "#false") }));
    }
</script>
}
@model List<TK_DEP>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th> Depo Kodu</th>
                <th> Depo Adı</th>
                <th> Sıra No</th>
                <th> Durum </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepoKodu</td>
                    <td>@item.Depo</td>
                    <td>@item.SiraNo </td>
                    <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                    <td>
                        <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                        <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Storage/StoreGridPartial','StoreGrid','0')"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{<div>Kayıt Bulunamadı</div>}

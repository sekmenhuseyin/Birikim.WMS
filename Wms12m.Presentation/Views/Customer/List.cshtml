@model IEnumerable<Wms12m.Entity.Models.Musteri>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Müşteri Listesi
            </div>
        </div>
        <div class="portlet-body form">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Firma)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unvan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aciklama)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tel1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tel2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MesaiKontrol)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MesaiKota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Kaydeden)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KayitTarih)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Degistiren)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DegisTarih)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Firma)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unvan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aciklama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tel1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tel2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MesaiKontrol)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MesaiKota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kaydeden)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KayitTarih)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Degistiren)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegisTarih)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.ID },new { @class = "btn btn-default" }) |
                            @Html.ActionLink("Detaylar", "Details", new { id = item.ID}, new { @class = "btn btn-default" }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.ID}, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>



         
</body>
<script>$(document).ready(function () { $('#sample_1').DataTable({ "pagingType": "full_numbers", "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>
</html>

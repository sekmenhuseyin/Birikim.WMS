@model IEnumerable<LoginLog>
@{
    ViewBag.Title = "Giriş Kayıtları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/System/Logs">Kayıtlar</a><i class="fa fa-circle"></i></li><li><span>Giriş Kayıtları</span></li></ul></div>
<h1 class="page-title">Giriş Kayıtları</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Giriş Kayıtları</div></div>
            <div class="portlet-body form p-30 p-t-15">
                <table class="table table-striped table-bordered table-hover table-responsive" id="sample_1">
                    <thead>
                        <tr>
                            <th>Kullanıcı<br /><input class="w-50 input-circle" type="text" id="Username" /></th>
                            <th>IP<br /><input class="w-50 input-circle" type="text" id="IP" /></th>
                            <th>Tarih<br /><input class="w-50 input-circle" type="text" id="Tarih" /></th>
                            <th>Başarılı mı</th>
                            <th>Detay</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.IP</td>
                                <td>@item.DateTime</td>
                                <td>@if (item.LoggedIn == true) {<text>Evet</text>}else{<text>Hayır</text>}</td>
                                <td>@item.Comment</td>
                                <td><a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','','','')"> Sil </a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    var DeleteFunctionUrl = '/System/Logs/Delete/Login';
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $("#Username").on("change paste keyup", function () { filterx(0, $("#Username").val()); });
        $("#IP").on("change paste keyup", function () { filterx(1, $("#IP").val()); });
        $("#Tarih").datepicker().on("change", function (e) { filterx(2, e.target.value); });
        var table = $('#sample_1').DataTable({
            "ordering": false,
            "pagingType": "full_numbers",
            "dom": 'lBfrtip',
            "buttons": [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
            ],
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $('td', nRow).attr('nowrap', 'nowrap');
                return nRow;
            }
        });
        function filterx(a, b) { filter(table, a, b); }
    });
</script>}
@model IEnumerable<frmMessages>
@{string guid = ViewBag.guid;}<script>currentUserImage = "@Html.ImageAddressOrDefault(guid)"</script>
@foreach (var item in Model)
{
    <div class="post @if (item.Kod == ViewBag.vUser.UserName) {@("out")} else {@("in")} ">
        <img class="avatar" alt="@item.AdSoyad" src="@Html.ImageOrDefault(item.ID.ToString())">
        <div class="message">
            <span class="arrow"></span>
            <a href="javascript:;" class="name">@item.AdSoyad</a>
            <span class="datetime">@item.Tarih.ToUniversalTime().Humanize()</span>
            <span class="body">@item.Mesaj</span>
        </div>
    </div>
}

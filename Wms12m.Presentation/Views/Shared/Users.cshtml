@model IEnumerable<frmChatUser>
<ul class="media-list list-items">
    <li class="media">
        <input type="hidden" value="" />
        <img class="media-object" src="@Html.ImageOrDefault("")" alt="Herkes">
        <div class="media-body">
            <h4 class="media-heading">Herkes</h4>
        </div>
    </li>
    @foreach (var item in Model)
    {
        <li class="media">
            <input type="hidden" value="@item.Kod" />
            <div class="media-status">
                <span class="badge badge-@item.Kod badge-@if (item.Aktif) {@("success")} else {@("danger")}">@if (item.ID > 0) {@item.ID} else {@("  ")}</span>
            </div>
            <img class="media-object" src="@Html.ImageOrDefault(item.Guid.ToString())" alt="@item.AdSoyad">
            <div class="media-body">
                <h4 class="media-heading">@item.AdSoyad</h4>
                <div class="media-heading-sub">@item.RoleName</div>
            </div>
        </li>
    }
</ul>

@{
    ViewBag.Title = "BekleyenSiparis";
}

<style>
    .dx-datagrid-headers .dx-row {
        color: white;
        border-bottom: 1px solid #D2D2D2;
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1e5799), color-stop(50%,#2989d8), color-stop(51%,#207cca), color-stop(100%,#7db9e8)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%); /* IE10+ */
        background: linear-gradient(to bottom, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%); /* W3C */
    }

    .dx-datagrid .dx-column-indicators .dx-sort.dx-header-filter:after, .dx-datagrid .dx-column-indicators .dx-header-filter.dx-header-filter:before {
        color: white;
    }
</style>
<div class="row control-content">
    <div style="float:left;padding:15px;">
        <table>

            <tr style="padding:15px;">
                <td style="width:120px;"><span></span></td>
                <td style="width:200px;"><div style="width:200px;text-align:center;color:#1e5799;font-weight:bold;">Başlangıç</div></td>
                <td style="width:200px;"><div style="width:200px;text-align:center;color:#1e5799;font-weight:bold;">Bitiş</div></td>
            </tr>
            <tr style="height:10px"><td colspan="6"></td></tr>
            <tr style="padding:15px;">
                <td style="width:120px;"><div style="width:90%;float:left;color:#1e5799;font-weight:bold;">Tarih</div><div style="width:10%;float:left;right:0;color:#1e5799;font-weight:bold;">:</div></td>
                <td style="width:200px;"><div class="tarih-bas-date" style="float:left;width:90%;"></div></td>
                <td style="width:200px;"><div class="tarih-bit-date" style="float:left;width:90%;"></div></td>
            </tr>
            <tr style="height:5px"><td colspan="6"></td></tr>
            <tr style="padding:15px;">
                <td style="width:120px;"><div style="width:90%;float:left;color:#1e5799;font-weight:bold;">Teslim Tarihi</div><div style="width:10%;float:left;right:0;color:#1e5799;font-weight:bold;">:</div></td>
                <td style="width:200px;"><div class="teslim-bas-date" style="float:left;width:90%;"></div></td>
                <td style="width:200px;"><div class="teslim-bit-date" style="float:left;width:90%;"></div></td>
            </tr>
        </table>
    </div>
    <div class="btn-listele" style="float:left;right:20px;margin:15px; color:white; text-align:center; font-weight:bold; background-color:#1e5799; width:100px;height:40px;">Listele</div>
</div>
<div id="bekleyen-siparis-grid" style="margin-top:10px;"></div>
@section Scripts{<link href="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.js"></script>
<link href="~/Content/dx.light.css" rel="stylesheet" />
<link href="~/Content/dx.common.css" rel="stylesheet" />
<script src="~/Scripts/dx.web.debug.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script>
    $(document).ready(function () {
        var dateVal = new Date();
        dateVal.setHours(0, 0, 0);
        var basTarih = 36526;
        var basTeslimTarih = 36526;
        var bitTarih = 44196;
        var bitTeslimTarih = bitTarih;
        $(".btn-listele").dxButton({
            onClick: function() {

                var BekleyeSiparisRaporuUrl = "/Rapor/PartialBekleyenSiparis";
                PartialView(BekleyeSiparisRaporuUrl, 'bekleyen-siparis-grid', JSON.stringify({ bastarih: basTarih, bittarih: bitTarih, basteslimtarih: basTeslimTarih, bitteslimtarih: bitTeslimTarih }));
            }
        });
        $(".tarih-bas-date").dxDateBox({
            dataType: 'date',
            displayFormat: 'dd/MM/yyyy',
            value: '01/01/2000',
            onValueChanged: function (e) {
                basTarih = Math.ceil((new Date(e.value) - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000))-1;
            }
        });
        $(".tarih-bit-date").dxDateBox({
            dataType: 'date',
            displayFormat: 'dd/MM/yyyy',
            value: '12/31/2020',
            onValueChanged: function (e) {
                bitTarih = Math.ceil((new Date(e.value) - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000))-1;
            }
        });
        $(".teslim-bas-date").dxDateBox({
            dataType: 'date',
            displayFormat: 'dd/MM/yyyy',
            value: '01/01/2000',
            onValueChanged: function (e) {
                basTeslimTarih = Math.ceil((new Date(e.value) - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000))-1;
            }
        });
        $(".teslim-bit-date").dxDateBox({
            dataType: 'date',
            displayFormat: 'dd/MM/yyyy',
            value: '12/31/2020',
            onValueChanged: function (e) {
                bitTeslimTarih = Math.ceil((new Date(e.value) - new Date(Date.UTC(1899, 11, 30))) / (24 * 60 * 60 * 1000))-1;
            }
        });
    });
</script>
    }



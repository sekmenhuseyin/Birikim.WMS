@model GorevListesi
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Görev Bilgileri
                </div>
            </div>
            <div class="portlet-body form">
                @using (Ajax.BeginForm("Update", "Gorev", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "GorevGrid", OnSuccess = "$('#CreateEdit').html('');" }, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(a => a.ID)
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Depo</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.TK_DEP.DepoAdi, new { @class = "form-control input-circle depoAdi", @required = ""})
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Görev No</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.GorevNo, new { @class = "form-control input-circle gorevNo", @required = "" })
                                <span class="field-validation-valid" data-valmsg-for="GorevNo" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Görev Tipi</label>
                            <div class="col-md-4">
                                @Html.DropDownList("GorevTipiID", null, htmlAttributes: new { @class = "form-control input-circle ", required = "required", @disabled="disabled" })
                                <span class="field-validation-valid" data-valmsg-for="GorevTipi" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Durum</label>
                            <div class="col-md-4">
                                @Html.DropDownList("DurumID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="Durum" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Açıklama</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.Aciklama, new { @class = "form-control input-circle" })
                                <span class="field-validation-valid" data-valmsg-for="Aciklama" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Bilgi</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.Bilgi, new { @class = "form-control input-circle" })
                                <span class="field-validation-valid" data-valmsg-for="Bilgi" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3">
                                <input class="btn btn-primary input-circle green" type="submit" value="Düzenle" />
                                <input class="btn btn-danger input-circle" type="button" value="İptal" onclick="DuzenleIptal()" />
                                <input class="btn btn-danger input-circle" type="button" value="MalKabulOnay" onclick="MalKabulOnay()" />
                            </div>
                        </div>
                    </div>
                            }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(".depoAdi").prop("readonly", true);
    $(".gorevNo").prop("readonly", true);
    $(".gorevTip").prop("readonly", true);
</script>


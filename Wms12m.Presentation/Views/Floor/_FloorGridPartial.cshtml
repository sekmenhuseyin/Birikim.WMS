@model List<Store05>
@if (((List<Store05>)Model).Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th> Kat</th>
                <th> Sıra No</th>
                <th> Boy</th>
                <th> Özellik</th>
                <th> Açıklama</th>
                <th> Tarih </th>
                <th> Durum </th>
                <th> Düzenle </th>
                <th> Sil </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Store05 item in Model)
            {
                <tr>
                    <td>@item.Kat</td>
                    <td>@item.SiraNo </td>
                    <td>@item.Boy </td>
                    <td>@item.Ozellik </td>
                    <td>@item.Aciklama </td>
                    <td>@DateTime.FromOADate(item.KayitTarih).ToShortDateString()</td>
                    <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                    <td><a class="edit" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a></td>
                    <td>
                        <a class="edit" href="javascript:;" onclick="Delete('@item.ID','/Floor/FloorGridPartial','FloorGrid','@item.RafID')"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Kayıt Bulunamadı
    </div>
}

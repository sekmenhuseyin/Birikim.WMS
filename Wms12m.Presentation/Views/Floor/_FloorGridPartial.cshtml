@model List<Kat>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead><tr><th>Kat</th><th>Sıra No</th><th>En x Boy x Derinlik</th><th>Ağırlık Kapasitesi</th><th>Özellik</th><th>Açıklama</th><th>Durum</th><th></th></tr></thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KatAd</td>
                    <td>@item.SiraNo </td>
                    <td align="right">@String.Format("{0:n}", item.En) x @String.Format("{0:n}", item.Boy) x @String.Format("{0:n}", item.Derinlik) mm<sup>3</sup></td>
                    <td align="right">@item.AgirlikKapasite kg</td>
                    <td>@item.ComboItem_Name.Name </td>
                    <td>@item.Aciklama </td>
                    <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                    <td>
                        <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                        <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Floor/FloorGridPartial','FloorGrid','@item.BolumID')"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{<div>Kayıt Bulunamadı</div>}
<script>$(document).ready(function () { $('#sample_1').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>
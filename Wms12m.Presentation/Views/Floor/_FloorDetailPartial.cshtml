@using Newtonsoft.Json;
@model Wms12m.Entity.Store05
@{
    if (Model.Id > 0)
    {
        Wms12m.Business.abstractStore<Wms12m.Entity.Store01> _Store = new Wms12m.Business.Store();
        Wms12m.Business.abstractStore<Wms12m.Entity.Store02> _Corridor = new Wms12m.Business.Corridor();
        Wms12m.Business.abstractStore<Wms12m.Entity.Store03> _Shelf = new Wms12m.Business.Shelf();
        Wms12m.Business.abstractStore<Wms12m.Entity.Store04> _Chapter = new Wms12m.Business.Chapter();
        ViewBag.ShelfId = _Chapter.Detail(Model.ChapterId).ShelfId;
        ViewBag.CorridorId = _Shelf.Detail(ViewBag.ShelfId).CorridorId;
        ViewBag.StoreId = _Corridor.Detail(ViewBag.CorridorId).StoreId;

    }
}

<script type="text/javascript">
    $(".make-switch").bootstrapSwitch();
    $(document).ready(function () {
        StoreList();
        var Links = @Html.Raw(JsonConvert.SerializeObject(Model));
        if (!Links.Locked) {
            $('input[type=checkbox]').prop("checked", true).trigger("change");
        }
        $('.ekle-duzenle').prop('disabled', 'disabled');
        $('#CorrridorId').prop('disabled', 'disabled');
        $('#ShelfList').prop('disabled', 'disabled');
        $('#ChapterList').prop('disabled', 'disabled');

        $('#StoreId').on('change', function() {
            if(this.value=="0"){
                $('.ekle-duzenle').prop('disabled', 'disabled');
                $("#CorrridorId option").remove();
                $('#CorrridorId').prop('disabled', 'disabled');
                $("#ShelfList option").remove();
                $('#ShelfList').prop('disabled', 'disabled');
                $("#ChapterList option").remove();
                $('#ChapterList').prop('disabled', 'disabled');
            }
            else{
                $("#ShelfList option").remove();
                $('#ShelfList').prop('disabled', 'disabled');
                $("#ChapterList option").remove();
                $('#ChapterList').prop('disabled', 'disabled');
                $("#CorrridorId").removeAttr("disabled");
                CreateCorridorList(this.value);
            }
        })
        $('#CorrridorId').on('change', function() {
            if(this.value=="0"){
                $('.ekle-duzenle').prop('disabled', 'disabled');
                $("#ShelfList option").remove();
                $("#ChapterList option").remove();
                $('#ChapterList').prop('disabled', 'disabled');
                $('#ShelfList').prop('disabled', 'disabled');
            }
            else{
                $("#ChapterList option").remove();
                $('#ChapterList').prop('disabled', 'disabled');
                $("#ShelfList").removeAttr("disabled");
                ShelfList(this.value);
            }
        })
        $('#ShelfList').on('change', function() {
            if(this.value=="0"){
                $('.ekle-duzenle').prop('disabled', 'disabled');
                $("#ChapterList option").remove();
                $('#ChapterList').prop('disabled', 'disabled');
            }
            else{
                $("#ChapterList").removeAttr("disabled");
                ChapterList(this.value);
            }
        });
        $('#ChapterList').on('change', function() {
            $('.ekle-duzenle').removeAttr("disabled");
            $("#ChapterId").val(this.value);
        });
        if (Links.Id>0) {
            $("#StoreId option:selected").val('@ViewBag.StoreId');
            CreateCorridorList('@ViewBag.StoreId');
            $("#ShelfList").removeAttr("disabled");
            ShelfList('@ViewBag.CorridorId');
            $("#ChapterList").removeAttr("disabled");
            ChapterList('@ViewBag.ShelfId');
        }

    });
    function StoreList() {
        $("#StoreId option").remove();
        $("#StoreId").append("<option value=" + '0' + ">Lütfen Depo Seçiniz !!!</option>");
        $.ajax({
            url: StoreListUrl,
            type: 'POST',
            data: '',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data == "") {
                    
                    //alert("Hata Oluştu !!!");
                } else {
                    $.each(data, function (i, item) {
                        if('@ViewBag.StoreId'==item.Id)
                        {
                            $("#StoreId").append("<option value=" + item.Id + " selected>" + item.StoreName + "</option>");

                        }else{
                            $("#StoreId").append("<option value=" + item.Id + ">" + item.StoreName + "</option>");
                        }


                    });
                }
            }
        });
    }
    function CreateCorridorList(Id) {
        $("#CorrridorId option").remove();
        
        $.ajax({
            url: CorrridorList,
            type: 'POST',
            data: JSON.stringify({ Id: Id }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data == "") {
                    $('#CorrridorId').prop('disabled', 'disabled');
                    //alert("Hata Oluştu !!!");
                } else {
                    $("#CorrridorId").append("<option value=" + '0' + ">Lütfen Karidor Seçiniz !!!</option>");
                    $.each(data, function (i, item) {

                        if('@ViewBag.CorridorId'==item.Id)
                        { $("#CorrridorId").removeAttr("disabled");
                            $("#CorrridorId").append("<option value=" + item.Id + " selected>" + item.CorridorName + "</option>");

                        }else{
                            $("#CorrridorId").append("<option value=" + item.Id + ">" + item.CorridorName + "</option>");
                        }
                    });
                }
            }
        });
    }
    function  ShelfList(Id) {
        $("#ShelfList option").remove();
        
        $.ajax({
            url: ShelfListUrl,
            type: 'POST',
            data: JSON.stringify({ Id: Id }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data == "") {
                    $('#ShelfList').prop('disabled', 'disabled');
                    //alert("Hata Oluştu !!!");
                } else {
                    $("#ShelfList").append("<option value=" + '0' + ">Lütfen Raf Seçiniz !!!</option>");
                    $.each(data, function (i, item) {
                        if('@ViewBag.ShelfId'==item.Id)
                        {
                            $("#ShelfList").removeAttr("disabled");
                            @*$("#ShelfId").val('@ViewBag.ShelfId');*@
                            $("#ShelfList").append("<option value=" + item.Id + " selected>" + item.ShelfName + "</option>");

                        }else{
                            $("#ShelfList").append("<option value=" + item.Id + ">" + item.ShelfName + "</option>");
                        }

                    });
                }
            }
        });
    }
    function ChapterList(Id) {
        $("#ChapterList option").remove();
        
        $.ajax({
            url: ChapterListUrl,
            type: 'POST',
            data: JSON.stringify({ Id: Id }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data == "") {
                    $('#ChapterList').prop('disabled', 'disabled');
                    //alert("Hata Oluştu !!!");
                } else {
                    $("#ChapterList").append("<option value=" + '0' + ">Lütfen Kat Seçiniz !!!</option>");
                    $.each(data, function (i, item) {
                        console.log(item);
                        if('@Model.ChapterId'==item.Value)
                        {
                            $("#ChapterList").removeAttr("disabled");
                            $("#ChapterId").val('@Model.ChapterId');
                            $("#ChapterList").append("<option value=" + item.Value + " selected>" + item.Text + "</option>");

                        }else{
                            $("#ChapterList").append("<option value=" + item.Value + ">" + item.Text + "</option>");
                        }

                    });
                }
            }
        });
    }
</script>

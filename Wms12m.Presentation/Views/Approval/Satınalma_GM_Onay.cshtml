            //});
            //$(".swtch_aktif_pasif").dxSwitch({
            //    onText: "Aktif",
            //    offText: "Pasif",
            //    value: true,
            //    width: "25%"
            //});
            $(".txt_geri_cevirme_aciklamasi").dxTextBox({
                maxLength: 250
            });
            //$(".numb_baglanti_tutari").dxNumberBox({
            //    min: 0,
            //    step: 1,
            //    value: 0
            //});

            $(".select_onay").dxLookup({
                dataSource: model,
                searchEnabled: true,
                pageLoadMode: "nextButton",
                searchExpr: ["HesapKodu", "Unvan","SipTalepNo"],
                //valueExpr: 'Kod',
                displayExpr: 'SipTalepNo',
                onValueChanged: function (e) {
                    if (e.value == null) {
                        return;
                    }
                    $(".musteri_unvan").text(e.value.Unvan);
                    $(".musteri_unvan").show();
                    PartialView("/Approval/SipGMOnayList", 'satinalma_gm_onay_data', JSON.stringify({ HesapKodu: e.value.HesapKodu, SipTalepNo:e.value.SipTalepNo }));
                    PartialView("/Approval/SipGMOnayListFTD", 'satinalma_gm_onay_ftd_data',JSON.stringify({ HesapKodu: e.value.HesapKodu, SipTalepNo:e.value.SipTalepNo }));
                },
                itemTemplate: function (itemData, itemIndex, itemElement) {
                    itemElement.css({ "text-align": "left", "border-bottom": "1px solid #2fc1d8" });
                    if (itemIndex > 0) {
                        itemElement.css({ "margin-top": "-40px" });
                    }
                    var rightBlock = $("<div style=' margin: 2px; width:100%;'>");
                    rightBlock.append("<div><p style='font-size:11px; font-weight:bold; line-height: 0%;'><b>" + itemData.SipTalepNo + "</b></p>");
                    rightBlock.append("<p style='line-height: 0%;font-size:11px;'><span style='font-weight:bold'>HesapKodu: </span><i>" + itemData.HesapKodu + "</i></p><p style='line-height: 0%;font-size:11px;'><span style='font-weight:bold'>Unvan: </span><i>" + itemData.Unvan + "</i></p></div>");
                    itemElement.append(rightBlock);
                }
            });
            //$.ajax({
            //    url: window.location.origin + "/Approval/SozlesmeListesi?tip=0",
            //    data: {},
            //    type: "post",
            //    success: function (data) {
            //        var result = JSON.parse(data);
            //        $(".select_sozlesmeler").dxLookup("instance").option("dataSource", result);
            //    }
            //});

        });

        $('.onayla-buton').click(function () {
            $.ajax({
                url: window.location.origin + "/Approval/SipGMOnayla",
                data: {},
                type: "post",
                success: function (data) {
                    var result = JSON.parse(data);
                    console.log(data);
                }
            });
        });

        $('.reddet-buton').click(function () {
            $.ajax({

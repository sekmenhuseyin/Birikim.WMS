@using Newtonsoft.Json;
<div class="satinalma_gm_onay_ftd_data" style="width: 100%; box-shadow: 2px 4px 2px #5d5959;">
    <div class="col-md-12" style="width:100%;">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Fatura Detayı
                </div>
            </div>

            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-striped table-bordered table-condensed" id="sample_2">
                            <thead class="aaaaa">
                                <tr>
                                    <th></th>
                                    <th nowrap>Aciklama</th>
                                    <th nowrap>Oran</th>
                                    <th nowrap>Tutar</th>
                                    <th nowrap>Doviz Tutar</th>
                                    <th nowrap>Doviz Cinsi</th>
                                    <th nowrap>Doviz Kuru</th>
                                  
                                    <th nowrap>Sira No</th>
                                    <th nowrap>SatirTip</th>
                                    <th nowrap>DvzTL</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    //$('#x-modal-teminatdurbun').modal("hide");
    var secili_satir = new Array();
    var secili_table = new Array();
    var silinecek = new Array();
    var table = $('#sample_2').DataTable({
        "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        "ajax": {
            "url": '/Approval/SipGMOnayListFTDData?HesapKodu=' + '@ViewBag.HesapKodu'+ '&SipTalepNo=' + '@ViewBag.SipTalepNo',
            "dataSrc": function (json) {
                console.log(json);
                return json;
            },
        },
        "fixedHeader": true,
        "scrollX": true,
        "columnDefs": [{ "visible": false, "width": "10%", "targets": [7, 8, 9] }, { "width": "18%", "targets": [1, 2, 3, 4, 5, 6] }],
        "columns": [
            { "data": null, "defaultContent": '', "className": 'select-checkbox', "orderable": false },
            { "data": "Aciklama" },
            { "data": "IskontoOran" },
            { "data": "Iskonto" },
            { "data": "DovizTutar" },
            { "data": "DovizCinsi" },
            { "data": "DovizKuru" },
           
            { "data": "SiraNo" },
            { "data": "SatirTip" },
            { "data": "DvzTL" }
        ],
        "ordering": false,
        "fnRowCallback": function (nRow, aData, iDisplayIndex) {
            $('td', nRow).attr('nowrap', 'nowrap');
            return nRow;
        },
        //"columnDefs": [{ "width": "140px", "targets": 0 }]

     });

    $('#sample_2 tbody').on('click', 'tr', function () {
        $(this).toggleClass('selected');
        if($( this ).hasClass( "selected" )){
        silinecek.push($( "tr" ).index( this )-1)
        }else{
            silinecek.splice($( "tr" ).index( this )-1, 1);
        }
    });
</script>






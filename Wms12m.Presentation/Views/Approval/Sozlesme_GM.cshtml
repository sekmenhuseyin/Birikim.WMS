    <script type="text/javascript">
        FuncSearchBtn();
        function FuncSearchBtn() {
            $('#liste').html("");
            PartialView('/Approval/Sozlesme_GM_List', 'liste');
        }
        function newrow(listeno) { return "<table style='background:transparent;' id='new" + listeno + "'></table>"; }
        function format(d) {
            var html = "<tr style='background: transparent;'><th>Fiyat Listesi</th><th>Ürün Grubu</th><th>Ürün Kodu</th><th>Ürün Adı</th><th>Iskonto1</th><th>Iskonto2</th>< th > Iskonto3</th><th>Iskonto4</th> <th>Iskonto5</th></tr >";
            $.ajax({
                type: 'POST',
                url: '/Approval/Sozlesme_GM_Details',
                data: { "ListeNo": d },
                dataType: "html",
                success: function (data) {
                    $('#new' + d).html(data);
                }
            });
        }
        $('.onay-buton').click(function () {

            Onayla();


        });

        $('.sil-buton').click(function () {

            SozlesmeSil();

        });
        $('.yenile-buton').click(function () {

            window.location.href = '/Approval/Sozlesme_GM';



        });
    </script>

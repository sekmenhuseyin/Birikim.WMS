        },
        "fixedHeader": true,
        "scrollX": true,
        "columns": [
            { "data": null, "defaultContent": '', "className": 'select-checkbox', "orderable": false },
            { "data": "Kod10" },
            { "data": "MalKodGrup" },
            { "data": "MalKod" },
            { "data": "MalAdi" },
            { "data": "Kalite" },
            { "data": "Oran1" },
            { "data": "Oran2" },
            { "data": "Oran3" },
            { "data": "Oran4" },
            { "data": "Oran5" }

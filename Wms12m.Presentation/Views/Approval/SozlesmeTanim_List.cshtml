        "ordering": false,
        "fnRowCallback": function (nRow, aData, iDisplayIndex) {
            $('td', nRow).attr('nowrap', 'nowrap');
            return nRow;
        }

     });
    else {
       
        $('tbody').last().remove();
        
        
        var elementt = @Html.Raw(Json.Encode(ViewBag.Satir));
        $(elementt).insertAfter($(".aaaaa"));
        setTimeout(function(){ $("#sample_1_info").text("Satır Eklendi"); }, 500);
        $(".numb_iskonto1").dxNumberBox("instance").option("value",0);
        $(".numb_iskonto2").dxNumberBox("instance").option("value",0);
        $(".numb_iskonto3").dxNumberBox("instance").option("value",0);
        $(".numb_iskonto4").dxNumberBox("instance").option("value",0);
        $(".numb_iskonto5").dxNumberBox("instance").option("value",0);
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        });
    }
    $('#sample_1 tbody').on('click', 'tr', function () {
        $(this).toggleClass('selected');
        if($( this ).hasClass( "selected" )){
        silinecek.push($( "tr" ).index( this )-1)
        }else{
            silinecek.splice($( "tr" ).index( this )-1, 1);
        }
    });

    $('.refresh-buton').click(function () {
        var x = table.rows('.selected').data();
        for (var i = 0; i < x.length; i++) {
            secili_table.push(x[i]);
        }
        var _dfd = $.Deferred();
        $.ajax({
            url: window.location.origin + "/OnayRisk/OnayRiskInsert",
            data: { Data: JSON.stringify(secili_table) },
            type: "post",
            success: function (data) {

            },
            error: function (jqxhr) { console.log(jqxhr); }
        });
        return _dfd.promise();

@model IEnumerable<Gorevler>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Görevler Listesi
        </div>
    </div>
    <div class="portlet-body form p-40">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead>
                <tr>
                    <th>
                        Sorumlu
                    </th>
                    <th>
                        Sorumlu 2
                    </th>
                    <th>
                        Sorumlu 3
                    </th>
                    <th>
                       Görev
                    </th>
                    <th>
                        Açıklama
                    </th>
                    <th>
                        Öncelik
                    </th>
                    <th>
                        Durum
                    </th>
                    <th>
                        Görev Tipi
                    </th>
                    <th>
                        Departman
                    </th>
                    <th>
                        Tahmini Bitiş
                    </th>

                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sorumlu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sorumlu2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sorumlu3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gorev)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aciklama)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.OncelikID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DurumID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GorevTipiID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmanID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TahminiBitis)
                        </td>
                        <td>
                            <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                            <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Duties/List','liste','@item.ID')"> Sil </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script>$(document).ready(function () { $('#sample_1').DataTable({ "pagingType": "full_numbers", "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>



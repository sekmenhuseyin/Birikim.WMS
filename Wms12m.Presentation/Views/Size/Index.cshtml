@{
    ViewBag.Title = "Boyut Kartı işlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="page-title">Boyut İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div id="CreateEdit">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Liste
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Şirket</label>
                            <div class="col-md-4">
                                @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control input-circle SirketID", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="SirketID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div id="liste"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#SirketID').on('change', function () {
        $.ajax({
            url: "/Size/GetList/" + $('#SirketID').val(),
            type: 'POST',
            dataType: "html",
            success: function (data) {
                if (data != "") $("#hesapSelect").html(data);
            }
        });
    });

</script>
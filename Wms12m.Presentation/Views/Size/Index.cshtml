@model IEnumerable<TK_OLCU>
@{
    ViewBag.Title = "Boyut Kartı işlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h3 class="page-title">Boyut İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div id="CreateEdit">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Liste
                    </div>
                    <div class="col-md-2 pull-right m-t-5">
                        @using (Html.BeginForm("Olcu", "Uploads", FormMethod.Post, new { enctype = "multipart/form-data", id = "fileupload" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-6"><a id="btnSablon" href="~/Content/SizeSablon.xlsx" class="btn btn-default">Şablon İndir</a></div>
                            <div class="col-md-6"><a id="linkUpload" class="btn btn-warning">Yükle</a></div>
                            <input id="btnUpload" type="file" name="file" />
                        }
                    </div>
             </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div id="liste">
                            <p><a class="btn btn-default green" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Size/Create')"> Yeni Ekle </a></p>
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead><tr><th>Mal Kodu</th><th>Mal Adı</th><th>Birim</th><th>En</th><th>Boy</th><th>Derinlik</th><th>Hacim</th><th>Ağırlık</th><th></th></tr></thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.MalKodu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MalAdi)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                                            <td>@Html.DisplayFor(modelItem => item.En)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Boy)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Derinlik)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Hacim)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Agirlik)</td>
                                            <td>
                                                <a class="btn btn-default input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Size/Edit/@item.ID')"> Düzenle </a>
                                                <a class="btn btn-danger input-circle" href="javascript:;" onclick="Delete('@item.ID','/Size/List','liste','@item.SirketKod')"> Sil </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>var DeleteFunctionUrl = '@Url.Action("Delete", "Size")';</script>
}
@model IEnumerable<Olcu>
<p><a class="btn btn-default green" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Size/Create')"> Yeni Ekle </a></p>
<table class="table table-striped table-bordered table-hover" id="sample_1">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MalKodu)</th>
            <th>@Html.DisplayNameFor(model => model.MalAdi)</th>
            <th>@Html.DisplayNameFor(model => model.Birim)</th>
            <th>@Html.DisplayNameFor(model => model.En)</th>
            <th>@Html.DisplayNameFor(model => model.Boy)</th>
            <th>@Html.DisplayNameFor(model => model.Genislik)</th>
            <th>@Html.DisplayNameFor(model => model.Agirlik)</th>
            <th>@Html.DisplayNameFor(model => model.Hacim)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MalKodu)</td>
                <td>@Html.DisplayFor(modelItem => item.MalAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                <td>@Html.DisplayFor(modelItem => item.En)</td>
                <td>@Html.DisplayFor(modelItem => item.Boy)</td>
                <td>@Html.DisplayFor(modelItem => item.Genislik)</td>
                <td>@Html.DisplayFor(modelItem => item.Agirlik)</td>
                <td>@Html.DisplayFor(modelItem => item.Hacim)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

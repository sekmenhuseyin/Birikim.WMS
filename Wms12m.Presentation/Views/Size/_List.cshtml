@model IEnumerable<Olcu>
@{ string tmp; List<string> Sirket = ViewBag.Sirket; var malkod = new List<String>(); var malad = new List<String>(); }
<table class="table table-striped table-bordered table-hover" id="sample_1">
    <thead><tr><th>Mal Kodu</th><th>Mal Adı</th><th>Birim</th><th>En x Boy x Derinlik</th><th>Hacim</th><th>Ağırlık</th><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (malkod.Contains(item.MalKodu) == false)
            {
                tmp = item.MalKodu.GetMalAdi(Sirket[0]);
                if (tmp == null || tmp == "") { tmp = item.MalKodu.GetMalAdi(Sirket[1]); }
                malkod.Add(item.MalKodu);
                malad.Add(tmp);
            }
            else
            {
                tmp = malad[malkod.IndexOf(item.MalKodu)];
            }
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MalKodu)</td>
                <td>@tmp</td>
                <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                <td align="right">@String.Format("{0:n}", item.En) x @String.Format("{0:n}", item.Boy) x @String.Format("{0:n}", item.Derinlik) mm<sup>3</sup></td>
                <td align="right">@String.Format("{0:n}", item.Hacim) mm<sup>3</sup></td>
                <td align="right">@Html.DisplayFor(modelItem => item.Agirlik) kg</td>
                <td>
                    @{if(ViewBag.Yetki == true) { <a class="btn btn-default input-circle" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>} }
                    @{if(ViewBag.Yetki == true) { <a class="btn btn-danger input-circle" href="javascript:;" onclick="Delete('@item.ID','/Size/List','liste','')"> Sil </a>} }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>$(document).ready(function () { $('#sample_1').DataTable({ "pagingType": "full_numbers", "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>
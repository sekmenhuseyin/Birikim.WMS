@model IEnumerable<ComboItem_Name>
@{
    ViewBag.Title = "Combo Detay İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h3 class="page-title">Combo Detay İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div class="row" id="CreateEdit">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Combo Detay Listesi
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div id="theGrid" style="padding:8px;">
                            @using (Html.BeginForm("Save", "ComboItems", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <table class="table table-striped table-bordered table-hover" id="sample_1">
                                    <thead><tr><th>Combo</th><th>Ad</th><th></th></tr></thead>
                                    <tbody>
                                        <tr>
                                            <td>@Html.DropDownList("ComboID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })</td>
                                            <td>@Html.TextBoxFor(a => a.Where(m=>m.ID==0).FirstOrDefault().Name, new { @class = "form-control input-circle", @placeholder = "Ad", required = "required" })</td>
                                            <td><input type="hidden" name="ID" value="0" /><button type="submit" class="btn btn-circle green">Ekle</button></td>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Combo_Name.ComboName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                <td class="col-lg-3">
                                                    <a class="btn btn-default btn-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/ComboItems/Edit/@item.ID')"> Düzenle </a>
                                                    <a class="btn btn-danger btn-circle" href="javascript:;" onclick="Delete('@item.ID','','theGrid','', '')"> Sil </a>                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script type="text/javascript">var DeleteFunctionUrl = '/ComboItems/Delete';</script>}
@model IEnumerable<ComboItem_Name>
@{
    ViewBag.Title = "Combo Detay İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<<link href="@Url.Content("~/Content/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
}<h3 class="page-title">Combo Detay İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div class="row" id="CreateEdit">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Combo Detay Listesi
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div id="ComboGrid" style="padding:8px;">
                            @using (Ajax.BeginForm("Save", "ComboItems", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ComboGrid" }, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <table class="table table-striped table-bordered table-hover" id="sample_1">
                                    <thead><tr><th>Combo</th><th>Ad</th><th></th></tr></thead>
                                    <tbody>
                                        <tr>
                                            <td>@Html.DropDownList("ComboID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })</td>
                                            <td>@Html.TextBoxFor(a => a.Where(m=>m.ID==0).FirstOrDefault().Name, new { @class = "form-control input-circle", @placeholder = "Ad", required = "required" })</td>
                                            <td><input type="hidden" name="ID" value="0" /><button type="submit" class="btn btn-circle green">Ekle</button></td>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Combo_Name.ComboName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                <td class="col-lg-3">
                                                    <a class="btn btn-default btn-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/ComboItems/Edit/@item.ID')"> Düzenle </a>
                                                    <a class="btn btn-danger btn-circle" href="javascript:;" onclick="Delete('@item.ID','/ComboItems/Delete','StoreGrid','', '')"> Sil </a>                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script>$(document).ready(function () { $('#sample_1').DataTable({ "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>
}
        "ajax": {
            "url": '/GorevKisiler/GorevKisiListesiData',
            "dataSrc": function(json) {
                return json;
            },
        },
        "fixedHeader": true,
        "scrollX": true,
        "columnDefs": [{ "visible": false, "targets": 0 }],
        "columnDefs": [{

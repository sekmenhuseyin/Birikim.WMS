            { "data": "Kod1", "sClass": "nowrap" },
            { "data": "Kod2", "sClass": "nowrap" },
            { "data": "Kod3", "sClass": "nowrap" },
            { "data": "Kod4", "sClass": "nowrap" },
            { "data": "Kod8", "sClass": "nowrap" },
            { "data": "KatSayi2", "sClass": "nowrap" },
            { "data": "KatSayi3", "sClass": "nowrap" },
            { "data": "Operator2", "sClass": "nowrap" },
            { "data": "Operator3", "sClass": "nowrap" },
        ],
        "ordering": false,
        "fnRowCallback": function (nRow, aData, iDisplayIndex) {
            $('td', nRow).attr('nowrap', 'nowrap');
            $('td:eq(9)', nRow).html($('td:eq(9)', nRow).html() + '.');
            $('td:eq(10)', nRow).html($('td:eq(10)', nRow).html() + '.');
            $('td:eq(11)', nRow).html($('td:eq(11)', nRow).html() + '.');
            $('td:eq(12)', nRow).html($('td:eq(12)', nRow).html() + '.');
            $('td:eq(13)', nRow).html($('td:eq(13)', nRow).html() + '.');
            $('td:eq(14)', nRow).html($('td:eq(14)', nRow).html() + '.');
            $('td:eq(15)', nRow).html($('td:eq(15)', nRow).html() + '.');
            return nRow;
        }
    });


    $('#sample_1 tbody').on('click', 'tr', function () {
        $(this).toggleClass('selected');
    });
    $("#buttons").html("");
    var buttons = new $.fn.dataTable.Buttons(table, {
        buttons: [
            { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o" style="font-size:15px;color:red;"></span>', "className": 'btn btn-default btn-xs;' },
            { "extend": 'excel', "text": '<span class="fa fa-file-excel-o" style="font-size:15px;color:green"></span>', "className": 'btn btn-default btn-xs;' }
        ]
    }).container().appendTo($('#buttons'));
    
</script>
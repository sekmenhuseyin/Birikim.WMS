<script>

    var secili_satir = new Array();
    var secili_table = new Array();
    var table = $('#sample_1').DataTable({
        "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        "ajax": {
            "url": '/Approvals/Stock/OnayCek?Durum=' + $("input[type='radio'][name='Locked']:checked").val(),
            "dataSrc": function (json) {
                return json;
            },
        },
        "fixedHeader": true,
        "columns": [
            
            { "data": null, "defaultContent": '', "className": 'select-checkbox', "orderable": false },
            { "data": "MalKodu", "sClass": "nowrap" },
            { "data": "MalAdi", "sClass": "nowrap" },
            { "data": "MalAdi2", "sClass": "nowrap" },
            { "data": "Birim1", "sClass": "nowrap" },
            { "data": "Birim2", "sClass": "nowrap" },

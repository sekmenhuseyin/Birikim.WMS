}@section Styles{
    <style>
        .btn {
            width: 120px;
            text-align: center;
        }
    </style>
}<div class="form-horizontal">
    <div class="form-body">
        <div class="row">
            <label class="col-sm-6 col-xs-12" style="margin:10px 0;color:#f31a1a;font-weight:bold;">

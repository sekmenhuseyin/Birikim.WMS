@{
    ViewBag.Title = "Fiyat Onay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{
    <style>
        .btn {
            width: 120px;
            text-align: center;
        }
    </style>
}<div class="form-horizontal">
    <div class="form-body">
        <div class="row">
            <label class="col-sm-6 col-xs-12" style="margin:10px 0;color:#f31a1a;font-weight:bold;">
                <input type="checkbox" name="Locked" value="Koleksiyon" id="chkKoleksiyon" /> Koleksiyon ve Kaliteye Göre Onaylama
            </label>
            <label class="col-sm-6 col-xs-12" style="margin:10px 0;color:#f31a1a;font-weight:bold;">
                <input type="checkbox" name="Locked" value="Grup" id="chkGrup" /> Grup, Ebat ve Yüzeye Göre Onaylama
            </label>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption col-md-1"  >
                    <i class="fa fa-gift"></i>Fiyat Onay GM
                </div>
                <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
                <div class="col-md-2 pull-right  m-t-5">
                    <a class="btn btn-default  input-circle alayinisec-buton fa fa-file-text" href="#modalEditPage" data-toggle="modal">Tüm Seç</a>
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default  input-circle alayinikaldir-buton fa fa-file-text-o" href="#modalEditPage" data-toggle="modal">Tüm Kaldır</a>
                </div>
                <div class="col-md-2 pull-right  m-t-5">
                    <a class="btn btn-default input-circle yenile-buton glyphicon glyphicon-refresh" href="#modalEditPage" data-toggle="modal"> Yenile </a>
                </div>
                <div class="col-md-2 pull-right  m-t-5">
                    <a class="btn btn-default  input-circle onay-buton glyphicon glyphicon-ok" href="#modalEditPage" data-toggle="modal"  style="background-color:#40bf40">Onayla</a>
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default  input-circle reddet-buton glyphicon glyphicon-remove" href="#modalEditPage" data-toggle="modal"  style="background-color:#ff4d4d">Reddet</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div id="liste">
                        </div>
                        <div id="listekoleksiyon" style="display:none; ">
                        </div>
                        <div id="listegrup" style="display:none; ">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                });
                return _dfd.promise();
            }
        });

        $('.yenile-buton').click(function () {
            window.location.reload();
        });

        $('.alayinisec-buton').click(function () {
            $('tbody tr').addClass('selected');
        });
        $('.alayinikaldir-buton').click(function () {
            $('tbody tr').removeClass('selected');

        });
    </script>
}

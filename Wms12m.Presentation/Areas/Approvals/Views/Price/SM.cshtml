@{
    ViewBag.Title = "Fiyat Onay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{
    <style>
        .btn {
            width: 120px;
            text-align: center;
        }
    </style>
}<div class="form-horizontal">
    <div class="form-body">
        <div class="row">
            <label class="col-sm-6 col-xs-12" style="margin:10px 0;color:#f31a1a;font-weight:bold;">
                <input type="checkbox" name="Locked" value="Koleksiyon" id="chkKoleksiyon" /> Koleksiyon ve Kaliteye Göre Onaylama
            </label>
            <label class="col-sm-6 col-xs-12" style="margin:10px 0;color:#f31a1a;font-weight:bold;">
                <input type="checkbox" name="Locked" value="Grup" id="chkGrup" /> Grup, Ebat ve Yüzeye Göre Onaylama
            </label>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption col-xs-12 col-sm-2 ">
                    <i class="fa fa-gift"></i>Fiyat Onay SM
                </div>
                <div class="col-xs-4 col-sm-2  m-t-5">
                    <a class="btn btn-default input-circle yenile-buton" href="#modalEditPage" data-toggle="modal"> Yenile </a>
                </div>
                <div class="col-xs-4 col-sm-2  m-t-5">
                    <a class="btn btn-default  input-circle onay-buton" href="#modalEditPage" data-toggle="modal"> Onayla </a>
                </div>
                <div class="col-xs-4 col-sm-2  m-t-5">
                    <a class="btn btn-default  input-circle reddet-buton" href="#modalEditPage" data-toggle="modal"> Reddet </a>
                </div>
                <div class="col-xs-4 col-sm-2  m-t-5">
                    <a class="btn btn-default  input-circle alayinisec-buton" href="#modalEditPage" data-toggle="modal"> Tümünü Seç </a>
                </div>
                <div class="col-xs-4 col-sm-2  m-t-5">
                    <a class="btn btn-default  input-circle alayinikaldir-buton" href="#modalEditPage" data-toggle="modal"> Tümünü Kaldır </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div id="liste">
                        </div>
                        <div id="listekoleksiyon" style="display:none; ">
                        </div>
                        <div id="listegrup" style="display:none; ">
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
        
    </div>
</div>

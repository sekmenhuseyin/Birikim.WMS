
@{
    ViewBag.Title = "Sözleşme Onay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<style>
    td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
    tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
    .btn {
        width: 120px;
        text-align: center;
    }
</style>
}<div class="form-horizontal">
    <div class="form-body">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Sözleşme Onay SPGMY
                </div>
                <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle yenile-buton glyphicon glyphicon-refresh" href="#modalEditPage" data-toggle="modal"> Yenile </a>
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle onay-buton glyphicon glyphicon-ok" href="#modalEditPage" data-toggle="modal" style="background-color:#40bf40"> Onayla </a>
                </div>
                <div class="col-md-2 pull-right m-t-5">
                    <a class="btn btn-default pull-right input-circle reddet-buton glyphicon glyphicon-remove" href="#modalEditPage" data-toggle="modal" style="background-color:#ff4d4d"> Reddet </a>
                </div>

            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div id="liste">
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script type="text/javascript">
    FuncSearchBtn();
    function FuncSearchBtn() {
        $('#liste').html("");
        PartialView('/Approvals/Contract/SPGMY_List', 'liste');
    }
    function newrow(listeno) { return "<table style='background:transparent;' id='new" + listeno.replace("/", "") + "'></table>"; }
    function format(d) {
        //var html = "<tr style='background: transparent;'><th>Fiyat Listesi</th><th>Ürün Grubu</th><th>Ürün Kodu</th><th>Ürün Adı</th><th>Iskonto1</th><th>Iskonto2</th>< th > Iskonto3</th><th>Iskonto4</th> <th>Iskonto5</th></tr >";
        $.ajax({
            type: 'POST',
            url: '/Approvals/Contract/SPGMY_Details',
            data: { "ListeNo": d },
            dataType: "html",
            success: function (data) {
                $('#new' + d.replace("/", "")).html(data);
            }
        });
    }
    $('.onay-buton').click(function () {
        Onayla();
    });
    $('.sil-buton').click(function () {
        SozlesmeSil();
    });
    $('.yenile-buton').click(function () {
           setTimeout(function () { window.location.reload(); }, 500);
    });
</script>
}

@model IEnumerable<BaglantiDetaySelect>
<table class="table table-striped table-bordered" id="tabledetails">
<thead> <tr style='background: transparent;'><th>Fiyat Listesi</th><th>Ürün Grubu</th><th>Ürün Kodu</th><th>Ürün Adı</th><th>Kalite</th><th>Iskonto1</th><th>Iskonto2</th><th>Iskonto3</th><th>Iskonto4</th><th>Iskonto5</th><th></th></tr></thead>
@foreach (var item in Model){
<tr style='background: transparent;'><td>@item.Kod10</td><td>@item.MalKodGrup</td><td>@item.MalKod</td><td>@item.MalAdi</td><td>@item.Kalite</td><td align="right">@String.Format("{0:n}", item.Oran1)</td><td align="right">@String.Format("{0:n}", item.Oran2)</td><td align="right">@String.Format("{0:n}", item.Oran3)</td><td align="right">@String.Format("{0:n}", item.Oran4)</td><td align="right">@String.Format("{0:n}", item.Oran5)</td></tr>
}
</table>
<script>$('#tabledetails').DataTable();</script>

<div class="col-md-12" style="width:100%;">
    <div class="table-toolbar">
        <div class="row">
            <div class="col-md-6">
                <div class="btn-group">

                </div>
            </div>
            <div class="col-md-6">
                <div class="btn-group pull-right">
                    <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                        Tools
                        <i class="fa fa-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-print"></i> Print
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-file-pdf-o"></i> Save as PDF
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-file-excel-o"></i> Export to Excel
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="sample_1">
                <thead>
                    <tr>
                        
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                <span></span>
                            </label>
                        </th>
                        <th></th>
                        <th>Liste No</th>
                        <th>Sıra No</th>
                        <th>Bağlantı Kodu</th>
                        <th>Bağlantı Tutarı</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Açıklama</th>
                        <th>Kredi Limiti</th>
                        <th>Bakiye</th>
                        <th>Toplam Bakiye</th>
                        <th>Bekleyen Sipariş Tutar</th>
                        <th>Alınan Bordro</th>
                        <th>Çek Tutarı</th>
                        <th>Çek Ortalama Vade Tarih</th>
                        <th>Çek Tutarı</th>
                        <th>Alınan Nakit vb.</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
</div>
<script>
    var table = "";
    var secili_satir = new Array();
    var secili_table = new Array();
    $(document).ready(function () {
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "ajax": {
                "url": '/Approvals/Contract/OnayCekGM',
                "dataSrc": function (json) {
                    return json;
                },
            },
            "fixedHeader": true,
            "scrollX": true,
            "columns": [
                { "data": null, "defaultContent": '', "className": 'details-control', "orderable": false },
                { "data": "ListeNo", "sClass": "nowrap" },
                { "data": "SiraNo", "sClass": "nowrap" },
                { "data": "BaglantiKodu", "sClass": "nowrap" },
                { "data": "BaglantiTutar", "sClass": "nowrap" },
                { "data": "BasTarih", "sClass": "nowrap" },
                { "data": "BitTarih", "sClass": "nowrap" },
                { "data": "Aciklama", "sClass": "nowrap" },
                { "data": "KrediLimiti", "sClass": "nowrap" },
                { "data": "Bakiye", "sClass": "nowrap" },
                { "data": "ToplamBakiye", "sClass": "nowrap" },
                { "data": "BekleyenSiparisTutar", "sClass": "nowrap" },
                { "data": "AlinanBordro", "sClass": "nowrap" },
                { "data": "CekTutari", "sClass": "nowrap" },
                { "data": "CekOrtalamaVadeTarih", "sClass": "nowrap" },
                { "data": "CekTutari", "sClass": "nowrap" },
                { "data": "NakitTutari", "sClass": "nowrap" },
            ],
            "ordering": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $('td', nRow).attr('nowrap', 'nowrap');
                return nRow;
            },
                initComplete: function () {
                    this.api().columns([1, 2, 3, 4]).every(function () {
                    var column = this;
                    var select = $('<br /><select class="form-control input-circle" style="max-width:100px;"><option value=""></option></select>')
                        .appendTo($(column.header()))
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex($(this).val());
                            column.search(val ? '^' + val + '$' : '', true, false).draw();
                        });
                    column.data().unique().sort().each(function (d, j) {  select.append('<option value="' + d + '">' + d + '</option>') });
                });
            }
        });
        $('#sample_1 tbody').on('click', '.details-control', function () {
            var tr = $(this).closest('tr');
            $("tr").removeClass("aa");
            tr.addClass("aa");
            var x = table.rows('.aa').data();
            var row = table.row(tr);
            if (row.child.isShown()) { row.child.hide(); tr.removeClass('shown'); }
            else { row.child(newrow(x[0].ListeNo)).show(); format(x[0].ListeNo.replace("/","")); tr.addClass('shown'); }
        });
        $('#sample_1 tbody').on('click', 'tr', function () {
            $("tr").removeClass("selected");
            $(this).toggleClass('selected');
        });    
    });
    function Onayla() {
        var x = table.rows('.selected').data();
        for (var i = 0; i < x.length; i++) {
            secili_table.push(x[i]);
        }
        var _dfd = $.Deferred();
        $.ajax({
            url: window.location.origin + "/Approvals/Contract/Onay_GM",
            data: { Data: JSON.stringify(secili_table) },
            type: "post",

            success: function (data) {
                if (data.Status == true) {
                    Modaldialog(data.Message, "Güncelleme İşlemi", "Tamam", "Guncel");
                }
                else {
                    if (data.Message == "") data.Message = "Hata oluştu";
                    Modaldialog(data.Message, "Hata", "Tamam", "btn-danger");
                }
            }
        });
        return _dfd.promise();
    }
    function SozlesmeSil() {
        var x = table.rows('.selected').data();
        for (var i = 0; i < x.length; i++) {
            secili_table.push(x[i]);
        }
        var _dfd = $.Deferred();
        $.ajax({
            url: window.location.origin + "/Approvals/Contract/Sil_GM",
            data: { Data: JSON.stringify(secili_table) },
            type: "post",
            success: function (data) {
                if (data.Status == true) {
                    Modaldialog(data.Message, "Güncelleme İşlemi", "Tamam", "Guncel");
                }
                else {
                    if (data.Message == "") data.Message = "Hata oluştu";
                    Modaldialog(data.Message, "Hata", "Tamam", "btn-danger");
                }

            }
        });
        return _dfd.promise();

    }
</script>
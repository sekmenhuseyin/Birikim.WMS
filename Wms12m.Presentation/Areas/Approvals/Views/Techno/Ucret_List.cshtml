        $('#sample_1 tbody').on('click', '.details-control', function () {
            var tr = $(this).closest('tr');
            $("tr").removeClass("aa");
            tr.addClass("aa");
            setTimeout(function () { var x = table.rows('.aa').data(); }, 500);
            var x = table.rows('.aa').data();
            console.log(x[0]);
            var row = table.row(tr);
            if (row.child.isShown()) { row.child.hide(); tr.removeClass('shown'); }
            else { row.child(newrow(x[0]["PERSONELID"])).show(); format(x[0]["PERSONELID"].toString().replace("/", "")); tr.addClass('shown'); }
        });
        $('#sample_1 tbody').on('click', 'tr', function () {
            $("tr").removeClass("selected");
            $(this).toggleClass('selected');
        });
    });
    function UcretOnayla() {
        var x = table.rows('.selected').data();
        for (var i = 0; i < x.length; i++) {
            secili_table.push(x[i]);
        }
        var _dfd = $.Deferred();
        $.ajax({
            url: window.location.origin + "/Approvals/Techno/Ucret_Onayla",
            data: { Data: JSON.stringify(secili_table) },
            type: "post",

            success: function (data) {
                if (data.Status == true) {
                    Modaldialog(data.Message, "Güncelleme İşlemi", "Tamam", "Guncel");
                }
                else {
                    if (data.Message == "") data.Message = "Hata oluştu";
                    Modaldialog(data.Message, "Hata", "Tamam", "btn-danger");
                }
            }
        });
        return _dfd.promise();
    }
    function UcretReddet() {
        var x = table.rows('.selected').data();
        for (var i = 0; i < x.length; i++) {
            secili_table.push(x[i]);
        }
        var _dfd = $.Deferred();
        $.ajax({
            url: window.location.origin + "/Approvals/Contract/Sil_GM",
            data: { Data: JSON.stringify(secili_table) },
            type: "post",
            success: function (data) {
                if (data.Status == true) {
                    Modaldialog(data.Message, "Güncelleme İşlemi", "Tamam", "Guncel");
                }
                else {
                    if (data.Message == "") data.Message = "Hata oluştu";
                    Modaldialog(data.Message, "Hata", "Tamam", "btn-danger");
                }

            }
        });
        return _dfd.promise();

    }

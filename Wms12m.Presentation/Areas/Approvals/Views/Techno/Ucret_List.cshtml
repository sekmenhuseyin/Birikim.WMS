            "columnDefs": [{ "type": "num-fmt", "className": "dt-right", "targets": [12, 13] }, { "visible": false, "targets": [0,1] }],
            "columns": [
                { "data": "PERSONELID" },
                { "data": "ID" },
                { "data": null, "defaultContent": '', "className": 'details-control', "orderable": false },

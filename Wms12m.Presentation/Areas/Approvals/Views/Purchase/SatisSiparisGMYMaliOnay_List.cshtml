@using Newtonsoft.Json;
<div class="satinalma_sip_gmy_onay_data" style="width: 100%; box-shadow: 2px 4px 2px #5d5959;">
    <div class="col-md-12" style="width:100%;">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Satınalma GM Onay
                </div>
                <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
            </div>

            <div class="portlet-body">
           
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-striped table-bordered" id="sample_1">
                            <thead class="aaaaa">
                                <tr>
                                    <th nowrap>Mal Kodu</th>
                                    <th nowrap>Mal Adı</th>
                                    <th nowrap>Birim</th>
                                    <th nowrap>Talep Açıklaması</th>
                                    <th nowrap>Teklif Açıklaması</th>
                                    <th nowrap>Birim Miktar</th>
                                    <th nowrap>Birim Fiyat</th>
                                    <th nowrap>Tutar</th>
                                    <th nowrap>Döviz Tutar</th>
                                    <th nowrap>KDV Oran</th>
                                    <th nowrap>Dvz Cinsi</th>
                                    <th nowrap>Dvz Kuru</th>
                                    <th nowrap>Vade</th>
                                    <th nowrap>Talep Eden</th>
                                    <th nowrap>Tesis Kodu</th>
                                    <th nowrap>Satınalmacı</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th colspan="6"></th>
                                    <th class="text-right"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var table = $('#sample_1').DataTable({
        "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        "ajax": {
            "url": '/Approvals/Purchase/SatisSiparisGMYMaliOnay_ListData',
            "data": { TalepNo: '@ViewBag.TalepNo', HesapKodu: '@ViewBag.HesapKodu'},
            "dataSrc": function (json) {

                return json;
            },
        },
        "pagingType": "full_numbers",
        "fixedHeader": true,
        "scrollX": true,
        "columns": [
            { "data": "MalKodu" },
            { "data": "MalAdi" },
            { "data": "Birim" },
            { "data": "Aciklama" },
            { "data": "TeklifAciklamasi" },
            { "data": "BirimMiktar", "render": $.fn.dataTable.render.number('.', ',', 2, '') },
            { "data": "BirimFiyat", "render": $.fn.dataTable.render.number('.', ',', 4, '') },
            { "data": "Tutar", "render": $.fn.dataTable.render.number('.', ',', 4, '') },
            { "data": "DvzTutar", "render": $.fn.dataTable.render.number('.', ',', 4, '') },
            { "data": "KDVOran" },
            { "data": "DvzCinsi" },
            { "data": "DvzKuru" },
            { "data": "Vade" },
            { "data": "Kaydeden" },
            { "data": "TesisKodu" },
            { "data": "Satinalmaci" }
        ],
        "ordering": false,
        "fnRowCallback": function (nRow, aData, iDisplayIndex) {
            $('td', nRow).attr('nowrap', 'nowrap');
            return nRow;
        },
        "footerCallback": function (row, data, start, end, display) {
            var AcikTalepMiktar= 0, Tutar = 0;
            table.rows({ search: 'applied' }).data().each(function (val, index) {
                AcikTalepMiktar += val.AcikTalepMiktar;
                Tutar += val.Tutar;
            });
            var api = this.api(), data;
            $(api.column(11).footer()).html(numeral(AcikTalepMiktar).format());
            $(api.column(14).footer()).html(numeral(Tutar).format());
        }
    });

    $(document).ready(function () {
        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));

    });
</script>
@model Yer
@{
    ViewBag.Title = "Stok Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/assets/global/plugins/datatables/extensions/Buttons/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/extensions/Buttons/css/buttons.bootstrap.min.css" rel="stylesheet" />
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/Stock">Stok</a><i class="fa fa-circle"></i></li><li><span>Ekle</span></li></ul></div>
<h1 class="page-title">Stok Ekle</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Ekle
                </div>
                <div class="col-md-1 pull-right m-t-5">
                    @using (Ajax.BeginForm("Stock", "Uploads", null, new AjaxOptions { HttpMethod = "post" }, htmlAttributes: new { @class = "form", enctype = "multipart/form-data", id = "fileupload", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <a id="linkUpload" class="btn btn-warning showlater">Yükle</a>
                        <input id="btnUpload" type="file" name="file" />
                        <input type="hidden" name="DID" id="DID" value="" />
                    }
                </div>
                <div class="col-md-1 pull-right m-t-5"><a id="btnSablon" href="~/Content/StockSablon.xlsx" class="btn btn-default showlater">Şablon İndir</a></div>
           </div>
            <div class="portlet-body form">
                @using (Ajax.BeginForm("ManualPlacement", "Stock", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, OnSuccess= "FuncSearchBtn()", OnFailure= "Modaldialog('Lütfen Tekrar Deneyin', 'Hata', 'Tamam', 'btn-danger');" }, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-sm-3 control-label">Depo</div>
                            <div class="col-sm-4">
                                @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "getShelf(this.value);" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Raf</label>
                            <div class="col-md-4">
                                @Html.DropDownList("RafID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "getSection(this.value);" })
                                <span class="field-validation-valid" data-valmsg-for="RafID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Bölüm</label>
                            <div class="col-md-4">
                                @Html.DropDownList("BolumID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "getFloor(this.value);" })
                                <span class="field-validation-valid" data-valmsg-for="BolumID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Kat</label>
                            <div class="col-md-4">
                                @Html.DropDownList("KatID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "FuncSearchBtn();" })
                                <span class="field-validation-valid" data-valmsg-for="KatID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mal Kodu</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.MalKodu, new { @class = "form-control input-circle", @placeholder = "Mal Kodu", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="MalKodu" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mal Adı</label>
                            <div class="col-md-4">
                                <input class="form-control input-circle" id="MalAdi" name="MalAdi" type="text" readonly="readonly">
                                <span class="field-validation-valid" data-valmsg-for="MalKodu" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                            <div class="col-md-4" id="MalAdi"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Birim</label>
                            <div class="col-md-4">
                                <select name="Birim" id="Birim" class="form-control input-circle" required></select>
                                <span class="field-validation-valid" data-valmsg-for="Birim" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Miktar</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.Miktar, new { @class = "form-control input-circle", @placeholder = "Miktar", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="Miktar" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3">
                                <button type="submit" class="btn btn-circle btn-block green">Ekle</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Liste
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div id="FloorGrid" class="form-body"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script src="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.bootstrap.min.js"></script>
<script src="~/Content/assets/global/plugins/datatables/extensions/Buttons/js/buttons.html5.min.js"></script>
<script>
    $("#DepoID").prepend("<option value=''>Seçiniz !!!</option>"); $("#DepoID")[0].selectedIndex = 0;
    checkEnabled();
    function checkEnabled() {
        $("#DID").val($("#DepoID").val());
        if ($("#DepoID").val() == "") {
            $("#btnList").attr("disabled", true);
            $(".showlater").attr("disabled", true);
        }
        else {
            $("#btnList").attr("disabled", false);
            $(".showlater").attr("disabled", false);
        }
    }
    function getShelf(id) {
        $('#FloorGrid').html("");
        $("#RafID option").remove();
        $("#BolumID option").remove();
        $("#KatID option").remove();
        checkEnabled();
        $.ajax({
            url: "/Shelf/ShelfList2/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#RafID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#RafID").prepend("<option value=''>Seçiniz !!!</option>"); $("#RafID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function getSection(id) {
        $('#FloorGrid').html("");
        $("#BolumID option").remove();
        $("#KatID option").remove();
        $.ajax({
            url: "/Section/SectionList/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#BolumID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#BolumID").prepend("<option value=''>Seçiniz !!!</option>"); $("#BolumID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function getFloor(id) {
        $('#FloorGrid').html("");
        $("#KatID option").remove();
        $.ajax({
            url: "/Floor/FloorList/" + id,
            type: 'POST',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    $.each(data, function (i, item) {
                        $('#KatID').append($('<option>', { value: item.Value, text: item.Text }));
                    });
                    $("#KatID").prepend("<option value=''>Seçiniz !!!</option>"); $("#KatID")[0].selectedIndex = 0;
                }
            }
        });
    }
    function FuncSearchBtn() {
        $('#FloorGrid').html("");
        PartialView("/Stock/List", 'FloorGrid', JSON.stringify({ Id: ($("#DepoID").val() + "#" + $("#RafID").val() + "#" + $("#KatID").val() + "#false") }));
    }
    function getBirims(id) {
        $("#Birim option").remove();
        $.ajax({
            url: "/Purchase/getBirim",
            type: 'POST',
            data: JSON.stringify({ kod: id, s: @ViewBag.SirketID }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != "") {
                    if (data[0].Birim1.replace(" ", "") != "") { $('#Birim').append($('<option>', { value: data[0].Birim1, text: data[0].Birim1 })); }
                    if (data[0].Birim2.replace(" ", "") != "") { $('#Birim').append($('<option>', { value: data[0].Birim2, text: data[0].Birim2 })); }
                    if (data[0].Birim3.replace(" ", "") != "") { $('#Birim').append($('<option>', { value: data[0].Birim3, text: data[0].Birim3 })); }
                    if (data[0].Birim4.replace(" ", "") != "") { $('#Birim').append($('<option>', { value: data[0].Birim4, text: data[0].Birim4 })); }
                }
                $("#MalKodu").val(id);
            }
        });
    }
    $("#MalKodu").autocomplete({
        source: "/Purchase/getMalzemebyCode/@ViewBag.SirketID",
            minLength: 2,
            select: function (event, ui) {
                getBirims(ui.item.id);
                $("#MalAdi").val(ui.item.value);
            }
        });
    $(function () {
        $('#linkUpload').click(function () {
            if ($("#DID").val() != "")
                $("#btnUpload").click();
        });
        $('#fileupload').fileupload({
            maxFileSize: 2000000,
            acceptFileTypes: /(\.|\/)(xlsx)$/i,
            dataType: 'json',
            add: function (e, data) { data.submit(); },
            done: function (e, data) {
                if (data.result.Status == false)
                    Modaldialog(data.result.Message, "Hata", "Tamam", "btn-danger");
                else
                    Modaldialog("İşlem Başarıyla gerçekleşti", "Başarı", "Tamam", "btn-success");
            },
            fail: function (e, data) { Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default"); }
        });
    });
</script>
}
@model IEnumerable<Yer_Log>
@{decimal i = 0;}
<div class="form-group">
    <div class="col-sm-3 control-label">Güneşteki Stok</div>
    <div class="col-sm-4">
        <input class="form-control input-circle text-right" disabled="disabled" type="text" value="@String.Format("{0:n}", ViewBag.Stok)">
    </div>
</div>
<div class="form-group">
    <div class="col-sm-3 control-label">Toplam Stok</div>
    <div class="col-sm-4">
        <input class="form-control input-circle text-right" id="Stok" name="Stok" disabled="disabled" type="text" value="">
    </div>
</div>
<div class="form-group">
    <div class="col-sm-4 col-sm-offset-3">
        <button class="btn btn-default btn-block btn-circle" type="button" onclick="FuncSearchBtn()">Yenile <i class="icon-refresh"></i></button>
    </div>
</div>
<div class="p-30">
    <table class="table table-striped table-bordered" id="sample_1">
        <thead>
            <tr>
                <th>Girdi-Çıktı</th>
                <th>Tarih<br /><input class="w-50 input-circle" type="text" id="Tarih" /></th>
                <th>Saat<br /><input class="w-50 input-circle" type="text" id="Saat" /></th>
                <th>Evrak No<br /><input class="w-50 input-circle" type="text" id="EvrakNo" /></th>
                <th>Hücre Adı<br /><input class="w-50 input-circle" type="text" id="HücreAdi" /></th>
                <th>Birim</th>
                <th>Makara No<br /><input class="w-50 input-circle" type="text" id="MakaraNo" /></th>
                <th class="text-right">Miktar<br /><input class="w-50 input-circle" type="text" id="Miktar" /></th>
                <th class="text-right">Stok<br /><input class="w-50 input-circle" type="text" id="Stok" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@if (item.GC == true) { i = i - item.Miktar; <text>Çıktı</text> }else{ i = i + item.Miktar; <text>Girdi</text> }</td>
                    <td>@item.KayitTarihi.FromOADateInt()</td>
                    <td>@item.KayitSaati.FromOaTime()</td>
                    <td>@if (item.IR != null) {<a class="btn btn-default input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/WMS/Stock/Details/@item.IR.ID')"> @item.IR.EvrakNo </a>}</td>
                    <td>@Html.DisplayFor(modelItem => item.HucreAd)</td>
                    <td>@Html.DisplayFor(modelItem => item.MakaraNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                    <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                    <td align="right">@String.Format("{0:n}", i)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $('#Stok').val('@String.Format("{0:n}", i)');
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $("#Tarih").datepicker().on("change", function (e) { filterx(1, e.target.value); });
        $("#Saat").on("change paste keyup", function () { filterx(2, $("#Saat").val()); });
        $("#EvrakNo").on("change paste keyup", function () { filterx(3, $("#EvrakNo").val()); });
        $("#HücreAdi").on("change paste keyup", function () { filterx(4, $("#HücreAdi").val()); });
        $("#MakaraNo").on("change paste keyup", function () { filterx(5, $("#MakaraNo").val()); });
        $("#Miktar").on("change paste keyup", function () { filterx(7, $("#Miktar").val()); });
        $("#Stok").on("change paste keyup", function () { filterx(8, $("#Stok").val()); });
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "ordering": false,
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "dom": 'Bfrtip',
            "buttons": [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
            ],
            initComplete: function () {
                this.api().columns([0]).every(function () {
                    var column = this;
                    var select = $('<br /><select class="form-control input-circle" style="max-width:100px;"><option value=""></option></select>')
                        .appendTo($(column.header()))
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex($(this).val());
                            column.search(val ? '^' + val + '$' : '', true, false).draw();
                        });
                    column.data().unique().sort().each(function (d, j) { select.append('<option value="' + d + '">' + d + '</option>') });
                });
            }
        });
        function filterx(a, b) { filter(table, a, b); }
    });
</script>
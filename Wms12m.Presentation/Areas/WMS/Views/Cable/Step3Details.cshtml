@model IEnumerable<Yer>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Yer</th>
            <th>Makara No</th>
            <th>Makara Durum</th>
            <th class="text-right">Miktar</th>
            <th>Birim</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HucreAd</td>
                <td>@item.MakaraNo</td>
                <td>@if (item.MakaraDurum == false) { <text>Açık</text> } else { <text>Kapalı</text> }</td>
                <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                <td>@item.Birim</td>
                <td><button class="btn btn-default btn-sm" type="button" onclick="SelectMakara(@item.ID, @ViewBag.satir,'@item.MakaraNo', '@item.Miktar');">Seç</button></td>
            </tr>
        }
    </tbody>
</table>
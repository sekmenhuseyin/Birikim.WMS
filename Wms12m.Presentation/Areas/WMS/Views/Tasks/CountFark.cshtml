@model IEnumerable<frmSiparisMalzemeDetay>
@{ string tmp = ViewBag.Tip; if (tmp == "1") { tmp = "Fark"; } else { tmp = ""; } }
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">
                    <h1 class="page-title">Sayım Liste @tmp</h1>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-gift"></i>Sayım Liste @tmp
                                    </div>
                                    <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
                                </div>
                                <div class="portlet-body form">
                                    <div class="form-horizontal">
                                        <div class="form-body">
                                            <table class="table table-striped table-bordered" id="sample_2">
                                                <thead>
                                                    <tr>
                                                        <th>MalKodu</th>
                                                        <th>MalAdi</th>
                                                        <th class="text-right">Okutulan Miktar</th>
                                                        <th class="text-right">WMS Stok</th>
                                                        <th class="text-right">Güneş Stok</th>
                                                        <th class="text-right">Sayım Farkı</th>
                                                        <th>Birim</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@item.MalKodu</td>
                                                            <td>@item.MalAdi</td>
                                                            <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                                                            <td align="right">@String.Format("{0:n}", item.WmsStok)</td>
                                                            <td align="right">@String.Format("{0:n}", item.GunesStok)</td>
                                                            <td align="right">@String.Format("{0:n}", item.Miktar - item.WmsStok)</td>
                                                            <td>@item.Birim</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                            <div class="row">
                                                <div class="col-md-2 col-md-offset-8">
                                                    <button type="button" class="btn green pull-right" onclick="editInModal('/WMS/Tasks/CountFark/@ViewBag.ID')"><i class="fa fa-refresh"></i> Yenile</button>
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#sample_2').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $("#buttons").html("");
        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
    });
</script>

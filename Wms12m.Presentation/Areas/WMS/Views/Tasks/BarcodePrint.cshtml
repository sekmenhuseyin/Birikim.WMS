@model GorevPaketler
@{
    ViewBag.Title = "Barcode Print";
    Layout = "~/Views/Shared/_Layout.Null.cshtml";
    string tmp = Model.PaketNo.GenerateBarcode();
}
<table>
    <tr><td colspan="4" class="text-center bold"><h1>@ViewBag.Sirket</h1></td></tr>
    <tr>
        <td>Sevkiyat No</td>
        <td>@Model.SevkiyatNo</td>
        <td>Sipariş No</td>
        <td>@Model.Gorev.IR.IRS_Detay.FirstOrDefault().KynkSiparisNo</td>
    </tr>
    <tr>
        <td>İrsaliye No</td>
        <td>@Model.Gorev.IR.EvrakNo</td>
        <td>Ağırlık</td>
        <td>@Model.Agirlik</td>
    </tr>
    <tr>
        <td>İrs. Tarihi</td>
        <td>@Model.Gorev.IR.Tarih.FromOADateInt()</td>
        <td>Hacim</td>
        <td>@Model.Hacim</td>
    </tr>
    <tr class="m-t-20">
        <td valign="top">Gönderen</td>
        <td colspan="3">@ViewBag.Sirket<br />@ViewBag.Adres</td>
    </tr>
    <tr class="m-t-20">
        <td valign="top">Alıcı</td>
        <td colspan="3">@ViewBag.Alıcı</td>
    </tr>
    <tr class="m-t-20">
        <td valign="top">Sevk Adresi</td>
        <td colspan="3">@ViewBag.Alıcı</td>
    </tr>
    <tr class="m-t-20">
        <td>Paketleme</td>
        <td>@Model.ComboItem_Name.Name</td>
    </tr>
    <tr class="m-t-20">
        <td>Paket No</td>
        <td>@Model.PaketNo</td>
    </tr>
    <tr class="m-t-20">
        <td></td>
        <td colspan="3"><img src="@Url.Content(tmp)" alt="@Model.PaketNo" width="400" /></td>
    </tr>
</table>
<script>window.print();</script>
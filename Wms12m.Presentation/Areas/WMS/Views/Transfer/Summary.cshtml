@model Transfer
@{
    ViewBag.Title = "Transfer Özet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<style>
    td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
    tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
</style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Transfer Özet</span></li></ul></div>
<h1 class="page-title">Depolar Arası Transfer Özet</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Depolar Arası Transfer Özet
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group p-l-30 p-r-30" id="liste">
                            <div class="row">
                                <div class="col-lg-12 modal-body">
                                    <table class="table table-bordered table-condensed">
                                        <thead><tr><th>Şirket</th><th>Giriş Depo</th><th>Ara Depo</th><th>Çıkış Depo</th><th></th></tr></thead>
                                        <tbody><tr><td>@Model.SirketKod</td><td>@Model.Depo.DepoAd</td><td>@Model.Depo2.DepoAd</td><td>@Model.Depo1.DepoAd</td><td><a class="btn btn-danger input-circle" href="javascript:;" onclick="Delete('@Model.GorevID','','','')"> Sil </a></td></tr></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 modal-body">
                                    <table class="table table-striped table-bordered table-condensed" id="sample_2">
                                        <thead><tr><th>Mal Kodu</th><th>Miktar</th><th>Birim</th></tr></thead>
                                        <tbody>
                                            @foreach (var item in Model.Transfer_Detay)
                                            {
                                                <tr>
                                                    <td>@item.MalKodu</td>
                                                    <td>@item.Miktar</td>
                                                    <td>@item.Birim</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    var DeleteFunctionUrl = '/WMS/Transfer/Delete';
    $(document).ready(function () {
        var table = $('#sample_2').DataTable({
            ordering: false,
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
    });
</script>
}
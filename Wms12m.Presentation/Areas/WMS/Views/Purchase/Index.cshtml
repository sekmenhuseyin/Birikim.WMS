@model  frmIrsaliye
@{
    ViewBag.Title = "İrsaliye";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{<link href="~/Content/assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<style>#myTable>tbody>tr{cursor:pointer;}</style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>İrsaliye İşlemleri</span></li></ul></div>
<h1 class="page-title">İrsaliye İşlemleri</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Evrak Bilgileri
                </div>
                <div class="col-md-1 pull-right m-t-5">
                    @using (Ajax.BeginForm("Malzeme", "Uploads", null, new AjaxOptions { HttpMethod = "post" }, htmlAttributes: new { @class = "form", enctype = "multipart/form-data", id = "fileupload", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <a id="linkUpload" class="btn btn-warning showlater2">Yükle</a>
                        <input id="btnUpload" type="file" name="file" />
                        <input type="hidden" name="SID" id="SID" value="" />
                        <input type="hidden" name="DID" id="DID" value="" />
                        <input type="hidden" name="Hesap" id="Hesap" value="" />
                    }
                </div>
                <div class="col-md-1 pull-right m-t-5"><a id="btnSablon" href="~/Content/STISablon.xlsx" class="btn btn-default showlater2">Şablon İndir</a></div>
            </div>
            <div class="portlet-body form">
                @using (Ajax.BeginForm("New", "Purchase", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, OnBegin = "$('#StoreGrid').html('');", UpdateTargetId = "StoreGrid", OnFailure= "Modaldialog('Lütfen Tekrar Deneyin', 'Hata', 'Tamam', 'btn-danger');" }, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Şirket</label>
                            <div class="col-md-4">
                                @Html.DropDownList("SirketID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required" })
                                <span class="field-validation-valid" data-valmsg-for="SirketID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Depo</label>
                            <div class="col-md-4">
                                @Html.DropDownList("DepoID", null, htmlAttributes: new { @class = "form-control input-circle", required = "required", @onchange = "checkEnabled()" })
                                <span class="field-validation-valid" data-valmsg-for="DepoID" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Hesap Kodu</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.HesapKodu, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;", @maxlength = "20", @onchange = "checkEnabled()" })
                                <span class="field-validation-valid" data-valmsg-for="HesapKodu" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Unvan</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.Unvan, new { @class = "form-control input-circle", @required = "", @onclick = "ShowHide()", @readonly = "", style = "cursor:pointer;" })
                                <span class="field-validation-valid" data-valmsg-for="Unvan" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div id="hesapSelect"></div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Evrak No</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.EvrakNo, new { @class = "form-control input-circle", @required = "", @placeholder = "Evrak No", @onfocus = "$('#hesapSelect').hide()", @maxlength = "8" })
                                <span class="field-validation-valid" data-valmsg-for="EvrakNo" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                            <div class="col-md-1">
                                <a id="btnList" class="btn btn-default input-circle green" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Purchase/List/' + $('#SirketID').val() + ',' + $('#DepoID').val() + ',' + $('#HesapKodu').val())"> Liste </a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tarih</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(a => a.Tarih, new { @class = "form-control input-circle", @required = "", @onfocus = "$('#hesapSelect').hide()" })
                                <span class="field-validation-valid" data-valmsg-for="Tarih" data-valmsg-replace="true" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3">
                                <button id="submitForm" type="submit" class="btn btn-circle green">Ekle</button>
                                <button type="button" class="btn btn-circle grey-salsa btn-outline" onclick="CreateNew()">Temizle</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-files-o"></i>Malzeme Bilgileri
            </div>
            <div class="col-md-2 pull-right m-t-5 showlater">
                <a id="btnSiparis" class="btn btn-default input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/Purchase/SiparisList/' + $('#SirketID').val() + ',' + $('#DepoID').val() + ',' + $('#HesapKodu').val())"> Siparişten Getir </a>
            </div>
        </div>
    </div>
    <div id="StoreGrid" style="padding:8px;"></div>
</div>
@section Scripts{<script src="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-ui/datepicker-tr.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script>
    var DeleteFunctionUrl = '@Url.Action("Delete2", "Purchase")';
    $("#SirketID").prepend("<option value=''>Seçiniz !!!</option>");
    $("#DepoID").prepend("<option value=''>Seçiniz !!!</option>");
    CreateNew(); checkEnabled();
    $(".showlater").hide();
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $("#Tarih").datepicker();
        $('#SirketID').on('change', function () {
            checkEnabled();
            $('#hesapSelect').hide();
            $("#hesapSelect").html("");
            $("#HesapKodu").val('');
            $("#Unvan").val('');
            $.ajax({
                url: "/Purchase/GetHesapCodes/" + $('#SirketID').val(),
                type: 'POST',
                dataType: "html",
                success: function (data) { if (data != "") $("#hesapSelect").html(data); },
                error: function (data) { Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default"); }
            });
        });
    });
    function disableAll() {
        $('#hesapSelect').hide();
        $("#hesapSelect").html("");
        $("#SirketID").attr("readonly", true);
        $("#DepoID").attr("readonly", true);
        $("#EvrakNo").attr("readonly", true);
        $("#Tarih").attr("readonly", true);
   }
    function checkEnabled() {
        $("#SID").val($("#SirketID").val());
        $("#DID").val($("#DepoID").val());
        $("#Hesap").val($("#HesapKodu").val());
        if ($("#SirketID").val() == "" || $("#DepoID").val() == "" || $("#HesapKodu").val() == "" || $("#HesapKodu").val() == null)
        {
            $("#btnList").attr("disabled", true);
            $(".showlater2").attr("disabled", true);
        }
        else
        {
            $("#btnList").attr("disabled", false);
            $(".showlater2").attr("disabled", false);
        }
    }
    function ShowHide() {
        if ($('#hesapSelect').css("display") == "none")
            $('#hesapSelect').show();
        else
            $('#hesapSelect').hide();
    }
    function CreateNew() {
        $(".showlater").hide();
        $('#hesapSelect').hide();
        $("#hesapSelect").html("");
        $("#SirketID")[0].selectedIndex = 0;
        $("#DepoID")[0].selectedIndex = 0;
        $("#HesapKodu").val('');
        $("#Unvan").val('');
        $("#EvrakNo").val('');
        $("#Tarih").val('@DateTime.Now.ToShortDateString()');
        $("#StoreGrid").html('');
        $("#SirketID").attr("readonly", false);
        $("#DepoID").attr("readonly", false);
        $("#EvrakNo").attr("readonly", false);
        $("#Tarih").attr("readonly", false);
        checkEnabled();
    }
    $(function () {
        $('#linkUpload').click(function () {
            if ($("#SID").val() != "" && $("#DID").val() != "" && $("#Hesap").val() != "")
                $("#btnUpload").click();
        });
        $('#fileupload').fileupload({
            maxFileSize: 2000000,
            acceptFileTypes: /(\.|\/)(xlsx)$/i,
            dataType: 'json',
            add: function (e, data) { data.submit(); },
            done: function (e, data) {
                if (data.result.Status == false)
                    Modaldialog(data.result.Message, "Hata", "Tamam", "btn-danger");
                else
                    Modaldialog("İşlem Başarıyla gerçekleşti", "Başarı", "Tamam", "btn-success");
            },
            fail: function (e, data) { Modaldialog("Lütfen Tekrar Deneyin", "Hata", "Tamam", "btn-default"); }
        });
    });
</script>
}

@model IEnumerable<Combo_Name>
@{
    ViewBag.Title = "Combo İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h3 class="page-title">Combo İşlemleri</h3>
<div class="row">
    <div class="col-md-12">
        <div class="row" id="CreateEdit">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Combo Listesi
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div id="theGrid" style="padding:8px;">
                            @using (Html.BeginForm("Save", "Combos", "System", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <table class="table table-striped table-bordered table-hover" id="sample_1">
                                    <thead><tr><th></th><th>Ad</th><th></th></tr></thead>
                                    <tfoot><tr><th></th><th></th><th></th><th></tr></tfoot>
                                    <tfoot class="tf-search"><tr><th></th><th></th><th></th></tr></tfoot>
                                    <tbody>
                                        <tr>
                                            <td></td>
                                            <td>@Html.TextBoxFor(a => a.Where(m=>m.ID==0).FirstOrDefault().ComboName, new { @class = "form-control input-circle", @placeholder = "Ad", required = "required" })</td>
                                            <td><input type="hidden" name="ID" value="0" /><button type="submit" class="btn btn-circle green">Ekle</button></td>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@Html.DisplayFor(modelItem => item.ComboName)</td>
                                                <td class="col-lg-3">
                                                    <a href="/System/ComboItems/List/@item.ID" class="btn btn-default btn-circle">Ayrıntılar</a>
                                                    <a class="btn btn-default btn-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/System/Combos/Edit/@item.ID')"> Düzenle </a>
                                                    <a class="btn btn-danger btn-circle" href="javascript:;" onclick="Delete('@item.ID','','theGrid','', '')"> Sil </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script type="text/javascript">
    var DeleteFunctionUrl = '/System/Combos/Delete';
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "" && title != "Detay" && title != "Hareket")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        $("#sample_1 tfoot input").on('keyup change', function () { table.column($(this).parent().index() + ':visible').search(this.value).draw(); });
        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    });
</script>}
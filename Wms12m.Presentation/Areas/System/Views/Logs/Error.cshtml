@model IEnumerable<GetErrorLog_Result>
@{
    ViewBag.Title = "Kayıtlı Hatalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/System/Logs">Kayıtlar</a><i class="fa fa-circle"></i></li><li><span>Kayıtlı Hatalar</span></li></ul></div>
<h1 class="page-title">Kayıtlı Hatalar</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Kayıtlı Hatalar</div></div>
            <div class="portlet-body form p-30 p-t-15">
                <table class="table table-striped table-bordered table-hover table-responsive" id="sample_1">
                    <thead><tr><th>Description</th><th>Message</th><th>Source</th><th>DateTime</th><th>Machine</th><th>IpAddress</th><th>UserName</th><th></th></tr></thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Message)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Source)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Machine)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IpAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','','','')"> Sil </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>var DeleteFunctionUrl = '/System/Logs/Delete/Error';</script>

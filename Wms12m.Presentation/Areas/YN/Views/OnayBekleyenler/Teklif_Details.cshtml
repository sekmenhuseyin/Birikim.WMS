@model List<frmOnayTeklifListDetay>
    @{ decimal tl = 0, avro = 0, dolar = 0; }
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-body">
                        @*Project Details Go Here*@
                        <div class="row m-b-30">
                            <div class="col-lg-offset-8 col-lg-2">
                                <button class="btn btn-danger pull-right input-circle reddet-buton glyphicon glyphicon-remove"> Reddet </button>
                            </div>
                            <div class="col-lg-2">
                                <button class="btn btn-success pull-right input-circle onay-buton glyphicon glyphicon-ok"> Onayla </button>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered" id="sample_2">
                            <thead><tr><th>Teklif No</th><th>Hesap Kodu</th><th>Ünvan</th><th>Miktar</th><th>Kaydeden</th><th>Mal Kodu</th><th>Mal Adı</th><th>Fiyat</th><th>Tutar</th><th>Döviz Cinsi</th><th>Kayıt Tarihi</th></tr></thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                if (item.DovizCinsi == "TL") { tl += item.Tutar.Value; }
                                else if (item.DovizCinsi == "EUR") { avro += item.Tutar.Value; }
                                else { dolar += item.Tutar.Value; }
                                <tr class="clickable" onclick="satir_click('@item.TeklifNo')">
                                    <td>@item.TeklifNo</td>
                                    <td>@item.HesapKodu</td>
                                    <td>@item.Unvan</td>
                                    <td>@item.MalKodu</td>
                                    <td>@item.MalAdi</td>
                                    <td align="right">@String.Format("{0:n}", item.Miktar)</td>
                                    <td align="right">@String.Format("{0:n}", item.Fiyat)</td>
                                    <td align="right">@String.Format("{0:n}", item.Tutar)</td>
                                    <td>@item.DovizCinsi</td>
                                    <td>@item.Kaydeden</td>
                                    <td>@item.KayitTarihi</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row m-t-40">
                            <div class="col-lg-9 text-right">Toplam Tutar</div>
                            <div class="col-lg-1">@tl ₺</div>
                            <div class="col-lg-1">@avro €</div>
                            <div class="col-lg-1">@dolar $</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var table = $('#sample_2').DataTable({
                "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
            });
        });
        function getresult(e) {
            if (e.Status == true)
                $('#modalEditPage').modal('toggle');
            else
                Modaldialog(e.Message, 'Hata', 'Tamam', 'btn-danger');
        };
    </script>

@{
    ViewBag.Title = "Onay Bekleyen Teklifler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{
<style>
    tr {
        cursor: pointer;
    }
</style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Onay Bekleyen Teklifler</span></li></ul></div>
<h1 class="page-title">Onay Bekleyen Teklifler</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-gift"></i>Onay Bekleyen Teklifler</div>
                <div class="col-md-2 pull-right m-t-5"><button class="btn btn-default pull-right input-circle yenile-buton glyphicon glyphicon-refresh"> Yenile </button></div>
            </div>
            <div class="portlet-body form p-30 p-t-15">
                <table class="table table-striped table-bordered" id="sample_1">
                    <thead><tr><th>Teklif No</th><th>Hesap Kodu</th><th>Çeşit</th><th>Miktar</th><th>Kaydeden</th><th>Kayıt Tarihi</th><th>Teklif Tarihi</th></tr></thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script>
        $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "ordering": false,
            "ajax": {
                "url": '/YN/OnayBekleyenler/Teklif_List',
                "dataSrc": function (json) {
                    return json;
                },
            },
            "fixedHeader": true,
            "columns": [
                { "data": "TeklifNo" },
                { "data": "HesapKodu" },
                { "data": "Cesit" },
                { "data": "Miktar", "className": "text-right" },
                { "data": "Kaydeden" },
                { "data": "KayitTarihi" },
                { "data": "TeklifTarihi" }
            ]
        });
        $('#sample_1 tbody').on('dblclick', 'tr', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            editInModal2('/YN/OnayBekleyenler/Teklif_Details', { ID: row.data().TeklifNo })
            $('#modalEditPage').modal('toggle');
        });
        $('.yenile-buton').click(function () {
            table.ajax.reload();
        });
        });
    function newrow(id) {
        return "<table style='background:transparent;' id='new" + id + "'></table>";
    }
    function format(d) {
        var html = "<tr style='background: transparent;'><th>Teklif No</th><th>Hesap Kodu</th><th>Ünvan</th><th>Miktar</th><th>Kaydeden</th><th>Mal Kodu</th><th>Mal Adı</th><th>Fiyat</th><th>Tutar</th><th>Kayıt Tarihi</th></tr>";
        $.ajax({
            type: 'POST',
            url: '/YN/OnayBekleyenler/Teklif_Details',
            data: { "ID": d },
            dataType: "json",
            success: function (data) {
                for (var i in data) {
                    html += '<tr style="background:transparent;"><td>' + data[i].TeklifNo + '</td><td>' + data[i].HesapKodu + '</td><td>' + data[i].Unvan + '</td><td>' + data[i].Miktar + '</td><td>' + data[i].Kaydeden + '</td><td>' + data[i].MalKodu + '</td><td>' + data[i].MalAdi + '</td>' + data[i].Fiyat + ' ' + data[i].DovizCinsi + '</td><td>' + data[i].Tutar + '</td><td>' + data[i].KayitTarihi + '</td></tr>';
                };
                $('#new' + d).html(html);
            }
        });
    }
</script>}
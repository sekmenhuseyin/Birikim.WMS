@model List<User>
@{
    ViewBag.Title = "List";
}

<!--<div class="portlet-body form p-40">-->
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Adı Soyadı</th>
                <th>Email</th>
                <th>Rol Adı</th>
                <th>İşlemler</th>
            </tr>

        </thead>
        <tfoot class="tf-search">
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>

            @foreach (User item in Model)
            {
                <tr>
                    <td>
                        @item.Kod
                    </td>
                    <td>
                        @item.AdSoyad
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.RoleName
                    </td>
                    <td>
                        <div class="btn-group">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    İşlemler <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a class="partialView" data-href="/ToDo/User/Edit/@item.ID">Güncelle</a></li>
                                    <li><a class="partialView" data-href="/ToDo/User/Delete/@item.ID">Sil</a></li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
<!--</div>-->
<script>
    $(document).ready(function () {
        var table=$('#sample_1').DataTable({ "pagingType": "full_numbers", "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } });
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "" && title != "Detay" && title != "İşlemler") {
                $(this).html('<input type="text" placeholder="' + title + ' Ara" />');
            }
        });
        $("#sample_1 tfoot input").on('keyup change', function () {
            table
                .column($(this).parent().index() + ':visible')
                .search(this.value)
                .draw();
        });
    });
</script>





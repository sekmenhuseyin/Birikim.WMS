@model IEnumerable<GorevlerCalisma>
<div class="portlet-body form">
    <table class="table table-striped table-bordered table-hover" id="sampledetail_@ViewBag.ID">
        <thead><tr><th>Tarih</th><th>Süre</th><th>Çalışma</th><th>Kaydeden</th><th></th></tr></thead>
        <tfoot><tr><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
        <tfoot class="tf-search"><tr><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KayitTarih.ToString("dd.MM.yyyy")</td>
                    <td>@item.Sure</td>
                    <td>@item.Calisma</td>
                    <td>@item.Kaydeden</td>
                    <td><a class="btn btn-default btn-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/ToDo/DutyWork/Edit/@item.ID')">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        var table = $('#sampledetail_@ViewBag.ID').DataTable({
            "order": [[2, "desc"]],
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $('#sampledetail_@ViewBag.ID .tf-search th').each(function () {
            var title = $('#sampledetail_@ViewBag.ID thead th').eq($(this).index()).text();
            if (title != "" && title.indexOf("Tarih") !== -1)
                $(this).html('<input class="form-control input-circle tarihx" type="text" placeholder="Ara" />');
            else if (title != "" && title != "Çalışma" && title != "Sıra")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        $("#sampledetail_@ViewBag.ID tfoot input").on('keyup change', function () { table.column($(this).parent().index() + ':visible').search(this.value).draw(); });
        //tarih
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $(".tarihx").datepicker();
    });
</script>

@model IEnumerable<GorevCalisma>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Çalışma Listesi
        </div>
    </div>
    <div class="portlet-body form p-40">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead><tr><th>Tarih</th><th>Çalışma Süre</th><th>Çalışma</th><th>Sorumlu</th><th></th></tr></thead>
            <tfoot><tr><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
            <tfoot class="tf-search"><tr><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Tarih</td>
                        <td>@item.CalismaSure</td>
                        <td>@item.Calisma</td>
                        <td>@item.Gorevler.Sorumlu</td>
                        <td>
                            <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                            @if(ViewBag.Yetki == "Admin" || ViewBag.Yetki == " ") {<a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/ToDo/DutyWork/List','liste','@item.ID','/ToDo/DutyWork/Delete')"> Sil </a>}
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $("#sample_1 tfoot input").on('keyup change', function () { table.column($(this).parent().index() + ':visible').search(this.value).draw(); });
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "" && title.indexOf("Tarih") !== -1)
                $(this).html('<input class="form-control input-circle tarih" type="text" placeholder="Ara" />');
            else if (title != "" && title != "Çalışma" && title != "Sıra")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        //tarih
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $(".tarih").datepicker();
    });
</script>

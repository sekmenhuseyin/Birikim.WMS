@model IEnumerable<GorevlerCalisma>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Çalışma Listesi
        </div>
        <div class="col-md-2 pull-right m-t-5">
            <a class="btn btn-default pull-right input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/ToDo/DutyWork/NewAll')"> Yeni </a>
        </div>
    </div>
    <div class="portlet-body form p-40">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead><tr><th>Proje</th><th>Görev</th><th>Tarih</th><th>Süre</th><th>Çalışma</th><th>Kaydeden</th><th></th></tr></thead>
            <tfoot><tr><th></th><th></th><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
            <tfoot class="tf-search"><tr><th></th><th></th><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Gorevler.ProjeForm.Proje</td>
                        <td>@item.Gorevler.Gorev</td>
                        <td><div class="hidden">@item.Tarih.ToOADateInt()</div>@item.Tarih.ToShortDateString()</td>
                        <td>@item.Sure</td>
                        <td>@if (item.Calisma == "") { @item.GorevlerCalismaToDoLists.FirstOrDefault().Aciklama } else { @item.Calisma }</td>
                        <td>@item.Kaydeden</td>
                        <td>
                            <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="editInModal2('/ToDo/DutyWork/Edit', { Id: @item.ID })"> Düzenle </a>
                            @if(ViewBag.Yetki2 == true) {<a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/ToDo/DutyWork/List','liste','@item.ID','/ToDo/DutyWork/Delete')"> Sil </a>}
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "order": [[2, "desc"]],
            "pagingType": "full_numbers",
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
        });
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "" && title.indexOf("Tarih") !== -1)
                $(this).html('<input class="form-control input-circle tarih" type="text" placeholder="Ara" />');
            else if (title != "" && title != "Çalışma" && title != "Sıra")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        $("#sample_1 tfoot input").on('keyup change', function () { table.column($(this).parent().index() + ':visible').search(this.value).draw(); });
        //tarih
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $(".tarih").datepicker();
    });
</script>

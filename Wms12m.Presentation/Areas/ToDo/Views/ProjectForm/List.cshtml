@model IEnumerable<ProjeForm>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Proje Listesi
        </div>
    </div>
    <div class="portlet-body form p-40">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead>
                <tr>
                    <th>
                        Firma
                    </th>
                    <th>
                        Proje
                    </th>
                    <th>
                        Sorumlu
                    </th>
                    <th>
                        Karşı Sorumlu
                    </th>
                    <th>
                        Açıklama
                    </th>
                    <th>
                        Mesai Kontrol
                    </th>
                    <th>
                        Mesai Kota
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Musteri.Firma)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Proje)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sorumlu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KarsiSorumlu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aciklama)
                        </td>
                        <td>
                            @if (item.MesaiKontrol == true)
                            {
                                @("Var");
                            }
                            else
                            {
                                @("Yok");
                            }


                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MesaiKota)
                        </td>
                        <td>
                            <a class="btn btn-primary input-circle" href="#modalEditPage" data-toggle="modal" onclick="editInModal('/ToDo/ProjectForm/FormIndex/@item.ID')"> Form Ekle </a>
                            <a class="btn btn-success input-circle" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                            <a class="btn btn-danger input-circle" href="javascript:;" onclick="DeleteKontrol('@item.ID','/ToDo/ProjectForm/List','liste','/ToDo/ProjectForm/DeleteKontrol','@item.ID')"> Sil </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script>$(document).ready(function () { $('#sample_1').DataTable({ "pagingType": "full_numbers", "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" } }); });</script>

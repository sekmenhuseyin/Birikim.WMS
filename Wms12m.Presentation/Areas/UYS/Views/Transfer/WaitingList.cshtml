@model IEnumerable<frmUysWaitingTransfer>
<table class="table table-striped table-bordered table-condensed" id="mytable">
    <thead><tr><th>Evrak No</th><th>Oluşturan</th><th>Tarih</th><th></th></tr></thead>
    <tbody>
        <tr>
            <td>@Model.FirstOrDefault().EvrakNo</td>
            <td>@Model.FirstOrDefault().Kaydeden</td>
            <td>@Model.FirstOrDefault().Tarih.FromOADateInt()</td>
            <td class="w-200">
                <a class="btn btn-danger input-circle pull-right" href="javascript:;" onclick="Delete('@Model.FirstOrDefault().EvrakNo','','','')"> Sil </a>
                @using (Ajax.BeginForm("Approve", "Transfer", new { area = "UYS" }, new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, OnSuccess= "getresult", OnFailure= "Modaldialog('Lütfen Tekrar Deneyin', 'Hata', 'Tamam', 'btn-danger');" }, new { @class = "form pull-right" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ID" value="@Model.FirstOrDefault().EvrakNo" />
                    <input type="submit" value="Onay" class="btn btn-primary input-circle" />
                }
            </td>
        </tr>
    </tbody>
</table>
<div><p><br /><br /></p></div>
<table class="table table-striped table-bordered table-condensed" id="sample_2">
    <thead><tr><th>Mal Kodu</th><th>Mal Adı</th><th>Birim</th><th class="text-right">Miktar</th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MalKodu</td>
                <td>@item.MalAdi</td>
                <td>@item.Birim</td>
                <td class="text-right">@String.Format("{0:n}", item.Miktar)</td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var table = $('#sample_2').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
        });
    });
</script>
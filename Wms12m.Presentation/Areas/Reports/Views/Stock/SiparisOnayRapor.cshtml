@{
    ViewBag.Title = "Sipariş Onay Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section Styles{
    <style>
        td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_open.png') no-repeat center center;cursor: pointer;}
        tr.shown td.details-control {background: url('/Content/assets/global/plugins/datatables/images/details_close.png') no-repeat center center;}
        .dx-header-row {background-color: #86d8ea;color: window;}
        .dx-state-readonly {background-color: #e0dede !important;}
        .dx-state-readonly input {background-color: #e0dede !important;}
    </style>
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Onaylama</span><i class="fa fa-circle"></i></li><li><span>Sipariş</span></li></ul></div>
<h1 class="page-title">Sipariş Onay Raporu</h1>
<div class="row m-12  m-b-5">
    <div class="rdgrpOnayRed col-md-3"></div>
    <div class="col-md-1 text-left p-l-5 m-t-5 color-blue-light bold">Tarih Aralığı: </div>
    <div class="col-md-1 m-l-5 p-r-0"><input class="form-control dateboxbg" type="text" id="txtBaslangic" value="@DateTime.Today.ToString("dd.MM.yyyy")" /></div>
    <div class="col-md-1 m-l-5 p-r-0"><input class="form-control dateboxbg" type="text" id="txtBitis" value="@DateTime.Today.ToString("dd.MM.yyyy")" /></div>
    <div class="col-md-2"><button id="btnListele" class="btn btn-block green listele-buton">Listele<i class="fa fa-check"></i></button></div>
</div>
<div class="row">
    <div class="form-horizontal">
        <div class="form-body">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Sipariş Onay Raporu
                    </div>
                    <div class="col-md-1 pull-right m-t-5 p-0 " id="buttons"></div> 
                </div>
                <div class="portlet-body">
                    <div class="row p-10" id="siparis_onay_data"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script type="text/javascript">
    var basTarih = @DateTime.Today.ToOADateInt();
    var bitTarih = @DateTime.Today.ToOADateInt();
    $.datepicker.setDefaults($.datepicker.regional["tr"]);
    $("#txtBaslangic").datepicker().on("change", function (e) { basTarih = toOADateFromString(e.target.value); });
    $("#txtBitis").datepicker().on("change", function (e) { bitTarih = toOADateFromString(e.target.value); });
    var OnayDurum = "@ViewBag.OnayDurum";
    var rdrValue = OnayDurum;
    var radioGroupItems = [
        { text: "Onaylandı", value: "Onaylandı" },
        { text: "Reddedildi", value: "Reddedildi" }
    ];
    $(function () {
        $(".rdgrpOnayRed").dxRadioGroup({
            dataSource: radioGroupItems,
            displayExpr: "text",
            valueExpr: "value",
            value: OnayDurum,
            layout: "horizontal",
            onValueChanged: function (e) {
                rdrValue = e.value;
                PartialView("/Reports/Stock/SiparisOnayRaporList", 'siparis_onay_data', JSON.stringify({ Tip: rdrValue,bastarih: basTarih, bittarih: bitTarih }));
            }
        });
        $(".rdgrpOnayRed").dxRadioGroup("instance").option("value", rdrValue);
    });
    $(".dx-item.dx-radiobutton").hide();
    PartialView("/Reports/Stock/SiparisOnayRaporList", 'siparis_onay_data', JSON.stringify({ Tip: rdrValue,bastarih: basTarih, bittarih: bitTarih }));
    $('.listele-buton').click(function () {
        PartialView("/Reports/Stock/SiparisOnayRaporList", 'siparis_onay_data', JSON.stringify({ Tip: rdrValue, bastarih: basTarih, bittarih: bitTarih }));
    });
</script>}
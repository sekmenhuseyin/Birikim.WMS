@model List<RaporSatilmayanUrunler>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Satılmayan Ürünler
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>

        </div>
        <div class="portlet-body">
            <div class="row" style="margin-bottom:5px;margin-left:5px;">
                <div class="col-md-6">
                    <div id="buttons"></div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-condensed" id="sample_1">
                <thead>
                    <tr>
                        <th>Mal Kodu</th>
                        <th>Mal Adı</th>
                        <th>Birim</th>
                        <th>Stok Miktar</th>
                        <th>Kriti Stok</th>
                        <th>Son Fatura No</th>
                        <th>Son Fatura Tarih</th>
                        <th>Son Üretim Tarihi</th>
                        <th>Son Satış Miktarı</th>
                        <th>Son Satış Birimi</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th colspan="3"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th colspan="3"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td nowrap>@item.MalKodu</td>
                            <td nowrap>@item.MalAdi</td>
                            <td nowrap>@item.Birim</td>
                            <td nowrap align="right">@item.StokMiktar.ToDecimal().ToOnFormat()</td>
                            <td nowrap>@item.KritikStok</td>
                            <td nowrap>@item.SonFaturaNo</td>
                            <td nowrap>@item.SonFaturaTarihi</td>
                            <td nowrap align="right">@item.SonUretimTarihi</td>
                            <td nowrap>@item.SonSatisMiktari</td>
                            <td nowrap>@item.SonSatisMiktariBirim</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
        var StokMiktar = 0, SonSatisMiktari = 0, SonSatisMiktari = 0;
        jQuery.each(model, function (i, val) {
            StokMiktar += val.StokMiktar;
        });
       var table12 = $('#sample_1').DataTable({
           "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
           //"scrollY": 350,
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;
                $(api.column(3).footer()).html(
                    ondalikBinlik(Math.round(StokMiktar * 100) / 100, 2)
                );

            }
        });
        var buttons = new $.fn.dataTable.Buttons(table12, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
    });
</script>
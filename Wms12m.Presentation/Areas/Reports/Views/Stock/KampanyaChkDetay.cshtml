            <td align="right">@String.Format("{0:0.00}", item.WoodTeslimMiktar).ToDecimal().ToOnFormat()</td>
            <td align="right">@String.Format("{0:0.00}", item.WoodTutar).ToDecimal().ToOnFormat()</td>

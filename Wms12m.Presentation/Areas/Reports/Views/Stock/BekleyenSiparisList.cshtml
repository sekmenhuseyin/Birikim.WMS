@model List<RaporBekleyenSiparis>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Bekleyen Sipariş
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>

        </div>
      
        <div class="portlet-body">

            <div class="row">
                <table class="table table-responsive table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th nowrap>Hesap Kodu</th>
                            <th nowrap>Ünvan</th>
                            <th nowrap>Tarih</th>
                            <th nowrap>Evrak No</th>
                            <th nowrap>Bağlantı No</th>
                            <th nowrap>Grup Kodu</th>
                            <th nowrap>Mal Kodu</th>
                            <th nowrap>Mal Adı</th>
                            <th nowrap>Miktar</th>
                            <th nowrap>Birim</th>
                            <th nowrap>Ana Miktar</th>
                            <th nowrap>Ana Birim</th>
                            <th nowrap>Sevkedilen Miktar</th>
                            <th nowrap>Kalan Miktar</th>
                            <th nowrap>Kalan Birim</th>
                            <th nowrap>Kalan Ana Miktar</th>
                            <th nowrap>Kalan Ana Birim</th>
                            <th nowrap>Bağlantı Tipi</th>
                            <th nowrap>Fiyat Liste No</th>
                            <th nowrap>Liste Fiyatı</th>
                            <th nowrap>Döviz Cinsi</th>
                            <th nowrap>Sözleşme Şartları</th>
                            <th nowrap>Net Fiyat</th>
                            <th nowrap>KDVsiz Tutar</th>
                            <th nowrap>KDVli Tutar</th>
                            <th nowrap>KDVsiz KalanTutar</th>
                            <th nowrap>KDVli KalanTutar</th>
                            <th nowrap>Stok Miktar</th>
                            <th nowrap>Stok Birim</th>
                            <th nowrap>Stok Ana Miktar</th>
                            <th nowrap>Stok Ana Birim</th>
                            <th nowrap>Teslim Tarihi</th>
                            <th nowrap>Teslim Tarihi Durum</th>
                            <th nowrap>Satış Temsilcisi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th nowrap colspan="8"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap colspan="3"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap colspan="2"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap colspan="4" style="text-align:right;"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td nowrap>@item.Chk</td>
                            <td nowrap>@item.Unvan</td>
                            <td nowrap>@item.Tarih.Value.ToString("dd/MM/yyyy")</td>
                            <td nowrap>@item.EvrakNo</td>
                            <td nowrap>@item.BaglantiNo</td>
                            <td nowrap>@item.GrupKod</td>
                            <td nowrap>@item.MalKodu</td>
                            <td nowrap>@item.MalAdi</td>
                            <td nowrap align="right">@item.Miktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.Birim</td>
                            <td nowrap align="right">@item.AnaMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.AnaBirim</td>
                            <td nowrap align="right">@item.SevkedilenMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.KalanMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.KalanBirim</td>
                            <td nowrap align="right">@item.KalanAnaMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.KalanAnaBirim</td>
                            <td nowrap>@item.BaglantiTipi</td>
                            <td nowrap>@item.FiyatListeNo</td>
                            <td nowrap align="right">@item.FYTFiyat.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.FYTDovizCinsi</td>
                            <td nowrap>@item.SozlesmeSartlari</td>
                            <td nowrap align="right">@item.NetFiyat.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.KDVSizTutar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.KDVliTutar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.KDVSizKalanTutar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.KDVliKalanTutar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap align="right">@item.StokMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.StokBirim</td>
                            <td nowrap align="right">@item.StokAnaMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                            <td nowrap>@item.StokAnaBirim</td>
                            <td nowrap>@item.TeslimTarih</td>
                            <td nowrap>@item.TeslimTarihDurum</td>
                            <td nowrap>@item.SatisTemsilcisi</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
       var table12 = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "scrollY": 300,
            "ordering": false,
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // Remove the formatting to get integer data for summation
                var intVal = function (i) {
                    return Number(i.toString().replace(/\./g, "").replace(",", "."))
                };

                // Total over all pages
                miktartotal = api
                    .column(8)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                anaMiktartotal = api
                    .column(10)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                sevkedilentotal = api
                    .column(12)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                kalantotal = api
                    .column(13)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                anakalantotal = api
                    .column(15)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                kdvliTutartotal = api
                    .column(23)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                kdvsizTutartotal = api
                    .column(24)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                kdvlikalantotal = api
                    .column(25)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                kdvsizkalantotal = api
                    .column(26)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);


                // Update footer
                $(api.column(8).footer()).html(
                    ondalikBinlik(miktartotal, 2)
                );
                $(api.column(10).footer()).html(
                    ondalikBinlik(anaMiktartotal, 2)
                );
                $(api.column(12).footer()).html(
                    ondalikBinlik(sevkedilentotal, 2)
                );
                $(api.column(13).footer()).html(
                    ondalikBinlik(kalantotal, 2)
                );
                $(api.column(15).footer()).html(
                    ondalikBinlik(anakalantotal, 2)
                );
                $(api.column(23).footer()).html(
                    ondalikBinlik(kdvliTutartotal, 2)
                );
                $(api.column(24).footer()).html(
                    ondalikBinlik(kdvsizTutartotal, 2)
                );
                $(api.column(25).footer()).html(
                    ondalikBinlik(kdvlikalantotal, 2)
                );
                $(api.column(26).footer()).html(
                    ondalikBinlik(kdvsizkalantotal, 2)
                );
            }
        });
       $(document).ready(function () {
           $('.buttons-pdf').removeClass('btn btn-default');
           $('.buttons-excel').removeClass('btn btn-default');
       });
        var buttons = new $.fn.dataTable.Buttons(table12, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o" style="font-size:15px;color:red;"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o" style="font-size:15px;color:green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));

    });
</script>
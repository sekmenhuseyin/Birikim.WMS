@model List<GerceklesenSevkiyatPlani>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Gerçekleşen Sevkiyat Planı Raporu
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>

        </div>
        <div class="portlet-body">

            <div class="row" style="margin-bottom:5px;margin-left:5px;">
                <div class="col-md-6">
               

                </div>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th nowrap>Tarih</th>
                            <th nowrap>Evrak No</th>
                            <th nowrap>Hesap Kodu</th>
                            <th nowrap>Unvan</th>
                            <th nowrap>Satış Temsilcisi</th>
                            <th nowrap>Mal Kodu</th>
                            <th nowrap>Mal Adı</th>
                            <th nowrap>Birim Miktar</th>
                            <th nowrap>Birim</th>
                            <th nowrap>Stok Miktar</th>
                            <th nowrap>Stok Birim</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th nowrap colspan="7"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap style="text-align:right;"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td nowrap>@item.Tarih.Value.ToString("dd/MM/yyyy")</td>
                                <td nowrap>@item.EvrakNo</td>
                                <td nowrap>@item.Chk</td>
                                <td nowrap>@item.Unvan</td>
                                <td nowrap>@item.SatisTemsilcisi</td>
                                <td nowrap>@item.Malkodu</td>
                                <td nowrap>@item.MalAdi</td>
                                <td nowrap align="right">@item.Birimmiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                                <td nowrap>@item.Birim</td>
                                <td nowrap align="right">@item.StokMiktar.ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                                <td nowrap>@item.StokBirim</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "footerCallback": function (row, data, start, end, display) {

                var api = this.api(), data;
                var intVal = function (i) {
                    return Number(i.toString().replace(/\./g, "").replace(",", "."))
                };
                alacaktotal = api
                    .column(7)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                borctotal = api
                    .column(9)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);
                $(api.column(7).footer()).html(
                    ondalikBinlik(Math.round(alacaktotal * 100) / 100 ,2)
                );
                $(api.column(9).footer()).html(
                    ondalikBinlik(Math.round(borctotal * 100) / 100 , 2)
                );
            }
        });
        $(document).ready(function () {
            $('.buttons-pdf').removeClass('btn btn-default');
            $('.buttons-excel').removeClass('btn btn-default');
        });
        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o" style="font-size:15px;color:red;"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o" style="font-size:15px;color:green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
    });
</script>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Ürün Grubu Bazında Satış
            </div>
        

        </div>

        <div class="portlet-body">
        
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-striped table-bordered table-condensed" id="sample_1">
                        <thead>
                            <tr>
                                <th>Grup</th>
                                <th>Tip Kod</th>
                                <th>Kalınlık</th>
                                <th>İç Piyasa</th>
                                <th>Dış Piyasa</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th colspan="3"></th>
                                <th class="text-right"></th>
                                <th class="text-right"></th>
                                <th class="text-right"></th>
                               
                            </tr>
                        </tfoot>
                        <tfoot class="tf-search">
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                      
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        @*var model =  @Html.Raw(serializer.Serialize(Model));*@
        $('#sample_1 .tf-search th').each(function () {
            var title = $('#sample_1 thead th').eq($(this).index()).text();
            if (title != "") {
                $(this).html('<input type="text" placeholder="' + title + ' Ara" />');
            }
        });
        
        var tableberk = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "ajax": {
                "url": '/Reports/Satis/UGBSList',
                "data": { bastarih: basTarih, bittarih: bitTarih },
                "dataSrc": function (json) {
                    return json;
                },
            },
            "dom": 'lBfrtip',
            //"scrollY": true,
            "buttons": [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
            ],
            "columnDefs": [{ "type": "num-fmt", "className": "dt-right", "targets": [3, 4, 5] }],
            "columns": [
                { "data": "Grup" },
                { "data": "Aciklama" },
                { "data": "Kalinlik" },
                { "data": "İçPiyasa", "render": $.fn.dataTable.render.number('.', ',', 2, '') },
                { "data": "DışPiyasa", "render": $.fn.dataTable.render.number('.', ',', 2, '') },
                { "data": "Toplam", "render": $.fn.dataTable.render.number('.', ',', 2, '') }
               
                
            ],
            "ordering": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $('td', nRow).attr('nowrap', 'nowrap');
                return nRow;
            },
            "footerCallback": function (row, data, start, end, display) {
                var İçPiyasa = 0, DışPiyasa = 0, Toplam = 0;
                tableberk.rows({ search: 'applied' }).data().each(function (val, index) {
                    İçPiyasa += val.İçPiyasa;
                    DışPiyasa += val.DışPiyasa;
                    Toplam += val.Toplam;
                });
                var api = this.api(), data;
                $(api.column(3).footer()).html(
                    ondalikBinlik(Math.round(İçPiyasa * 100) / 100, 2)
                );
                $(api.column(4).footer()).html(
                    ondalikBinlik(Math.round(DışPiyasa * 100) / 100, 2)
                );
                $(api.column(5).footer()).html(
                    ondalikBinlik(Math.round(Toplam * 100) / 100, 2)
                );
               
            }
        });
        $("#sample_1 tfoot input").on('keyup change', function () {
            tableberk
                .column($(this).parent().index() + ':visible')
                .search(this.value)
                .draw();
        });
        $('#sample_1 .tf-search tr').insertAfter($('#sample_1 thead tr'))
         //var buttons = new $.fn.dataTable.Buttons(tableberk, {
         //    buttons: [
         //        { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn-xs;' },
         //        { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn-xs;' }
         //    ]
         //}).container().appendTo($('#buttons'));
    });
</script>
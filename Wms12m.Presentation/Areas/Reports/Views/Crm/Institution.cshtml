@model IEnumerable<CRM_KurumKarti_Result>
@{
    ViewBag.Title = "Kurum Kartları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/">CRM</a><i class="fa fa-circle"></i></li><li><span>Kurum Kartları</span></li></ul></div>
<h1 class="page-title">Kurum Kartları</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Kurum Kartları</div></div>
            <div class="portlet-body form p-30 p-t-15">
                <input class="input-circle form-control" id="txtSearch" placeholder="Kurum Ara" />
                <div id="grid" class="m-t-20"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    $(document).ready(function () {
        $("#txtSearch").autocomplete({
            source: "/Reports/Crm/GetKurumbyName",
            minLength: 2,
            select: function (event, ui) {
                PartialView("/Reports/Crm/InstitutionDetail", 'grid', JSON.stringify({ term: ui.item.id }));
            }
        });
    });
</script>}
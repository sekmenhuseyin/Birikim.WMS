@model IEnumerable<CRM_GorusmeNotlari_Result>
@{
    ViewBag.Title = "Görüşme Notları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="/">CRM</a><i class="fa fa-circle"></i></li><li><span>Görüşme Notları</span></li></ul></div>
<h1 class="page-title">Görüşme Notları</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Görüşme Notları</div></div>
            <div class="portlet-body form p-30 p-t-15">
                <table class="table table-striped table-bordered table-hover table-responsive" id="sample_1">
                    <thead>
                        <tr>
                            <th>Görüşen Kişi</th>
                            <th>Görüşülen Kurum<br /><input class="w-50 input-circle" type="text" id="Kurum" /></th>
                            <th>Görüşülen Kişi<br /><input class="w-50 input-circle" type="text" id="Kisi" /></th>
                            <th>Görüşme Tarihi<br /><input class="w-50 input-circle" type="text" id="Tarih" /></th>
                            <th>Yeniden Görüşme Tarihi<br /><input class="w-50 input-circle" type="text" id="Tarih2" /></th>
                            <th>Görüşme Biçimi</th>
                            <th>Görüşme Nedeni</th>
                            <th>Görüşme Notu Durumu</th>
                            <th>Kaydeden</th>
                            <th>Kayıt Tarihi<br /><input class="w-50 input-circle" type="text" id="Tarih3" /></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.GorusenKisi</td>
                                <td>@item.GorusulenKurum</td>
                                <td>@item.GorusulenKisi</td>
                                <td>@item.GorusmeTarihi</td>
                                <td>@item.YenidenGorusmeTarihi</td>
                                <td>@item.GorusmeBicimi</td>
                                <td>@item.GorusmeNedeni</td>
                                <td>@item.GorusmeNotuDurumu</td>
                                <td>@item.Kaydeden</td>
                                <td>@item.KayitTarih</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    $(document).ready(function () {
        var table = $('#sample_1').DataTable({
            "ordering": false,
            "pagingType": "full_numbers",
            "dom": 'Bfrtip',
            "buttons": [
                { "extend": 'pdf', "text": '<span class="glyphicon glyphicon-file">PDF</span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="glyphicon glyphicon-pencil">XLS</span>', "className": 'btn btn-default btn-xs' }
            ],
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            initComplete: function () {
                this.api().columns([0, 5, 6, 7, 8]).every(function () {
                    var column = this;
                    var select = $('<br /><select class="form-control input-circle" style="max-width:100px;"><option value=""></option></select>')
                        .appendTo($(column.header()))
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex($(this).val());
                            column.search(val ? '^' + val + '$' : '', true, false).draw();
                        });
                    column.data().unique().sort().each(function (d, j) { select.append('<option value="' + d + '">' + d + '</option>') });
                });
            }
        });
        $.datepicker.setDefaults($.datepicker.regional["tr"]);
        $("#Kurum").on("change paste keyup", function () { filter(table, 1, $("#Kurum").val()); });
        $("#Kisi").on("change paste keyup", function () { filter(table, 2, $("#Kisi").val()); });
        $("#Tarih").datepicker().on("change", function (e) { filter(table, 3, e.target.value); });
        $("#Tarih2").datepicker().on("change", function (e) { filter(table, 4, e.target.value); });
        $("#Tarih3").datepicker().on("change", function (e) { filter(table, 9, e.target.value); });
    });
</script>}

@model List<ToplamRiskAnaliziRaporu>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}

<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Gerçekleşen Sevkiyat Planı Raporu
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>

        </div>

        <div class="portlet-body">

            <div class="row" style="margin-bottom:5px;margin-left:5px;">
                <div class="col-md-6">

                    <div id="buttons"></div>

                </div>
            </div>

            <div class="row">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th>Hesap Kodu</th>
                            <th>Unvan</th>
                            <th>Bakiye</th>
                            <th>Bekleyen Sipariş Tutarı</th>
                            <th>Sahsi Çek Riski</th>
                            <th>Toplam Şahsi Risk</th>
                            <th>Şahsi Çek Limiti</th>
                            <th>Müşteri Çek Riski</th>
                            <th>Toplam Risk</th>
                            <th>Toplam Çek Riski</th>
                            <th>Teminat</th>
                            <th>Satış Temsilcisi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th colspan="2"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td nowrap>@item.HesapKodu</td>
                                <td nowrap>@item.Unvan</td>
                                <td nowrap align="right">@item.Bakiye.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.BekleyenSiparisTutari.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.SahsiCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamSahsiRisk.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.SahsiCekLimiti.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.MusteriCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamRisk.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.ToplamCekRiski.ToDecimal().ToOnFormat()</td>
                                <td nowrap align="right">@item.Teminat.ToDecimal().ToOnFormat()</td>
                                <td nowrap>@item.SatisTemsilcisi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
        var Bakiye = 0, BekleyenSiparisTutari = 0, SahsiCekRiski = 0, ToplamSahsiRisk = 0, SahsiCekLimiti = 0, MusteriCekRiski = 0, ToplamRisk = 0,  ToplamCekRiski = 0, Teminat = 0;
        jQuery.each(model, function (i, val) {
            Bakiye += val.Bakiye;
            BekleyenSiparisTutari += val.BekleyenSiparisTutari;
            SahsiCekRiski += val.SahsiCekRiski;
            ToplamSahsiRisk += val.ToplamSahsiRisk;
            SahsiCekLimiti += val.SahsiCekLimiti;
            MusteriCekRiski += val.MusteriCekRiski;
            ToplamRisk += val.ToplamRisk;
            ToplamCekRiski += val.ToplamCekRiski;
            Teminat += val.Teminat;
        
        });
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "footerCallback": function (row, data, start, end, display) {

                var api = this.api(), data;

                $(api.column(2).footer()).html(
                    ondalikBinlik(Math.round(Bakiye * 100) / 100 ,2)
                );
                $(api.column(3).footer()).html(
                    ondalikBinlik(Math.round(BekleyenSiparisTutari * 100) / 100 , 2)
                );
                $(api.column(4).footer()).html(
                    ondalikBinlik(Math.round(SahsiCekRiski * 100) / 100, 2)
                );
                $(api.column(5).footer()).html(
                    ondalikBinlik(Math.round(ToplamSahsiRisk * 100) / 100, 2)
                );
                $(api.column(6).footer()).html(
                    ondalikBinlik(Math.round(SahsiCekLimiti * 100) / 100, 2)
                );
                $(api.column(7).footer()).html(
                    ondalikBinlik(Math.round(MusteriCekRiski * 100) / 100, 2)
                );
                $(api.column(8).footer()).html(
                    ondalikBinlik(Math.round(ToplamRisk * 100) / 100, 2)
                );
                $(api.column(9).footer()).html(
                    ondalikBinlik(Math.round(ToplamCekRiski * 100) / 100, 2)
                );
                $(api.column(10).footer()).html(
                    ondalikBinlik(Math.round(Teminat * 100) / 100, 2)
                );
            }
        });

        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
        $('.buttons-pdf').removeClass('btn btn-default');
        $('.buttons-excel').removeClass('btn btn-default');
    });
</script>



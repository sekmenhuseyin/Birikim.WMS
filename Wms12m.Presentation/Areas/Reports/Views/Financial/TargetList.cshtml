@model List<HDF>
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Hedef Rapor Listesi
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-condensed" id="sample_1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Bolge</th>
                        <th>Temsilci</th>
                        <th>UrunGrup</th>
                        <th>Hedef</th>
                        <th>Tarih</th>
                        <th>Duzenle/Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td nowrap>@item.ID</td>
                            <td nowrap>@item.BOLGE</td>
                            <td nowrap>@item.TEMSILCI</td>
                            <td nowrap>@item.URUNGRUP</td>
                            <td nowrap>@item.HEDEF</td>
                            <td nowrap>@item.TARIH.IntToDate().Date.ToString("dd-MM-yyyy")</td>
                            <td nowrap>
                                <a class="btn btn-default" href="javascript:;" onclick="TmzGunc('@item.ID')">Düzenle</a>
                                <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Reports/Financial/TargetList','liste','')">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot><tr><th colspan="7"></th></tr></tfoot>
                <tfoot class="tf-search">
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        table = $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "pagingType": "full_numbers",
            "ordering": false
        });
        $("#buttons").html("");
        var buttons = new $.fn.dataTable.Buttons(table, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
    });
</script>
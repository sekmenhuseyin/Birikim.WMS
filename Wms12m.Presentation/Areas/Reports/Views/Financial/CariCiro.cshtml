@model IEnumerable<CariCiroRaporuResult>
@{
    ViewBag.Title = "Cari Ciro Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><span>Raporlar</span><i class="fa fa-circle"></i></li><li><span>Cari Ciro Raporu</span></li></ul></div>
<h1 class="page-title">Cari Ciro Raporu</h1>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title"><div class="caption"><i class="fa fa-gift"></i>Cari Ciro Raporu</div></div>
            <div class="portlet-body form p-30 p-t-15">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th>Hesap Kodu<br /><input class="input-circle form-control" type="text" id="HesapKodu" /></th>
                            <th>Ünvan<br /><input class="input-circle form-control"" type="text" id="Unvan" /></th>
                            <th>Toplam Bakiye</th>
                            <th>Toplam Bakiye Önceki Yıl</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HesapKodu</td>
                                <td>@item.Unvan</td>
                                <td align="right">@String.Format("{0:0.00}", item.ToplamBakiye).ToDecimal().ToOnFormat()</td>
                                <td align="right">@String.Format("{0:0.00}", item.ToplamBakiyeOD).ToDecimal().ToOnFormat()</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th class="text-right"></th>
                            <th class="text-right"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{<script>
    $(document).ready(function () {
       
        var model =  @Html.Raw(serializer.Serialize(Model));

         $("#HesapKodu").on("change paste keyup", function () { filterx(0, $("#HesapKodu").val()); });
        $("#Unvan").on("change paste keyup", function () { filterx(1, $("#Unvan").val()); });
        var table = $('#sample_1').DataTable({
            "ordering": false,
            "pagingType": "full_numbers",
            "dom": 'lBfrtip',
            "buttons": [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
            ],
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "footerCallback": function (row, data, start, end, display) {
                var hsp = 0, bakiye1 = 0, bakiye2 = 0;
                table.rows({ search: 'applied' }).data().each(function (val, index) {
                    hsp++;
                    bakiye1 += jDecimal(val[2]);
                    bakiye2 += jDecimal(val[3]);
                });
                var api = this.api(), data;                
                $(api.column(0).footer()).html(hsp);
                $(api.column(2).footer()).html(ondalikBinlik(bakiye1, 2));
                $(api.column(3).footer()).html(ondalikBinlik(bakiye2, 2));
            }
        });
        function filterx(a, b) { filter(table, a, b); }
    });
</script>}

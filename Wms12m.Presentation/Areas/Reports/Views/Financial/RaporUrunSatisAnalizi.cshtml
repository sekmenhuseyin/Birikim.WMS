@model List<RaporGrupKod>
@{
    ViewBag.Title = "RaporUrunSatisAnalizi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="~/Content/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css" rel="stylesheet" />
}
<div class="page-bar"><ul class="page-breadcrumb"><li><a href="/">Anasayfa</a><i class="fa fa-circle"></i></li><li><a href="javascript:;">Ürün Satış Analizi</a><i class="fa fa-circle"></i></li><li><span>Ürün Satış Analizi</span></li></ul></div>
<h1 class="page-title">Ürün Satış Analizi</h1>
<div class="row">
    <div class="row" id="CreateEdit">
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">Yıl</label>
                                <div class="col-md-4">
                                    <div id="yil-select" class="yil-select" style="float:left;width:90%;"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="width:100%;">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Ürün Satış Analizi
                </div>
                <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Gruplar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (RaporGrupKod item in Model)
                        {
                            <tr>
                                <td nowrap>
                                    @if (!String.IsNullOrEmpty(item.GrupKod))
                                    {
                                        <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="Git('@item.GrupKod','0')">Temsilci Analizi</a>
                                        <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="Git('@item.GrupKod','1')">
                                            Bölge Analizi
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-default" href="javascript:;" onclick="">Temsilci Analizi</a>
                                        <a class="btn btn-default" href="javascript:;" onclick="">Bölge Analizi</a>
                                    }
                                </td>
                                <td nowrap>@item.GrupKod</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot><tr><th colspan="2"></th></tr></tfoot>
                    <tfoot class="tf-search">
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Content/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var Yil;
            var yillar = Array();
            for (var i = 2016; i <= @DateTime.Now.Year; i++) {
                yillar.push(i.toString());
            }
        });
        function Git(GrupKod, Tip) {
            if (Tip == "0") {
                editInModal2('/Reports/Financial/UrunSatisTemsilciAnalizList', { GrupKod: GrupKod, Yil: Yil.toString() });
            }
            else {
                editInModal2('/Reports/Financial/UrunSatisBolgeAnalizList', { GrupKod: GrupKod, Yil: Yil.toString() });
            }
        }
        $("#yil-select").dxSelectBox({
            dataSource: yillar,
            valueExpr: 'yil',
            displayExpr: 'yil',
            searchEnabled: true,
            onValueChanged: function (e) {
                Yil = e.value;
            }
        });
    </script>
}
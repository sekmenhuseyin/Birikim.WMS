@model List<CTargetRaporTemsilci>
@{
    ViewBag.Title = "Target Bölge List";
}
<div class="modal-content">
    <div class="close-modal" data-dismiss="modal"><div class="lr"><div class="rl"></div></div></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-body">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>Rapor Listesi
                            </div>
                            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons1a"></div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-condensed" id="sample_1a">
                                <thead>
                                    <tr>
                                        <th>Temsilci</th>
                                        <th>Bölge</th>
                                        <th>Hedef</th>
                                        <th>Hedef Oran</th>
                                        <th>Toplam Iade</th>
                                        <th>Net Satış Tutarı</th>
                                        <th>Net Ciro</th>
                                        <th>Cira Oran</th>
                                        <th>Cari Borç</th>
                                        <th>PRT</th>
                                        <th>Bekleyen Sipariş</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td nowrap>@item.Temsilci</td>
                                            <td nowrap>@item.GrupKod</td>
                                            <td nowrap>@Math.Round(item.Hedef, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.HedefOran, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.ToplamIade, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.NetSatisTutari, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.NetCiro, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.CiroOran, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.CariBorc, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.PRT, 2).ToBinlikAyrac()</td>
                                            <td nowrap>@Math.Round(item.BekleyenSiparis, 2).ToBinlikAyrac()</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot><tr><th colspan="11"></th></tr></tfoot>
                                <tfoot class="tf-search">
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        table1a = $('#sample_1a').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "pagingType": "full_numbers",
            "ordering": false,
            "columnDefs": [{ "type": "num-fmt", "className": "dt-right", "targets": [2, 3, 4, 5, 6, 7, 8, 9, 10] }, { "className": "dt-center", "targets": "_all" }]
        });

        $("#buttons1a").html("");
        var buttons = new $.fn.dataTable.Buttons(table1a, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn-xs;' }
            ]
        }).container().appendTo($('#buttons1a'));
        $('#sample_1a .tf-search th').each(function () {
            var title = $('#sample_1a thead th').eq($(this).index()).text();
            if (title != "" && title.indexOf("Tarih") !== -1)
                $(this).html('<input class="form-control input-circle tarih" type="text" placeholder="Ara" />');
            else if (title != "" && title != "Detay" && title != "Hareket")
                $(this).html('<input class="form-control input-circle" type="text" placeholder="Ara" />');
        });
        $("#sample_1a tfoot input").on('keyup change', function () { table1a.column($(this).parent().index() + ':visible').search(this.value).draw(); });
        $('#sample_1a .tf-search tr').insertAfter($('#sample_1a thead tr'))
    });
</script>
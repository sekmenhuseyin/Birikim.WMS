@model List<RaporCekListesi>
@{
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    serializer.MaxJsonLength = Int32.MaxValue;
}
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Çek Listesi Raporu
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>

        </div>

        <div class="portlet-body">
            <div class="row">
                <div class="row" style="margin-bottom:5px;margin-left:5px;">
                    <div class="col-md-6">

                        <div id="buttons"></div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-condensed" id="sample_1">
                    <thead>
                        <tr>
                            <th nowrap>Evrak No</th>
                            <th nowrap>Tarih</th>
                            <th nowrap>Hesap Kodu</th>
                            <th nowrap>Ünvan</th>
                            <th nowrap>Borçlu Ünvan</th>
                            <th nowrap>Tutar</th>
                            <th nowrap>Vade Tarihi</th>
                            <th nowrap>Kayıt Tarihi</th>
                            <th nowrap>Pozisyon</th>
                            <th nowrap>Son Pozisyon</th>
                            <th nowrap>Verildiği Yer</th>
                            <th nowrap>Verildiği Yer Ünvan</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th nowrap colspan="5"></th>
                            <th nowrap style="text-align:right;"></th>
                            <th nowrap colspan="6"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td nowrap>@item.EvrakNo</td>
                                <td nowrap>@item.Tarih.Value.ToString("dd/MM/yyyy")</td>
                                <td nowrap>@item.Chk</td>
                                <td nowrap>@item.Unvan1</td>
                                <td nowrap>@item.BorcluUnvan1</td>
                                <td nowrap align="right">@String.Format("{0:0.00}", item.Tutar).ToDecimal().ToOnFormat()<div class="hidden">.</div></td>
                                <td nowrap>@item.VadeTarih.Value.ToString("dd/MM/yyyy")</td>
                                <td nowrap>@item.KayitTarih.Value.ToString("dd/MM/yyyy")</td>
                                <td nowrap>@item.Pozisyon</td>
                                <td nowrap>@item.SonPozisyon</td>
                                <td nowrap>@item.VerildigiYer</td>
                                <td nowrap>@item.VerildigiYerUnvan</td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var model =  @Html.Raw(serializer.Serialize(Model));
       var table123= $('#sample_1').DataTable({
            "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // Remove the formatting to get integer data for summation
                var intVal = function (i) {
                    return Number(i.toString().replace(/\./g, "").replace(",", "."))
                };

                // Total over all pages
                miktartotal = api
                    .column(5)
                    .data()
                    .reduce(function (a, b) {
                        return a + intVal(b);
                    }, 0);

                // Update footer
                $(api.column(5).footer()).html(
                    ondalikBinlik(miktartotal, 2)
                );
            }
        });
        var model =  @Html.Raw(serializer.Serialize(Model));
        var buttons = new $.fn.dataTable.Buttons(table123, {
            buttons: [
                { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o" style="font-size:15px;color:red;"></span>', "className": 'btn btn-default btn-xs;' },
                { "extend": 'excel', "text": '<span class="fa fa-file-excel-o" style="font-size:15px;color:green"></span>', "className": 'btn btn-default btn-xs;' }
            ]
        }).container().appendTo($('#buttons'));
    });
    $(document).ready(function () {
        $('.buttons-pdf').removeClass('btn btn-default');
        $('.buttons-excel').removeClass('btn btn-default');
    });

</script>
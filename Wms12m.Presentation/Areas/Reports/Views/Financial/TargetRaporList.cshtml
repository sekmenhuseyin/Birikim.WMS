@model List<CTargetRapor>
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Rapor Listesi
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-condensed" id="sample_1">
                <thead>
                    <tr>
                        <th></th>
                        <th>Bölge</th>
                        <th>Hedef</th>
                        <th>Hedef Oran</th>
                        <th>Toplam Iade</th>
                        <th>Toplam NetCiro</th>
                        <th>Cira Oran</th>
                        <th>Cari Borç</th>
                        <th>PRT</th>
                        <th>Bekleyen Sipariş</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td nowrap>
                                <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="editInModal2('/Reports/Financial/TargetRaporBolgeList', { GrupKod: '@item.Grupkod', Ay: '@ViewBag.Ay', Yil: '@ViewBag.Yil' })"> Temsilciler </a>
                                <a class="btn btn-default" href="javascript:;" onclick="">MB Hedef</a>
                                <a class="btn btn-default" href="javascript:;" onclick="">PRT</a>
                            </td>
                            <td nowrap>@item.Grupkod</td>
                            <td nowrap>@Math.Round(item.Hedef, 2)</td>
                            <td nowrap>@Math.Round(item.HedefOran, 2)</td>
                            <td nowrap>@Math.Round(item.ToplamIade, 2)</td>
                            <td nowrap>@Math.Round(item.NetCiro, 2)</td>
                            <td nowrap>@Math.Round(item.CiroOran, 2)</td>
                            <td nowrap>@Math.Round(item.CariBorc, 2)</td>
                            <td nowrap>@Math.Round(item.PRT, 2)</td>
                            <td nowrap>@Math.Round(item.BekleyenSiparis, 2)</td>
                        </tr>
                    }
                </tbody>
                <tfoot><tr><th colspan="10"></th></tr></tfoot>
                <tfoot class="tf-search">
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            table = $('#sample_1').DataTable({
                "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" },
                "pagingType": "full_numbers",
                "ordering": false
            });
            $("#buttons").html("");
            var buttons = new $.fn.dataTable.Buttons(table, {
                buttons: [
                    { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn-xs;' },
                    { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn-xs;' }
                ]
            }).container().appendTo($('#buttons'));
        });
    </script>
}

@model List<CTargetRapor>
<div class="col-md-12" style="width:100%;">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Rapor Listesi
            </div>
            <div class="col-md-1 pull-right m-t-5 p-0" id="buttons"></div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-condensed" id="sample_1">
                <thead>
                    <tr>
                        <th></th>
                        <th>Bölge</th>
                        <th>Hedef</th>
                        <th>Hedef Oran</th>
                        <th>Toplam Iade</th>
                        <th>Toplam NetCiro</th>
                        <th>Cira Oran</th>
                        <th>Cari Borç</th>
                        <th>PRT</th>
                        <th>Bekleyen Sipariş</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td nowrap>
                                @if (item.Hedef > 0)
                                {
                                    <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="editInModal2('/Reports/Financial/TargetRaporBolgeList', { GrupKod: '@item.Grupkod', Ay: '@ViewBag.Ay', Yil: '@ViewBag.Yil' })">Temsilciler</a>
                                    <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="editInModal2('/Reports/Financial/TargetRaporUrunGrupList', { GrupKod: '@item.Grupkod', Ay: '@ViewBag.Ay', Yil: '@ViewBag.Yil' })">MB Hedef</a>
                                    <a class="btn btn-default" href="#modalEditPage" data-toggle="modal" onclick="editInModal2('/Reports/Financial/TargetRaporPRTList', { GrupKod: '@item.Grupkod', Ay: '@ViewBag.Ay', Yil: '@ViewBag.Yil' })">PRT</a>
                                }
                                else
                                {
                                    <a class="btn btn-default" href="javascript:;" onclick="">Temsilciler</a>
                                    <a class="btn btn-default" href="javascript:;" onclick="">MB Hedef</a>
                                    <a class="btn btn-default" href="javascript:;" onclick="">PRT</a>
                                }
                            </td>
                            <td nowrap>@item.Grupkod</td>
                            <td nowrap>@Math.Round(item.Hedef, 2).ToBinlikAyrac()</td>
                            @if (item.HedefOran >= 100)
                            {
                                <td nowrap style="background-color:#66cc33">@Math.Round(item.HedefOran, 2).ToBinlikAyrac()</td>
                            }
                            else if (item.HedefOran >= 80 && item.HedefOran < 100)
                            {
                                <td nowrap style="background-color:#666633">@Math.Round(item.HedefOran, 2).ToBinlikAyrac()</td>
                            }
                            else
                            {
                                <td nowrap style="background-color:#990033">@Math.Round(item.HedefOran, 2).ToBinlikAyrac()</td>
                            }
                            <td nowrap>@Math.Round(item.ToplamIade, 2).ToBinlikAyrac()</td>
                            <td nowrap>@Math.Round(item.NetCiro, 2).ToBinlikAyrac()</td>
                            <td nowrap>@Math.Round(item.CiroOran, 2).ToBinlikAyrac()</td>
                            <td nowrap>@Math.Round(item.CariBorc, 2).ToBinlikAyrac()</td>
                            <td nowrap>@Math.Round(item.PRT, 2).ToBinlikAyrac()</td>
                            <td nowrap>@Math.Round(item.BekleyenSiparis, 2).ToBinlikAyrac()</td>
                        </tr>
                    }
                </tbody>
                <tfoot><tr><th colspan="10"></th></tr></tfoot>
                <tfoot class="tf-search">
                    <tr>
                        <th></th>

@model List<Raf>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead><tr><th>Koridor</th><th>Raf</th><th>Sıra No</th><th>Durum</th><th></th></tr></thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Koridor.KoridorAd != "R" && item.RafAd != "Z")
                {
                    <tr>
                        <td>@item.Koridor.KoridorAd</td>
                        <td>@item.RafAd</td>
                        <td>@item.SiraNo </td>
                        <td>@(item.Aktif ? "Aktif" : "Pasif")</td>
                        <td>
                            <a class="btn btn-default" href="javascript:;" onclick="CreateEdit('@item.ID')"> Düzenle </a>
                            <a class="btn btn-danger" href="javascript:;" onclick="Delete('@item.ID','/Constants/Shelf/ShelfGridPartial','ShelfGrid','@item.KoridorID')"> Sil </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else{<div>Kayıt Bulunamadı</div>}
<script>$(document).ready(function () {
    $('#sample_1').DataTable({
        "pagingType": "full_numbers",
        "dom": 'lBfrtip',
        "buttons": [
            { "extend": 'pdf', "text": '<span class="fa fa-file-pdf-o f-s-15 red"></span>', "className": 'btn btn-default btn-xs' },
            { "extend": 'excel', "text": '<span class="fa fa-file-excel-o f-s-15 green"></span>', "className": 'btn btn-default btn-xs' }
        ],
        "language": { "url": "http://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json" }
    });
});</script>